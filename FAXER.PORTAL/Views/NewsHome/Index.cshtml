                    <h1 class="page-new">News</h1>
                    <div class="row">
                        <!--  -->
                        @{ int i = 0;}
                        @foreach (var item in Model)
                        {

                            i++;
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="post-block mb30">

                                    <div class="bg-white pinside30 outline  ">
                                        <h4><a href="@Url.Action("NewsDetails", new { @id=item.Id})" class="title">@item.Headline  </a></h4>
                                        <div class="post-img">
                                            
                                            @if (item.ImageUrl != null && item.ImageUrl != "")
                                            {
                                                url = item.ImageUrl;

                                                <a href="@Url.Action("NewsDetails", new { @id=item.Id})" class=" "><img src="@url" alt=" "></a>
                                            }
                                            
                                        </div>

                                        <p>@Html.Raw(@item.FullBody) </p>
                                        <a href="@Url.Action("NewsDetails", new { @id=item.Id})" class="btn-link">Read More</a>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                            if (i == 3)
                            {
                                <div class="clearfix"></div>
                                i = 0;
                            }

                        }

