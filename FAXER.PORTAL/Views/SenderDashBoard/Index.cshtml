@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            var Count = $("#CardCount").val();
            if (Count != "") {
                var TONum = parseInt(Count);
                if (TONum <= 0) {
                    $("#NoMFTCCardFound").modal("show");
                }
                else {
                    $("#NoMFTCCardFound").modal("hide");
                }
            }
            var CreditCardCount = '@TempData["CreditDebitCardCount"]';
            if (CreditCardCount != "" || CreditCardCount != null) {

                var CreditCardCountToNum = parseInt(CreditCardCount);
                if (CreditCardCountToNum == 0) {
                    $("#credit_debit_card_validation").modal("show");

                } else {
                    $("#credit_debit_card_validation").modal("hide");
                }
            }
        });


        // get Access Code for card user

        function getAccessCode(){

            var CardId = $("#MFTCCardId").val();

            $.getJSON("/DashBoard/GetWithdrawalCode?CardId=" + CardId, function (result) {


                $("#AccessCode").text("The Access Code is " + result.AccessCode);
            })


        }

    </script>
}