<div class="modal" id="NoMFTCCardFound" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">MoneyFex </h4>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4">
                        <div class="icon_al">
                            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-8">
                        <p>
                            You do not have a MoneyFex Virtual Account registered, do you want to register a Account now?
                        </p>
                        <div class="clearfix"></div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">

                <a href="@Url.Action("UserContactDetails","TopUpRegestration")" class="btn btn-primary btn-sm">Register a Account</a>
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="credit_debit_card_validation" role="dialog">
    <div class="modal-dialog modal-md">
