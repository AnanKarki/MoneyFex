                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="dynamic_footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <button value="Next" class="fbtn btn-next" type="submit">Finish Account Setup <i class="fa fa-chevron-right" aria-hidden="true"></i></button>

                        <br />

                    </div>
                </div>
            </div>
        </div>
}


