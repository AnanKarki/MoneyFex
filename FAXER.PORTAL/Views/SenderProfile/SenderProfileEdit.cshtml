                        <form>
                            <div class="col-lg-8 col-lg-offset-2  ">


                                <div class="form-group">
                                    <label> Date of Birth </label>
                                    @*@Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control", placeholder = "" })*@
                                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", type = "date" } })

                                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> Address Line 1</label>
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> Address Line 2</label>
                                    @Html.TextBoxFor(model => model.AddressLine2, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.AddressLine2, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> PostCode/ZipCode</label>
                                    @Html.TextBoxFor(model => model.PostCode, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })

                                </div>
                                <!--  --><!--  -->
                                <div class="form-group">
                                    <label>City</label>
                                    @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> Country </label>
                                    @Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.Countries, "Select Country", new { @class = "form-control", @id = "Country", @onchange = "GetCountryPhoneCode();" })
                                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->

                                <div class="form-group contact-no-group">
                                    <label> Mobile No.</label>
                                    <div class="countr-code">
                                        @Model.MobileCode
                                    </div>
                                    @Html.TextBoxFor(model => model.MobileNumber, new { @class = "form-control  contact-no", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> Email Address </label>
                                    @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })

                                </div>



                            </div>


                            <div class="clearfix"></div>
                            <hr>
                            <div class="text-center  clearfix">
                                <button type="submit" class="btn  btn-primary    radius-20 mb30">Update Details</button>&nbsp;&nbsp;&nbsp;

                                <!-- back btn -->
                                <div class="clearfix ">

                                    <center>
                                        <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                                    </center>
                                </div>
                                <!-- back btn end-->
                            </div>




                        </form>

                    </div>

                    <!--  -->

                </div>

            </div>
        </div>
    </div>

}


