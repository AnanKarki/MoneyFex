@model FAXER.PORTAL.Models.SenderProfileEditViewModel
@{
    ViewBag.Title = "SenderProfileEdit";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";




}

@using (Html.BeginForm())
{
    <!--  -->
    <div class="real_form pattern2 pdt40 ">
        <div class="container">
            <div class="row">

