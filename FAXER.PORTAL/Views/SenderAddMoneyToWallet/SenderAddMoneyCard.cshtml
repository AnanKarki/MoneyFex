@model FAXER.PORTAL.Models.SenderAddMoneyCardViewModel
@{
    ViewBag.Title = "SenderAddMoneyCard";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
    string[] SendingBalance = Model.SendingBalance.ToString("0.00").Split('.');
}

@using (Html.BeginForm())
{
    <!--  -->
    <div class="real_form pattern2 pdt40 ">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">
                    <div class="login_signup mb50 clearfix text-center">
                        <div class="flex-container amount-group flex-middle">
                            <div>
                                <div class="userimage  ">
                                    <img src="~/Content/images/user.svg" alt="">
                                </div>
                                @Html.HiddenFor(model => model.CardHolderName)
                            </div>
                            <div>
                                <span class="font-30 text-primary">@Model.CardHolderName</span>
                            </div>
                        </div>
                        <hr>
                        <!-- Available balance -->
                        <div class="col-lg-6 col-lg-offset-3 text-center mb30 mt20 ">
                            <div class="text-right wallet-balance  card-body">
                                <h5>Amount including fee</h5>
                                <h1 class="text-primary">@Model.SendingCurrency @SendingBalance[0]. <small class="text-primary">@SendingBalance[1]</small></h1>
                            </div>
                        </div>
                        <!-- Available balance -->
                        <div class="clearfix">
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <img src="~/Content/images/icon/card/visa.png" alt="" width="35"> &nbsp;&nbsp; <img src="~/Content/images/icon/card/master-card.png" alt="" width="35">
                                @*&nbsp;&nbsp; <img src="~/Content/images/icon/card/ae.png" alt="" width="35">
                                &nbsp;&nbsp;<img src="~/Content/images/icon/card/maestro.png" alt="" width="35">*@
                            </div>
                            <div class="panel-body text-left mt20">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            @Html.ValidationMessage("TransactionError", "", new { @class = "text-danger" })
                                            @Html.ValidationMessage("StripeError", "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    @Html.HiddenFor(model => model.SendingBalance)
                                    @Html.HiddenFor(model => model.SendingCurrency)
                                    <!--  -->
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            @Html.EnumDropDownListFor(model => model.SelectCard, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SelectCard, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <!--  -->
                                    <!--  -->
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.CardNumber, new { @class = "form-control", @type = "number", @placeholder = "Card Number" })
                                            @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <!--  -->
                                    <!--  -->

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.ExpiringDateMonth, new { @class = "form-control", @placeholder = "MM"})
                                            @Html.ValidationMessageFor(model => model.ExpiringDateMonth, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.ExpiringDateYear, new { @class = "form-control", @placeholder = "YY"})
                                            @Html.ValidationMessageFor(model => model.ExpiringDateYear, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <!--  -->
                                    <!--  -->
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.SecurityCode, new { @class = "form-control", @placeholder = "Security Code" })
                                            @Html.ValidationMessageFor(model => model.SecurityCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!--  -->
                                    <!--  -->
                                    <div class="col-lg-12">
                                        <div class="form-group">

                                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!--  -->
                                    <!--  -->
                                    <div class="col-lg-8"><label>Save this card for future use ?</label></div>
                                    <div class="col-lg-2">
                                        <label> @Html.RadioButtonFor(model => model.IsSaveCard, true)Yes </label>
                                    </div>
                                    <div class="col-lg-2"><label> @Html.RadioButtonFor(model => model.IsSaveCard, false) No </label></div>
                                    <!--  -->
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="text-center  clearfix">
                            <hr>
                            <button type="submit" class="btn btn-primary btn-lg mb30">Add Money<i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                            <!-- back btn -->
                            <div class="clearfix ">
                                <center>
                                    <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                                </center>
                            </div>
                            <!-- back btn end-->
                        </div>
                    </div>
                    <!--  -->
                </div>
            </div>
        </div>
    </div>
}

