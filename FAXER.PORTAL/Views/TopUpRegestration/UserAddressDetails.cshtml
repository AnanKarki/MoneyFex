@model FAXER.PORTAL.Models.TopUpCardUserContactDetailsViewModel

@{
    ViewBag.Title = "UserAddressDetails";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}
<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">

                <h1>Virtual Account Registration</h1>

            </div>

        </div>
    </div>


</div>
<!--  -->
<!--  -->
@using (Html.BeginForm("CardUserIdentification", "TopUpRegestration", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="real_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h3>Account User Contact Details</h3>
                    <hr>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-lg-5">
                        <label>Address 1 <span class="required">*</span></label>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control", placeholder = "Address Line 1" } })
                            @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Address 2</label>
                    </div>

                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "form-control", placeholder = "Address Line 2" } })
                            @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>State/Province/Region  <span class="required">*</span></label>
                    </div>

                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", placeholder = "State/Province/Region" } })
                            @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Zip/Postal Code  <span class="required">*</span></label>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Zip/Postal Code" } })
                            @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <div class="col-lg-5">
                        <label>City <span class="required">*</span></label>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Country <span class="required">*</span></label>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.DropDownListFor(x => x.Country, null, "Select Country", htmlAttributes: new { @class = "form-control col-md-5", id = "Country", @onchange = "getCountryPhoneCode();" })
                            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Phone Number <span class="required">*</span></label>
                    </div>
                    <div class=" col-lg-2 no-right-padding">
                        @Html.EditorFor(model=>model.CountryPhoneCode, new { htmlAttributes = new { @class = "form-control", @readonly="readonly" } })

                    </div>
                    <div class="col-lg-4 no-left-padding ">
                        <div class="form-group">
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone no." } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Email Address <span class="required">*</span></label>
                    </div>

                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Card User's Email Address" } })
                            @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <!--  -->
    <!--  -->
    <div class="dynamic_footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <a href="@Url.Action("UserContactDetails", "TopUpRegestration")" , class="fbtn btn-back hidden-xs hidden-sm "><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                    <button value="Next" class="fbtn btn-next" type="submit">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                    <br />
                    <a href="@Url.Action("UserAddressDetails", "TopUpRegestration")" class="fbtn btn-back hidden-lg hidden-md"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">

    function getCountryPhoneCode() {
        var country = $("#Country").val();
        $.getJSON("/TopUpRegestration/getCountryPhoneCode?country=" + country, function (data) {

            for (var item in data) {
                var selector = '[name="' + item + '"]';
                $(selector).val(data[item]);
            }
        });
    }

</script>