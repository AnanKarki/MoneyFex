
@{
    ViewBag.Title = "CardUserIdentification";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h1>Virtual Account Registration </h1>
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm("CreateTopUpUser","TopUpRegestration", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="real_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h3>Account User Identification (Optional)</h3>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <hr>
                    
                        <p>To confirm the identity of your Virtual Account User, please upload his/her passport size photograph below. This photo will be printed on the E-Card that will be sent to the user by us.</p>

                        
                        <div class="form-group">
                            <div class="col-md-6 form-group">
                                <input type="file" name="upload" id="datafiles" class="form-control">
                                @Html.ValidationMessage("File", "", new { @class = "text-danger" })
                            </div>
                        </div>
                    
                </div>
            </div>
        </div>
    </div>

    <div class="dynamic_footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <a href="/TopUpRegestration/UserAddressDetails"  class="fbtn btn-back hidden-xs hidden-sm "><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                    <button value="Next" class="fbtn btn-next" type="submit">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></button>

                    <br />
                    <a href="@Url.Action("UserAddressDetails","TopUpRegestration")" class="fbtn btn-back hidden-lg hidden-md"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                </div>
            </div>
        </div>
    </div>

}
