@model FAXER.PORTAL.Models.SenderMoneyFexBankDepositVM
@{
    ViewBag.Title = "MoneyFexBankDeposit";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
    string[] splittedAmount = Model.AvailableBalance.ToString("0.00").Split('.');
}


@using (Html.BeginForm())
{
    <div class="real_form pattern2 pdt40 ">
        <div class="container">
            <div class="row">
                <!-- Available balance -->
                <div class="col-lg-4 col-lg-offset-4 ">
                    <div class="text-right wallet-balance  mb15">
                        <h5>Available balance</h5>
                        <h1 class="text-primary">@Model.SendingCurrencySymbol @splittedAmount[0].<small class="text-primary">@splittedAmount[1]</small></h1>
                    </div>
                </div>
                <!-- Available balance -->
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">


                    <div class="login_signup mb50 clearfix text-center">
                        <h3 class="text-left">MoneyFex Bank Deposit</h3>
                        <hr>
                        <div class="text-left">


                            <!--  -->
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label> Amount </label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="form-control form-text  text-primary">
                                        @Model.SendingCurrencySymbol @Model.Amount @Model.SendingCurrencyCode
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label> Account No. </label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="form-control form-text text-primary">
                                        @Model.AccountNumber
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label> Short Code </label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="form-control form-text text-primary">
                                        @Model.ShortCode
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label> Payment Reference </label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="form-control form-text text-primary">
                                        @Model.PaymentReference
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <label>Have you made payment to our bank account?</label>
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label>
                                        Yes
                                        @Html.RadioButtonFor(model => model.HasMadePaymentToBankAccount, true)
                                    </label>


                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label>
                                        No
                                        @Html.RadioButtonFor(model => model.HasMadePaymentToBankAccount, false)
                                    </label>
                                </div>
                            </div>
                            <div class="clearfix"></div>


                        </div>

                    </div>
                    <div class="clearfix"></div>
                    <div class="text-center   clearfix">
                        <hr>

                        <button type="submit" class="btn btn-primary btn-lg  mb30 ">Send Confirmation <i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                        <!-- back btn -->
                        <div class="clearfix ">

                            <center>
                                <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                            </center>
                        </div>
                        <!-- back btn end-->
                    </div>
                </div>

                <!--  -->

            </div>

        </div>
    </div>
}
<!--  -->
