@model FAXER.PORTAL.Models.SenderCashPickUpSuccessVm

@{
    ViewBag.Title = "CashPickUpSuccess";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
}


<!--  -->
<div class="real_form pattern2 pdt40 ">
    <div class="container">

        <div class="row">

            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">
                <div class="login_signup mb50 clearfix text-center">

                    <i class="fa fa-check-circle  fa-xlg text-primary mb30"></i>
                    <h3>You've sent  <span class="text-primary">@Model.SendingCurrency @Model.SentAmount </span> to @Model.ReceiverName</h3>

                    <h4>The MFCN for this transaction is <span class="text-primary">@Model.MFCNNumber</span></h4>

                    <h5>We've sent a message to <span class="text-primary">@Model.ReceiverName</span></h5>
                    <hr>
                    <p>The progress of this transaction is shown on your dashboard</p>

                </div>
                <div class="clearfix"></div>


                <div class="text-center   clearfix">
                    <hr>

                    <a href="@Url.Action("Index","SenderFamilyAndFriends")" class="btn btn-primary btn-lg mb30">Send another transfer  </a>

                    <!-- back btn -->
                    <div class="clearfix ">

                        <center>
                            <a href="@Url.Action("Index","SenderDashBoard")" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i>  Go to Dashboard </a>
                        </center>
                    </div>
                    <!-- back btn end-->

                </div>
            </div>

            <!--  -->

        </div>

    </div>
</div>

