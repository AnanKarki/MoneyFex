    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h3>Amount</h3>
                <hr>
                <form>
                    <div class="col-lg-4">
                        <label> Paying Amount</label>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="form-group">
                            <input type="text" name="" class="form-control" placeholder="Enter Amount in Payer's (Sender's) Currency">
