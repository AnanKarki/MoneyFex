                    {

                        @Html.HiddenFor(model => model.isBusiness)
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @*@Html.CheckBoxFor(model => model.isBusiness, new { style = "display:none;" })*@

                        <div class="mt40">

                            <!--  -->

                            <div class="col-lg-12  mb20">
