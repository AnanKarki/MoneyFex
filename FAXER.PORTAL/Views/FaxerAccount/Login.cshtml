@section Scripts {

    @*@Scripts.Render("~/bundles/jqueryval")*@

    <script type="text/javascript">
        function togglePassword() {
            var x = document.getElementById("show_password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }


    </script>
}
