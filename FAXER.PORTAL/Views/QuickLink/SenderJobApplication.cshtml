@model FAXER.PORTAL.Models.MFCareerViewModel

@{
    ViewBag.Title = "SenderJobApplication";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
}

<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">

                <h1>Job Application Form</h1>

            </div>

        </div>
    </div>


</div>
<!--  -->
<!--  -->
@using (Html.BeginForm("SenderJobApplication", "QuickLink", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="real_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="login_signup">
                    <h3>

                        Thank you for interest in working with MoneyFex, please fill out this application and send us.
                    </h3>
                    <hr>
                    <form>

                        <!--  -->
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                <label> First Name <span class="required">*</span></label>
                                @*<input type="text" name="" class="form-control" placeholder=" First Name">*@
                                @Html.HiddenFor(x => x.JobId, new { @id = "jobId" })

                                
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                <label> Last Name <span class="required">*</span></label>
                                @*<input type="text" name="" class="form-control" placeholder=" Last Name">*@
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                <label> Telepohone Number <span class="required">*</span></label>
                                @*<input type="text" name="" class="form-control" placeholder="  ">*@
                                @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control", @placeholder = "Telephone" })
                                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                <label> Email <span class="required">*</span></label>
                                @*<input type="email" name="" class="form-control" placeholder="  ">*@
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                <label>Select Country of Residence <span class="required">*</span></label>

                                @*<select class="form-control">
                                    <option>UK</option>
                                    <option>Nepal</option>
                                    <option>India</option>
                                </select>*@
                                @Html.DropDownListFor(x => x.Country, (IEnumerable<SelectListItem>)ViewBag.Countries, "Select Country", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Country, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                <label> Enter City <span class="required">*</span></label>
                                @*<input type="text" name="" class="form-control" placeholder="  ">*@
                                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @placeholder = "City" } })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                <label>Position Applied for <span class="required">*</span></label>
                                @*<input type="text" name="" class="form-control" placeholder="  ">*@
                                @Html.TextBoxFor(model => model.Position, new { @class = "form-control", @placeholder = "Position Applied For", @id = "Position" })
                                @Html.ValidationMessageFor(x => x.Position, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                <label> Upload CV <span class="required">*</span></label>
                                <input type="file" name="CVURL" class="form-control" placeholder="  ">
                                @Html.ValidationMessageFor(model => model.CVURL, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                <label>Upload Supporting statement <span class="required">*</span></label>
                                <input type="file" name="SupportingStatementURL" class="form-control" placeholder="  ">
                                @Html.ValidationMessageFor(model => model.SupportingStatementURL, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <hr>
                        <div class="col-lg-12">
                            <button class="btn btn-primary pull-right">Submit Job Application</button>
                        </div>

                        <div class="clearfix"></div>

                    </form>
                </div>
            </div>

        </div>
    </div>


</div>
}
<!--  -->
