@model FAXER.PORTAL.Controllers.ContactUsVm
@{
    ViewBag.Title = "SenderContact";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="page-header" style="background:  url(/Content/images/page-header.jpg) no-repeat center;  background-size: cover;">
        <div class="bredcum_newmenu">
            <div class=" ">
                <div class="container">

                    <ol class="breadcrumb ">
                        <li> <a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="active">Contact us</li>
                    </ol>

                </div>
            </div>
        </div>
    </div>
    <div class=" ">
        <!-- content start -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="pinside20 mb0 mt20">

                        <h1 class="page-new">Contact Us</h1>
                        <div class="contact-form mt20 mb60">
                            <div class=" row">

                                <div class="row">
                                    <div class="col-lg-4">
                                        <!--  -->
                                        <div class="bg-boxshadow pinside40 bg-white   text-center mb60">
                                            <div class="mb40"><i class="icon-location-outline icon-2x icon-primary"></i></div>
                                            <h2 class="capital-title">Our Office Address</h2>
                                            <p>
                                                1st Floor, North Westgate House Harlow, Essex London CM20 1YS United Kingdom
                                                <br> +44 2081445215  <br>info@moneyfex.com
                                            </p>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="bg-boxshadow pinside40 bg-white  officehours  text-center ">
                                            <div class="mb40"><i class="icon-clock icon-2x icon-primary"></i></div>
                                            <h2 class="capital-title">Our Office Hours</h2>
                                            <p>Monday : <span>9:30 - 18:00</span></p>
                                            <p>Tuesday : <span>9:30 - 18:00</span></p>
                                            <p>Wednesday : <span>9:30 - 18:00</span></p>
                                            <p>Thursday : <span>9:30 - 18:00</span></p>
                                            <p>Friday : <span>9:30 - 18:00</span></p>
                                            <p>Saturday : <span>10:00 - 16:00</span></p>
                                            <p>Sunday : <span>10:00 - 16:00</span></p>
                                        </div>
                                        <!--  -->


                                    </div>

                                    <div class="col-lg-8 pdl20">
                                        <div class="mb60  section-title text-left  col-lg-12">
                                            <!-- section title start-->

                                            <p>If you would like further information about any of our services, please use one of the following means and we will respond to you as quickly as possible.</p>
                                        </div>
                                        <form action=" " autocomplete="off" enctype="multipart/form-data" method="post" accept-charset="utf-8">

                                            <div class="  col-md-6 form-group">
                                                <label>Name*</label>
                                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                                @*<input type="text" name="your_name" value="" class="form-control required requiredField">*@
                                            </div>
                                            <div class="  col-md-6 form-group">
                                                <label>Email*</label>
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                @*<input type="email" name="you_email" value="" class="form-control required requiredField">*@
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="  col-md-6 form-group">
                                                <label>Telephone*</label>
                                                @Html.TextBoxFor(model => model.Telephone, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                                                @*<input type="text" name="telephone" value="" class="form-control required requiredField">*@
                                            </div>
                                            <div class="  col-md-6 form-group">
                                                <label>FAX</label>
                                                @Html.TextBoxFor(model => model.FaxNo, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FaxNo, "", new { @class = "text-danger" })
                                                @*<input type="text" name="fax" value="" class="form-control required requiredField">*@
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="  col-md-6 form-group">
                                                <label>City*</label>
                                                @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                                @*<input type="text" name="city" value="" class="form-control required requiredField">*@
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="  col-md-12 form-group">
                                                <label>Subject*</label>
                                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                                @*<input type="text" name="your_subject" value="" class="form-control required requiredField" data-msg-required="Please enter the subject.">*@
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="  col-md-12 form-group">
                                                <label>Message*</label>
                                                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @cols = "40", @rows = "10", @placeholder = "Please enter your message." })
                                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                                @*<textarea name="your_message" cols="40" rows="10" class="form-control  required requiredField" data-msg-required="Please enter your message."></textarea>*@
                                            </div>
                                            <p class="col-md-12">
                                                <input type="submit" name="submit_contact" value="Send Message" class="btn btn-primary">
                                            </p>
                                        </form>
                                    </div>


                                </div>
                            </div>
                            <!-- /.section title start-->
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--

                  <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2485.453342591842!2d-0.37468008423147375!3d51.46819247962869!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48760cd468a1e371%3A0x1bc8d992830967d3!2sHounslow%2C+Greater+London+TW3+3FF!5e0!3m2!1sen!2suk!4v1456057800750" frameborder="0" style="border:0" allowfullscreen width="100%" height="450" style="border:0" allowfullscreen></iframe>
            </div>
         -->
    </div>

    if (ViewBag.Success == 1)
    {
        <div class="modal" id="successmodal" role="dialog">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" id="CloseBtnHeader">×</button>
                        <h4 class="modal-title">Success</h4>
                    </div>
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-4">
                                <div class="icon_al">
                                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-8">
                                <p id="CancelMessage">Your message has been successfully sent, you will be contact shortly by our team!</p>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Ok</button>
                    </div>

                </div>
            </div>
        </div>

    }
}

    @section Scripts{
        <script type="text/javascript">

            $("#successmodal").modal('show');

        </script>
    }