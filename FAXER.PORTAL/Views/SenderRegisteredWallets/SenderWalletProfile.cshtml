@model FAXER.PORTAL.Models.SenderWalletProfileVM
@{
    ViewBag.Title = "SenderWalletProfile";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <!--  -->
    <div class="real_form pattern2 pdt40 ">
        <div class="container">
            <div class="row">

                <div class="col-lg-8 col-lg-offset-2  ">

                    <div class="login_signup mb50 clearfix">
                        <h3> Registered Wallets </h3>
                        <hr>
                        <form>
                            <div class="col-lg-8 col-lg-offset-2  ">
                                <!--  -->
                                <div class="form-group">
                                    @*<select class="form-control">
                                            <option>Select Wallet</option>
                                        </select>*@
                                    @Html.DropDownListFor(model => model.WalletId, (IEnumerable<SelectListItem>)ViewBag.Wallets, "Select Wallet", new { @class = "form-control",id= "senderId", @onchange = "getWalletDetails()" })
                                    @if (TempData["NoWalletSelected"] != null)
                                    {

                                        <label style="color:red">@TempData["NoWalletSelected"]</label>
                                    }
                                    @Html.HiddenFor(model => model.WalletId)

                                </div>
                                <!--  -->
                                <div class="form-group  text-center">
                                    <img src="~/Content/images/logo.png" class="img-thumbnail" alt="Photo of MoneyFax Top-up Card User">
                                </div>

                                <!--  -->
                                <div class="form-group">
                                    <label> Name </label>
                                    @*<input type="text" name="" class="form-control" placeholder="">*@
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> City </label>
                                    @Html.TextBoxFor(model => model.City, new { @class = "form-control", @placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> Country </label>
                                    @Html.TextBoxFor(model => model.Country, new { @class = "form-control", @placeholder = "", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> Mobile/Wallet Number </label>
                                    @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control", @placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> Email Address </label>
                                    @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", @placeholder = "" })
                                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> Wallet Status </label>
                                    @Html.TextBoxFor(model => model.WalletStatus, new { @class = "form-control", @placeholder = "", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.WalletStatus, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label> Wallet Available Balance </label>
                                    @Html.TextBoxFor(model => model.WalletBallanceAvaiable, new { @class = "form-control", @placeholder = "", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.WalletBallanceAvaiable, "", new { @class = "text-danger" })

                                </div>
                                <!--  -->

                            </div>

                            <div class="clearfix"></div>
                            <hr>
                            <div class="text-center  clearfix">
                                <btn onclick="UpdateInfo()" class="btn  btn-primary    radius-20 mb30">Update this Wallet</btn>&nbsp;&nbsp;&nbsp;
                                <a class="btn  btn-danger    radius-20 mb30" data-toggle="modal" data-target="#delete">Delete</a>
                                <!-- back btn -->
                                <div class="clearfix ">

                                    <center>
                                        <a href="@Url.Action( "SenderFamilyAndFriendsKiiPayWallet" , "SenderMyRegisteredKiiPayWallets")" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                                    </center>
                                </div>
                                <!-- back btn end-->
                            </div>

                        </form>

                    </div>

                    <!--  -->

                </div>

            </div>
        </div>
    </div>




    <!-- Delete Confirmation -->
    <div id="delete" class="modal fade" role="dialog">
        <div class="modal-dialog modal-md text-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">  Confirmation</h4>
                </div>
                <div class="modal-body uk-text-center ">

                    <h4 class="mt40"> Do you want to delete this wallet ?</h4>
                    <hr>
                    <a href="@Url.Action("Delete", "SenderRegisteredWallets", new { @id = Model.Id})" class="btn btn-primary   radius-20" data-dismiss="modal">Yes</a>&nbsp;&nbsp;&nbsp;
                    <button type="button" class="btn btn-default   radius-20" data-dismiss="modal">No</button>
                </div>

            </div>

        </div>
    </div>
    <!-- Delete Confirmation end -->


}

@section scripts{
    <script type="text/javascript">



        function getWalletDetails() {
           var senderId = $("#senderId").val();
            window.location.href = "/SenderRegisteredWallets/SenderWalletProfile?SenderWalletId=" + senderId;
        }
        function UpdateInfo() {

            var senderId = $("#senderId").val();
            window.location.href = "/SenderRegisteredWallets/SenderUpdateThisWallet?WalletId=" + senderId;

        };
    </script>
}
