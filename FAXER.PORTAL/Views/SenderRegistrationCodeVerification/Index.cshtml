<div class="real_form pattern2">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="login_signup text-center">
                    <h3>Enter the verification Code </h3>
                    <hr>
                    <p>Confirm your account with the code sent to your mobile number or email address</p>
                  
                    <form method="post" accept-charset="utf-8">
                        @Html.HiddenFor(model => model.Country)
                        @Html.HiddenFor(model => model.UserId)
                        @Html.HiddenFor(model => model.Message)
                        @Html.HiddenFor(model => model.RegistrationOf)
                        @Html.HiddenFor(model => model.PhoneNo)
                        <div class="pincode-input-container">

                            <input type="number" minlength="1" maxlength="1" autocomplete="off" class="form-control pincode-input-text first input-lg">
                            <input type="number" minlength="1" maxlength="1" autocomplete="off" class="form-control pincode-input-text mid input-lg">
                            <input type="number" minlength="1" maxlength="1" autocomplete="off" class="form-control pincode-input-text mid input-lg">
                            <!-- <div>-</div> -->

                            <input type="number" minlength="1" maxlength="1" autocomplete="off" class="form-control pincode-input-text mid input-lg">
                            <input type="number" minlength="1" maxlength="1" autocomplete="off" class="form-control pincode-input-text mid input-lg">

                            <input type="number" minlength="1" maxlength="1" autocomplete="off" class="form-control pincode-input-text last input-lg">
                        </div>

                        <div class="clearfix"><hr></div>
                        @Html.ValidationMessage("ErrorMessage", new { @class = "text-danger" })

                        <p>Didn't receive code?   <button type="button" class="btn  btn-link" onclick="ResendCode('@Model.PhoneNo')"> Resend code</button> </p>



                        <button type="submit" class="btn btn-primary radius-20">Verify your account <i class="fa fa-chevron-right" aria-hidden="true"></i></button>

                        @Html.HiddenFor(model => model.VerificationCode, new { @id = "VerficationCode" })

                    </form>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>
