@section Scripts{
    <script type="text/javascript">


        function ResendCode(PhoneNo) {
            debugger;

            window.location.href = "/SenderRegistrationCodeVerification/ReSendVerficationCode?PhoneNo=" + PhoneNo;
            $.ajax()
        }

        var verificationCode = "";


        $('.pincode-input-text').bind('keyup', function (event) {

            if (event.keyCode == 8) {

                $(this).prev().focus();
                return;
            }

            if ($(this).val() == "") {


            } else {

                $(this).next().focus();
                verificationCode = verificationCode + $(this).val();
                $("#VerficationCode").val(verificationCode);
                if ($(this)[0].id == "previous") {
                    $("#Next").focus();
                }
            }


        });

        if ($(this).next().context == undefined) {



        }
    </script>
}