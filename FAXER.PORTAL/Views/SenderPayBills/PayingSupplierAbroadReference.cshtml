                                @Html.TextBoxFor(model => model.ReferenceNo2, new { @class = "refedashedinput", @placeholder = "", maxlength = "1" })

                                @*<input type="text" name="" class="refedashedinput" maxlength="1">*@
                                @Html.TextBoxFor(model => model.ReferenceNo3, new { @class = "refedashedinput", @placeholder = "", maxlength = "1" })

                            </div>

                            <div class="clearfix"></div>
                        </div>

                    </div>


                    <div class="text-center   clearfix">
                        <hr>

                        <button type="submit" class="btn btn-primary btn-lg   ">Enter <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        <div class="clearfix mb30"> </div>
                        <a href=" " class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                    </div>
                </div>

                <!--  -->

            </div>

        </div>
    </div>
}
