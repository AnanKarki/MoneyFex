                            <span class="input-group-addon">@FaxingCurrency</span>

                        </div>*@
                    </div>

                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Total Amount Including Fee </label>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-control form-text">

                            @FaxingCurrencySymbol  @Model.TotalAmountIncludingFee @FaxingCurrency
                        </div>
                        @*<div class="input-group">
                            <span class="input-group-addon">@FaxingCurrencySymbol</span>
                            @Html.TextBoxFor(x => x.TotalAmountIncludingFee, new { @class = "form-control", @readonly = "readonly" })
                            <span class="input-group-addon">@FaxingCurrency</span>

                        </div>*@
                    </div>

                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Current Exchange Rate</label>
                    </div>

                    <div class="col-lg-6 ">
                        <div class="form-group">
                            <div class="form-control form-text">

                                @Model.CurrentExchangeRate
                            </div>
                            @*@Html.TextBoxFor(x => x.CurrentExchangeRate, new { @class = "form-control", @readonly = "readonly" })*@
                        </div>
                    </div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Amount to be Received by Merchant</label>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-control form-text">

                            @ReceivingCurrencySymbol  @Model.AmountToBeReceivedByMerchant @ReceivingCurrency
                        </div>
                        @*<div class="input-group">
                            <span class="input-group-addon">@ReceivingCurrencySymbol</span>
                            @Html.TextBoxFor(x => x.AmountToBeReceivedByMerchant, new { @class = "form-control", @readonly = "readonly" })
                            <span class="input-group-addon">@ReceivingCurrency</span>

