@model FAXER.PORTAL.Models.MerchantPayingDetailsViewModel
@{
    ViewBag.Title = "MerchantPayingDetails";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";

    var FaxingCurrencySymbol = "";
    var FaxingCurrency = "";
    var ReceivingCurrency = "";
    var ReceivingCurrencySymbol = "";

    if (Model != null)
    {
        FaxingCurrencySymbol = Model.FaxingCurrencySymbol ?? "";
        FaxingCurrency = Model.FaxingCurrency ?? "";
        ReceivingCurrency = Model.ReceivingCurrency ?? "";
        ReceivingCurrencySymbol = Model.ReceivingCurrencySymbol ?? "";
    }
}

<div class="progress">
    <div class="progress-bar  " role="progressbar" aria-valuenow="40"
         aria-valuemin="0" aria-valuemax="100" style="width:7%">

    </div>
    <div class="arrow"></div>
</div>
<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h1>Pay for goods & services abroad</h1>
            </div>
        </div>
    </div>
</div>
<!--  -->
<!--  -->
<form method="post">
    <div class="real_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h3>Paying Details</h3>
                    <hr>
                    <!--  -->
                    @Html.HiddenFor(model => model.FaxingCurrency)
                    @Html.HiddenFor(model => model.FaxingCurrencySymbol)
                    @Html.HiddenFor(model => model.ReceivingCurrency)
                    @Html.HiddenFor(model => model.ReceivingCurrencySymbol)
                    @Html.HiddenFor(model => model.PayingAmount)
                    @Html.HiddenFor(model => model.PaymentFee)
                    @Html.HiddenFor(model => model.TotalAmountIncludingFee)
                    @Html.HiddenFor(model => model.AmountToBeReceivedByMerchant)
                    @Html.HiddenFor(model => model.CurrentExchangeRate)
                    @Html.HiddenFor(model => model.PaymentReference)

                    <div class="col-lg-5">
                        <label>Paying Amount </label>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-control form-text">

                            @FaxingCurrencySymbol  @Model.PayingAmount @FaxingCurrency
                        </div>
