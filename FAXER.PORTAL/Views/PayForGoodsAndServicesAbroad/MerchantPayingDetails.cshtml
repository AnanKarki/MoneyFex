                    <!--  -->
                    <div class="col-lg-5">
                        <label>Payment Fee </label>
                    </div>
                    <div class="col-lg-6">

                        <div class="form-control form-text">

                            @FaxingCurrencySymbol  @Model.PaymentFee @FaxingCurrency
                        </div>
                        @*<div class="input-group">

                            <span class="input-group-addon">@FaxingCurrencySymbol</span>
