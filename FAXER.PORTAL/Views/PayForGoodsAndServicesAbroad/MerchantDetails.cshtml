@model  FAXER.PORTAL.Models.MerchantDetailsViewModel
@{
    ViewBag.Title = "MerchantDetails";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="progress">
        <div class="progress-bar  " role="progressbar" aria-valuenow="40"
             aria-valuemin="0" aria-valuemax="100" style="width:7%">
        </div>
        <div class="arrow"></div>
    </div>
    <!--  -->
    <div class="dynamic_bg_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h1>Pay for goods & services abroad</h1>
                </div>
            </div>
        </div>
    </div>
    <!--  -->
    <!--  -->
    <div class="real_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h3>Merchant's Details</h3>
                    <hr>
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Name of Merchant </label>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.NameOfMerchant, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>MoneyFex Account Number  </label>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.MoneyFaxAccountNumber, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Registered City </label>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.RegisteredCity, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-5">
                        <label>Registered Country </label>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.RegisteredCountry, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-12">
                        <div class="checkbox">
                            <label>
                                @*<input type="checkbox" name=" " value=" ">I confirm that this is the merchant i wish to make payment to and have contacted the merchant and agree on the exact amount.*@
                                @Html.CheckBoxFor(x => x.Confirm)I confirm that this is the merchant i wish to make payment to and have contacted the merchant and agree on the exact amount.
                                @Html.ValidationMessageFor(model => model.Confirm, "", new { @class = "text-danger" })
                            </label>
                        </div>
                    </div>
                    <!--  -->
                </div>



                <div class="col-lg-4 ">
                    <div class="cardbody">
                        @Html.HiddenFor(model => model.Telephone)
                        @Html.HiddenFor(model => model.Email)
                        @Html.HiddenFor(model => model.Website)
                        @Html.HiddenFor(model => model.PhoneCode)
                        <h3 class="text-primary  ">@Model.NameOfMerchant</h3>
                        <i class="fa fa-map-mark"></i>@Model.RegisteredCity , @Model.RegisteredCountry
                        <br>
                        <i class="fa fa-phone"></i>  @Model.PhoneCode @Model.Telephone<br>
                        <i class="fa fa-envelope"></i>  <a href="mailto:+@Model.Email">@Model.Email</a><br>
                        <i class="fa fa-globe"></i> <a href="@Model.Website"> @Model.Website</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  -->
    <!--  -->
    <div class="dynamic_footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <a href="@FAXER.PORTAL.Common.FaxerSession.PayGoodsAndServicesBackURL" class="fbtn btn-back hidden-sm hidden-xs"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                    <input value="Next" class="fbtn btn-next" type="submit" />
                    <br>
                    <a href="@FAXER.PORTAL.Common.FaxerSession.PayGoodsAndServicesBackURL" class="fbtn btn-back hidden-lg hidden-md"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                </div>
            </div>
        </div>
    </div>
    <!--  -->
}

