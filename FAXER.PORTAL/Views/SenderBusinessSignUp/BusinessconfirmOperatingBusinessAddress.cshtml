@model FAXER.PORTAL.Models.SenderBusinessOperatingViewModel

@{
    ViewBag.Title = "BusinessconfirmOperatingBusinessAddress";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <!--  -->
    <div class="real_form pattern2">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="login_signup text-center">
                        <div class="text-center">
                            <h3>Confirm your registered business address</h3>
                            <p> Where your business was incorporated </p>
                        </div>
                        <hr>
                        <form>
                            <div class="pinside20">

                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label>@Html.CheckBoxFor(model => model.IsSamePersonalAddress, new { @Id = "IsSameAddress", @onchange = "SameAddress();" }) Same as personal address</label>
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.OperatingAddressLine1, new { @class = "form-control", @placeholder = "Address line 1" })
                                    @Html.ValidationMessageFor(model => model.OperatingAddressLine1, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.OperatingAddressLine2, new { @class = "form-control", @placeholder = "Address line 2(Optional)" })
                                    @Html.ValidationMessageFor(model => model.OperatingAddressLine2, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->

                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.OperatingCity, new { @class = "form-control", @placeholder = "City" })
                                    @Html.ValidationMessageFor(model => model.OperatingCity, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.OperatingPostal, new { @class = "form-control", @placeholder = "Postal/Zip Code" })
                                    @Html.ValidationMessageFor(model => model.OperatingPostal, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->


                            </div>
                            <div class="clearfix">
                                <hr>
                            </div>
                            <!--  -->

                            <div class="col-lg-12 mb20 ">
                                <button type="submit" class="btn btn-primary radius-20">Complete Setup<i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                                @*<button type="submit" class="btn btn-primary radius-20">Continue <i class="fa fa-chevron-right" aria-hidden="true"></i></button>*@
                            </div>
                            <!--  -->

                            <div class="clearfix">

                            </div>
                        </form>

                    </div>
                    <div class="clearfix">

                    </div>
                </div>

            </div>
        </div>

    </div>
    <!--  -->
}

@section scripts{
    <script type="text/javascript">


        function SameAddress() {
            debugger;
            //var isSameAddress = $("#IsSameAddress").val();
            var isSameAddress = $("#IsSameAddress").prop('checked');
            window.location.href="/SenderBusinessSignUp/BusinessconfirmOperatingBusinessAddress?isSameAddress=" + isSameAddress ;
        }
    </script>

}
