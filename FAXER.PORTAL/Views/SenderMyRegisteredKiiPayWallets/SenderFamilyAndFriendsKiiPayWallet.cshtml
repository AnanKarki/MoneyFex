
@{
    ViewBag.Title = "SenderFamilyAndFriendsKiiPayWallet";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
}

<section class="dashboard">
    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-lg-offset-2">

                <!--  -->
                <div class="dashboard_body">

                    <div class=" clearfix">
                        <h3> Family and Friends KiiPay Wallet</h3>


                        <div class="clearfix">

                        </div>
                        <hr>
                        <div class="mobile_design text-center">




                            <!--  -->
                            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                                <div class="dashboard_thumb">
                                    <a href="@Url.Action("SenderWalletProfile","SenderRegisteredWallets")">
                                        <div class="das-icon">
                                            <img src="~/Content/images/icon/svg/wallet-profile.svg">
                                        </div>
                                        <h4>Registered Wallets</h4>
                                    </a>
                                </div>
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                                <div class="dashboard_thumb">
                                    <a href="@Url.Action("SenderControlWalletUsageIndex","SenderControlWalletUsage")">
                                        <div class="das-icon">
                                            <img src="~/Content/images/icon/svg/control-wallet-usage.svg">
                                        </div>
                                        <h4>Control Wallet Usage</h4>
                                    </a>
                                </div>
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                                <div class="dashboard_thumb">
                                    <a href="@Url.Action("Index","SenderTransferMoneyBetweenWallets")">
                                        <div class="das-icon">
                                            <img src="~/Content/images/icon/svg/transfer-money-between-wallets.svg">
                                        </div>
                                        <h4>Transfer Money Between Wallets</h4>
                                    </a>
                                </div>
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                                <div class="dashboard_thumb">
                                    <a href="@Url.Action("Index","SendersWalletTransactionStatement")">
                                        <div class="das-icon">
                                            <img src="~/Content/images/icon/svg/wallets-transaction-statememt.svg">
                                        </div>
                                        <h4>Wallets Transaction Statememt</h4>
                                    </a>
                                </div>
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                                <div class="dashboard_thumb">
                                    <a href="#withdrawal-code" data-toggle="modal" data-target="#withdrawal-code">
                                        <div class="das-icon">
                                            <img src="~/Content/images/icon/svg/get-withdrawal-code.svg">
                                        </div>
                                        <h4>Generate Withdrawal Code</h4>
                                    </a>
                                </div>
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                                <div class="dashboard_thumb">
                                    <a href="">
                                        <div class="das-icon">
                                            <img src="~/Content/images/icon/sud.png">
                                        </div>
                                        <h4>Service <br>Under Developement</h4>
                                    </a>
                                </div>
                            </div>
                            <!--  -->
                            <!-- back btn -->
                            <div class="clearfix">
                                <hr>
                                <center>
                                    <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                                </center>
                            </div>
                            <!-- back btn end-->




                        </div>
                    </div>

                </div>
                <!--  -->


            </div>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" id="withdrawal-code" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-card" role="document">
            <div class="modal-content">
                <div class="modal-body  text-center">
                    <div class="row">
                        <div class="col-lg-6 col-lg-offset-3">
                            <div class="form-group">
                                <h3>Select KiiPay Wallet</h3>
                                
                                    @Html.DropDownList("WalletName", (IEnumerable<SelectListItem>)ViewBag.Wallets, "Select KiiPay Wallet", new { @class = "form-control", id = "WalletId", @onchange = "getAccessCode()" })
                     
                            </div>
                        </div>
                        <hr class="clearfix">
                        <h1 class="text-center">Your code is  <br> <span class="text-primary" id="AccessCode"></span></h1>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script type="text/javascript">

        // get Access Code for card user

        function getAccessCode() {

            debugger;
            var WalletId = $("#WalletId").val();

            $.getJSON("/SenderMyRegisteredKiiPayWallets/GetWithdrawalCode?WalletId=" + WalletId, function (result) {


                $("#AccessCode").text(result.AccessCode);
            })


        }
    </script>
}




