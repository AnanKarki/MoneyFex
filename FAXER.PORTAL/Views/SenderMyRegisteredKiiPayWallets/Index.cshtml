
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
}

<section class="dashboard">
    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-lg-offset-2">

                <!--  -->
                <div class="dashboard_body">

                    <div class=" clearfix">
                        <div class="col-lg-6">
                            <h3> Registered KiiPay Wallets</h3>
                        </div>
                        <div class="col-lg-6">
                            <label id="ErrorMsg" style="display:none" class="text-danger"></label>
                        </div>
                        </div>
                            <div class="clearfix">

                        </div>
                        <hr>
                        <div class="mobile_design text-center">


                            <!--  -->
                            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                                <div class="dashboard_thumb">
                                    <a onclick="PersonalWallet()">

                                        <div class="das-icon">
                                            <img src="~/Content/images/icon/svg/personal-KiiPay-wallet.svg">
                                        </div>
                                        <h4>Personal KiiPay Wallet</h4>

                                    </a>
                                </div>
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                                <div class="dashboard_thumb">
                                    <a onclick="FamilyAndFriendsWallet()">
                                        <div class="das-icon">
                                            <img src="~/Content/images/icon/svg/family-friends-KiiPay-wallet.svg">
                                        </div>
                                        <h4>Family and Friends<br> KiiPay Wallet</h4>
                                        <span class="numbervisible"><b>@ViewBag.WalletCount</b></span>
                                    </a>
                                </div>
                            </div>
                            <!--  -->

                            <div class="clearfix">
                                <hr>
                            </div>


                            <a href="@Url.Action("Index","SenderDashboard")"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back to Dashboard</a>
                        </div>
                    </div>

                </div>
                <!--  -->
            

            </div>
        </div>
    </div>
    <!--  -->
   
</section>

@section Scripts{
    
    <script type="text/javascript">

        function FamilyAndFriendsWallet() {

            var count = @ViewBag.WalletCount;
            if (count > 0) {

                window.location.href = "/SenderMyRegisteredKiiPayWallets/SenderFamilyAndFriendsKiiPayWallet"
            } else {


                $("#ErrorMsg").text("No Family and Friends Wallet registered")
                $("#ErrorMsg").show();
            }
        }

        function PersonalWallet() {


            var count = @ViewBag.SelfWalletCount;
            if (count > 0) {

                window.location.href = "/SenderMyRegisteredKiiPayWallets/SenderPersonalKiiPayWalletIndex"
            } else {


                $("#ErrorMsg").text("No Personal Wallet registered")
                $("#ErrorMsg").show();
            }
        }
    </script>
    }

