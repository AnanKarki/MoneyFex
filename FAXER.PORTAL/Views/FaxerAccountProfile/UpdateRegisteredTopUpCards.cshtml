@model FAXER.PORTAL.Models.MFTCCardInformationUpdateViewModel
@{
    ViewBag.Title = "UpdateRegisteredTopUpCards";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<!--  -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="dynamic_bg_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h1>Update Receiver Virtual Account Details</h1>
                </div>
            </div>
        </div>
    </div>
    <!--  -->
    <!--  -->
    <div class="real_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="login_signup">
                        <h3>Account User's Details</h3>
                        <hr>
                        @Html.HiddenFor(x => x.Id);
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-lg-5">
                            <label> First Name <span class="required">*</span></label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.TopUpUserFirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.TopUpUserFirstName, "", new { @class = "text-danger" })
                                @Html.ValidationMessage("duplicateError", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Middle Name </label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.TopUpUserMiddleName, new { htmlAttributes = new { @class = "form-control", placeholder = "Middle Name(if available)", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.TopUpUserMiddleName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Last Name <span class="required">*</span></label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.TopUpUserLastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last/Family Name", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.TopUpUserLastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Date of Birth <span class="required">*</span></label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.TopUpUserDateOfBirth, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-5">
                            <label>Address 1 <span class="required">*</span></label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control", placeholder = "Address Line 1" } })
                                @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-5">
                            <label>Address 2</label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "form-control", placeholder = "Address Line 2" } })
                                @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-5">
                            <label>State/Province/Region  <span class="required">*</span></label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", placeholder = "State/Province/Region" } })
                                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-5">
                            <label>Zip/Postal Code  <span class="required">*</span></label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Zip/Postal Code" } })
                                @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-5">
                            <label>City <span class="required">*</span></label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-5">
                            <label>Country <span class="required">*</span></label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control", placeholder = "Country", @readonly = "readonly" } })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-5">
                            <label>Phone Number <span class="required">*</span></label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Including Country Code" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-5">
                            <label>Email Address <span class="required">*</span></label>
                        </div>
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Card User's Email Address" } })
                                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--  -->
    <!--  -->
    <div class="dynamic_footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <a href="@FAXER.PORTAL.Common.FaxerSession.BackButtonURL" , class="fbtn btn-back hidden-xs hidden-sm "><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                    <button class="fbtn btn-next" type="submit">Update <i class="fa fa-chevron-right" aria-hidden="true"></i></button>

                    <a href="@FAXER.PORTAL.Common.FaxerSession.BackButtonURL" , class="fbtn btn-back hidden-lg hidden-md "><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                    <br />
                </div>
            </div>
        </div>
    </div>
}
<script>
    function AvoidSpace(event) {
        var k = event ? event.which : window.event.keyCode;
        if (k == 32) return false;
    }
</script>




