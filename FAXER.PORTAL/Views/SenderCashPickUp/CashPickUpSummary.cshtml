                                    </div>

                                    <div class="col-xs-8">
                                        <span class=" "><i class="fa fa-user"></i> @ViewBag.ReceiverName </span>
                                    </div>

                                    <div class="col-xs-2">
                                        <a href="@Url.Action("Index","SenderCashPickUp")">Edit</a>
                                    </div>

                                </div>

                            </li>



                            <li>
                                <div class="wiz-list row">
                                    <div class="col-xs-2">
