                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group text-left">
                                    <div class="form-control form-text">
                                        @Model.ReceivedAmount @Model.ReceivingCurrecyCoode
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
