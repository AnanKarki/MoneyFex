@model FAXER.PORTAL.Models.SignUp.SenderPersonalAddressVM
@{
    ViewBag.Title = "PersonalAddress";
    Layout = "~/Views/Shared/_New_Dashboard_Layout.cshtml";
}



@using (Html.BeginForm())
{
    <!--  -->
    <div class="real_form pattern2">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="login_signup text-center">
                        <div class="text-center">
                            <h3>Enter your Personal Address</h3>
                        </div>
                        <hr>
                        <form>
                            <div class="pinside20">

                                <!--  -->
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.PostCode, new { @class = "form-control", @placeholder = "Postcode/Zip Code" })
                                    @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">

                                    @Html.TextBoxFor(model => model.AddressLine1, new { @class = "form-control", @placeholder = "House No." })
                                    @Html.ValidationMessageFor(model => model.AddressLine1, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.AddressLine2, new { @class = "form-control", @placeholder = "Street" })

                                    @Html.ValidationMessageFor(model => model.AddressLine2, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.City, new { @class = "form-control", @placeholder = "City" })
                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->

                            </div>
                            <div class="clearfix">
                                <hr>
                            </div>
                            <!--  -->

                            <div class="col-lg-12 mb20">

                                <a onclick="Submit()" class="btn btn-primary radius-20" id="Save">Finish Account Setup <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
                                @*<button type="submit" class="btn btn-primary radius-20">Finish Account Setup <i class="fa fa-chevron-right" aria-hidden="true"></i></button>*@
                                @*<button type="submit" class="btn btn-primary radius-20">Continue <i class="fa fa-chevron-right" aria-hidden="true"></i></button>*@
                            </div>
                            <!--  -->

                            <div class="clearfix">

                            </div>
                        </form>

                    </div>
                    <div class="clearfix">

                    </div>
                </div>

            </div>
        </div>

    </div>
    <!--  -->
}
@section Scripts{

    <script type="text/javascript">

        function Submit()
        {
            $("#Save").attr('disabled', true);
            $("#loader").show();
            $("form")[0].submit();

        }
        $("#Save").attr('disabled', false);

    </script>
}