@model FAXER.PORTAL.Areas.Agent.Models.AgentsDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Agent/Views/Shared/_New_Agent_Layout.cshtml";
}
<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <h1>Agent's Details</h1>

            </div>

        </div>
    </div>
</div>
<!--  -->
<!--  -->
<form method="post">
    <div class="real_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 ">
                    <div class=" ">
                        <!--  -->
                        <div class="col-lg-5">
                            <label> Name of Agent</label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">

                                @Html.TextBoxFor(x => x.AgentName, new { @class = "form-control", placeholder = "Business Name of Agent", @readonly = "true" })
                                @Html.ValidationMessageFor(x => x.AgentName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label> Agent Business License/Registration Number</label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.RegistrationNo)

                                @*<input type="text" name="" class="form-control " placeholder="Official Business License Number/Registration Number">*@
                                @Html.TextBoxFor(x => x.BusinessLicenseNo, new { @class = "form-control", placeholder = "Official Business License Number/Registration Number", @readonly = "true" })
                                @Html.ValidationMessageFor(x => x.BusinessLicenseNo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Email Address </label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">

                                @*<input type="email" name="" class="form-control" placeholder="Agent's Email Address">*@
                                @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control", placeholder = "Agent's Email Address", @readonly = "true" })
                                @Html.ValidationMessageFor(x => x.EmailAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Password</label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">

                                @*<input type="password" name="" class="form-control" placeholder="Password">*@
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })

                                @*<small id="emailHelp" class="form-text text-muted"><b>Password Policy </b>: Password should contain atleast one upper case, one number, one special character and one lower case</small>*@
                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Confirm Password</label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">

                                @*<input type="password" name="" class="form-control" placeholder="Confirm Password">*@
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                                @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="col-lg-12 ">
                            <div class="form-group">
                                <small id="emailHelp" class="form-text text-muted"><b>Password Policy </b>:<i> Password should contain atleast one upper case, one number, one special character and one lower case</i></small>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Name of Contact Person at the agency</label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">

                                @Html.TextBoxFor(x => x.ContactPerson, new { @class = "form-control", placeholder = "Name of person at the agent that can be contacted by MF", @readonly = "true" })
                                @Html.ValidationMessageFor(x => x.ContactPerson, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                    </div>
                </div>

            </div>
        </div>


    </div>
    <!--  -->
    <!--  -->
    <div class="dynamic_footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <button class="fbtn btn-next" type="submit">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                </div>
            </div>
        </div>
    </div>
</form>
