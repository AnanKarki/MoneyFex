@model FAXER.PORTAL.Areas.Agent.Models.TopUpAccountSuccessVM
@{
    ViewBag.Title = "TopUpAccountSuccess";
    Layout = "~/Areas/Agent/Views/Shared/_New_Agent_Layout.cshtml";
}


<!--  -->
<div class="real_form pattern2 pdt40 ">
    <div class="container">

        <div class="row">

            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">
                <div class="login_signup mb50 clearfix text-center">

                    <i class="fa fa-check-circle  fa-xlg text-primary mb30"></i>
                    <h2 class=" ">You've made a top-up of  <span class="text-primary">@*£10.00*@ @Model.Currency @Model.Amount</span> to account @*S454754745447*@ @Model.ReceiverAccountNo</h2>

                </div>
                <div class="clearfix"></div>

                <div class="text-center   clearfix">
                    <hr>

                    <a href ="@Url.Action("PrintReceiptOfPayBillTopUp","AgentPayBills" , new {  @Area ="Agent", @TransactionId = ViewBag.TransactionId })" class="btn btn-primary btn-lg"   target="_blank">Print Receipt <i class="fa fa-print" aria-hidden="true"></i></a>
                    <div class="clearfix mb30"> </div>
                    <a href="@Url.Action("GoToDashboard","AgentDashboard")" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go to Dashboard   </a>
                </div>
            </div>

            <!--  -->

        </div>

    </div>
</div>
