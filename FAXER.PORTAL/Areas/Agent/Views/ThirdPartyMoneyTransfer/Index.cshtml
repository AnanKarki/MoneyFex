@model FAXER.PORTAL.Areas.Agent.Models.ThirdPartyMoneyTransferVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Agent/Views/Shared/_New_Agent_Layout.cshtml";
}

<style type="text/css" media="screen">
    input[type=checkbox] {
        /* Double-sized Checkboxes */
        -ms-transform: scale(1.5); /* IE */
        -moz-transform: scale(1.5); /* FF */
        -webkit-transform: scale(1.5); /* Safari and Chrome */
        -o-transform: scale(1.5); /* Opera */
        transform: scale(1.5);
        padding: 10px;
        margin-right: 5px;
        margin-left: 5px;
    }

    .text-center {
        text-align: center;
    }

    .text-left {
        text-align: left;
    }

    .text-left {
        text-align: right;
    }

    .forms-wrapper {
        max-width: 900px;
        margin: 0 auto;
        width: 100%;
    }

    .forms {
        border: solid 1px #00adef;
    }

        .forms .forms-header {
            background: #00adef;
            color: #fff;
            padding: 8px;
        }

    .form-main-title {
        font-size: 20px;
        margin-bottom: 10px;
        color: #003d55;
        font-weight: 600;
    }

    .forms .forms-body {
        padding: 20px;
        background: #dcf0f7;
        border-bottom: solid 1px #00adef;
        margin-bottom: 20px;
    }

        .forms .forms-body table {
            width: 100%;
        }

        .forms .forms-body td {
            padding: 5px;
        }

        .forms .forms-body table, .forms .forms-body table tr, td, th {
            border: 0;
            text-align: left;
        }

        .forms .forms-body input, select {
            background: #fff;
            border: solid 1px #00adef;
        }

    input[type='number'] {
        -moz-appearance: textfield;
    }

    ::-webkit-calendar-picker-indicator {
        display: none;
    }

    input[type="number"]::-webkit-outer-spin-button, input[type="number"]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield;
    }


    .forms-footer {
        background: #eee;
        padding: 30px;
    }

    .button {
        padding: 10px 25px;
        color: #fff;
        outline: 0;
        border: 0;
    }

    button.button.button-cancel {
        background: red;
    }

    button.button.button-Submit {
        background: #00adef;
        float: right;
    }
</style>
<!--  -->
<div class="real_form">
    <div class="container">

        <div class="row">
            <div class="forms-wrapper">


                <div class="form-main-title">
                    Third Party Money Transfer
                </div>
                <p>FOR USE WITH MONEY TRANSFERS BY A THIRD PARTY</p>
                <form method="post">
                    <div class="forms">
                        <div class="forms-header">
                            THIRD PARTY DETAILS
                        </div>
                        <!--  -->
                        <div class="forms-body">
                            <div class="form-block">

                                <table>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <label>Is the transaction is being conducted on behalf of a third party?</label>

                                            </td>
                                            <td>
                                                <select onchange="IsThirdPartyTransferChange()" id="selectedOption">
                                                    <option>Yes</option>
                                                    <option>No</option>
                                                    @Html.HiddenFor(model => model.IsThirdPartyTransfer, new { @id = "IsThirdPartyTransfer" })
                                                </select>
                                            </td>

                                        </tr>

                                        <tr>
                                            <td>
                                                <label>
                                                    Sender Full Name or Business Name:  @Html.TextBoxFor(model => model.SenderORBusinessName)
                                                    @Html.ValidationMessageFor(model => model.SenderORBusinessName, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>
                                                <label>
                                                    Date of Birth:
                                                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", type = "date" } })

                                                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                                                    @Html.ValidationMessage("InvalidAge", "", new { @class = "text-danger" })

                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Country of  Birth:  @Html.DropDownListFor(model => model.Country, (IEnumerable<SelectListItem>)ViewBag.Countries, "Select Country", new { })
                                                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                                                </label>
                                            </td>


                                        </tr>
                                        <tr>
                                            <td>
                                                <label>
                                                    Gender :  @Html.EnumDropDownListFor(model => model.Gender)
                                                </label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label>
                                                    Address:  @Html.TextBoxFor(model => model.Address)
                                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>
                                                <label>
                                                    Telephone Number: @Html.TextBoxFor(model => model.PhoneNo)
                                                    @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Email Address:  @Html.TextBoxFor(model => model.EmailAddress)
                                                    @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                                                </label>
                                            </td>


                                        </tr>
                                        <tr>
                                            <td>
                                                <label>
                                                    ID Type: @Html.TextBoxFor(model => model.IdCardType)
                                                    @Html.ValidationMessageFor(model => model.IdCardType, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    ID Number:   @Html.TextBoxFor(model => model.IdNumber)
                                                    @Html.ValidationMessageFor(model => model.IdNumber, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>
                                                <label>
                                                    Expiring Date:@Html.EditorFor(model => model.IdExpiryDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                                    @Html.ValidationMessageFor(model => model.IdExpiryDate, "", new { @class = "text-danger" })
                                                    @Html.ValidationMessage("IdExpired", "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Issuing Country:  @Html.DropDownListFor(model => model.IdIssuingCountry, (IEnumerable<SelectListItem>)ViewBag.Countries, "Select Country", new { })
                                                    @Html.ValidationMessageFor(model => model.IdIssuingCountry, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>
                                                <label>
                                                    Occupation:  @Html.TextBoxFor(model => model.Occupation)
                                                    @Html.ValidationMessageFor(model => model.Occupation, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--  -->


                        <div class="forms-header">
                            SENDING AGENT INFORMATION
                        </div>
                        <!--  -->
                        <div class="forms-body">
                            <div class="form-block">

                                <table>
                                    <tbody>

                                        <tr>
                                            <td>
                                                <label>
                                                    Country: @Html.TextBoxFor(model => model.AgentStaffCountry, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.AgentStaffCountry, "", new { @class = "text-danger" })
                                                    @Html.HiddenFor(model => model.AgentStaffId)
                                                    @Html.HiddenFor(model => model.AgentId)
                                                    @Html.HiddenFor(model => model.AgentStaffLoginCode)
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Agent Name:  @Html.TextBoxFor(model => model.AgentStaffName, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.AgentStaffName, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>

                                        <tr>
                                            <td>
                                                <label>
                                                    Agent Account No.: @Html.TextBoxFor(model => model.AgentStaffAccountNo, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.AgentStaffAccountNo, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Agent Staff ID: @Html.TextBoxFor(model => model.AgentStaffId, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.AgentStaffId, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>


                                        <tr>
                                            <td>
                                                <label>
                                                    Agent Email:  @Html.TextBoxFor(model => model.AgentStaffEmail, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.AgentStaffEmail, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Agent Telephone: @Html.TextBoxFor(model => model.AgentStaffPhoneNo, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.AgentStaffPhoneNo, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--  -->


                        <div class="forms-header">
                            <span style="float:left;"> MONEYFEX CONTROL NUMBER</span>  <span style="float:right;">For MF Head Office Use only</span>
                            <div style="clear: both;">

                            </div>
                        </div>
                        <!--  -->
                        <div class="forms-body">
                            <div class="form-block">

                                <table>
                                    <tbody>

                                        <tr>
                                            <td>
                                                <label>
                                                    Main Amount: @Html.TextBoxFor(model => model.MainAmount, new { })
                                                    @Html.ValidationMessageFor(model => model.MainAmount, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Fee: @Html.TextBoxFor(model => model.Fee, new { })
                                                    @Html.ValidationMessageFor(model => model.Fee, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    MFCN: @Html.TextBoxFor(model => model.MFCN, new { })
                                                    @Html.ValidationMessageFor(model => model.MFCN, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>


                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--  -->



                        <div class="forms-header">
                            MoneyFex Compliance Specialist
                        </div>
                        <!--  -->
                        <div class="forms-body">
                            <div class="form-block">

                                <table>
                                    <tbody>

                                        <tr>
                                            <td>
                                                <label>
                                                    Approved by: @Html.TextBoxFor(model => model.ApprovedByName, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.ApprovedByName, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Title: @Html.TextBoxFor(model => model.AppovedTitle, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.AppovedTitle, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Date:@Html.TextBoxFor(model => model.ApprovedDate, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.ApprovedDate, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>

                                        <tr>
                                            <td>
                                                <label>
                                                    Declined by: @Html.TextBoxFor(model => model.DeclinedByName, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.DeclinedByName, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Title: @Html.TextBoxFor(model => model.DeclinedTitle, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.DeclinedTitle, "", new { @class = "text-danger" })
                                                </label>
                                            </td>
                                            <td>
                                                <label>
                                                    Date:  @Html.TextBoxFor(model => model.DeclinedDate, new { @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(model => model.DeclinedDate, "", new { @class = "text-danger" })
                                                </label>
                                            </td>

                                        </tr>



                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--  -->



                        <div class="forms-footer  ">
                            <a href="@Url.Action("ThirdPartyMoneyTransfer" , "AgentForms")" class="btn btn-danger  ">Cancel </a>

                            <button type="submit" class="button button-Submit  ">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--  -->


@if (ViewBag.AgentResult.Status == FAXER.PORTAL.Common.ResultStatus.OK)
{
    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="onload" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" onclick="Refresh()">×</button>
                    <h4 class="modal-title">MoneyFex </h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-lg-3">
                            <div class="icon_al">
                                <i class="fa fa-check-circle" aria-hidden="true"></i>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <h4>@ViewBag.AgentResult.Message</h4>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" onclick="Refresh()">Close alert window</button>

                </div>
            </div>
        </div>
    </div>

}
@section Scripts{

    <script type="text/javascript">
        function IsThirdPartyTransferChange() {

            if ($("#selectedOption option:selected").val() == "Yes") {
                $("#IsThirdPartyTransfer").val(true);
            } else {
                $("#IsThirdPartyTransfer").val(false);
            }
        }

        function Refresh() {

            window.location.href = "/Agent/ThirdPartyMoneyTransfer/Index";

        }
    </script>
}
