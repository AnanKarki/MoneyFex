@model FAXER.PORTAL.Areas.Agent.Models.StaffDetailsViewModel
@{
    ViewBag.Title = "StaaffDetails";
    //Layout = "~/Areas/Agent/Views/Shared/_Layout_Agent.cshtml";
    Layout = "~/Areas/Agent/Views/Shared/_New_Agent_Layout.cshtml";
}

<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">

                <h1>Agent Admin User Registration </h1>

            </div>

        </div>
    </div>


</div>
