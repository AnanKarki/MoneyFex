@model FAXER.PORTAL.Areas.Agent.Models.AgentConfirmResetPasswordViewModel
@{
    ViewBag.Title = "ProceedToPasswordReset";
    Layout = "~/Areas/Agent/Views/Shared/_New_Agent_Layout.cshtml";
}
<!--  -->
<div class="dynamic_bg_form ">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">

                <h1>Password Reset</h1>

            </div>

        </div>
    </div>


</div>
<!--  -->
<!--  -->
<div class="real_form pattern2">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="login_signup">
                    <div class=" ">
                        <h4>Your security code has been accepted, you can now reset your Password</h4>
                        <ul class="listnone">
                            <li>-Never you share your password</li>
                            <li>-Keep it safe</li>
                        </ul>

                    </div>
                    <hr>
                    <form method="post">

                        <!--  -->


                        <div class="col-lg-12 ">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control", @placeholder = "Enter Your New Password",@type="password", @style = "font-family: caption;" })
                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!--  -->
                        <!--  -->


                        <div class="col-lg-12 ">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Your New Password", @type = "password", @style = "font-family: caption;" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <!--  -->
                        <!--  -->

                        <div class="col-lg-12 ">
                            <button type="submit" class="btn btn-success  btn-sm pull-right">Confirm your reset </button>
                        </div>
                        <!--  -->



                        <div class="clearfix"></div>
                    </form>

                </div>
            </div>

        </div>
    </div>


</div>
<!--  -->
