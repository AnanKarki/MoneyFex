@model FAXER.PORTAL.Areas.KiiPayPersonal.ViewModels.PersonalDetailsViewModel
@{
    ViewBag.Title = "PersonalDetails";
    Layout = "~/Areas/KiiPayPersonal/Views/Shared/_Layout_KiiPayPersonal.cshtml";
}
<style>
    .choosePhoto {
        color: #02B6FF;
    }

</style>


<!--  -->
<div class="real_form pattern2">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="login_signup text-center">
                    <div class="text-center">
                        <h3>Enter Personal Details</h3>
                    </div>
                    <hr>
                    @using (Html.BeginForm("PersonalDetails", "SignUp", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="pinside20">

                            <div class="form-group">
                                <div class="user-image-reg">
                                    <img src="" style="height:60px; width:60px;" id="imageUrl" />
                                </div>
                                <label for="upload">
                                    <span class="block choosePhoto" aria-hidden="true">Choose Photo</span>
                                    <input type="file" id="upload" style="display:none" name="upload">
                                </label>
                                @*<p><a href="" class="block">Choose photo</a></p>*@
                                @Html.ValidationMessageFor(model => model.PhotoUrl, "", new { @class = "text-danger" })
                            </div>

                            <!--  -->
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.MiddleName, new { @class = "form-control", @placeholder = "Middle Name" })
                                @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="row">

                                <div class="col-lg-12 text-left">
                                    <label>Birth Date</label>
                                </div>
                                <!--  -->
                                <div class="col-lg-4">
                                    <div class="form-group mb20">
                                        @Html.DropDownListFor(model => model.BirthDateDay, (IEnumerable<SelectListItem>)ViewBag.Days, "Day", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.BirthDateDay, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="col-lg-4">
                                    <div class="form-group mb20">
                                        @Html.EnumDropDownListFor(model => model.BirthDateMonth, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.BirthDateMonth, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="col-lg-4">
                                    <div class="form-group mb20">
                                        @Html.TextBoxFor(model => model.BirthDateYear, new { @type = "number", @placeholder = "Year", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.BirthDateYear, "", new { @class = "text-danger" })


                                    </div>
                                </div>
                                <!--  -->

                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="row">

                                <div class="col-lg-12 text-left">
                                    <label>Gender</label>
                                </div>
                                <!--  -->

                                <div class="col-lg-3 text-left">
                                    <div class="form-group mb20">
                                        <label> @Html.RadioButtonFor(m => m.Gender, FAXER.PORTAL.Models.Gender.Male, new { @checked = "true" }) Male</label>

                                    </div>
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="col-lg-3 text-left">
                                    <div class="form-group mb20">
                                        <label> @Html.RadioButtonFor(m => m.Gender, FAXER.PORTAL.Models.Gender.Female)Female</label>

                                    </div>
                                </div>
                                <!--  -->

                            </div>
                            <!--  -->

                        </div>
                        <div class="clearfix">
                            <hr>
                        </div>
                        <!--  -->

                        <div class="col-lg-12 mb20 ">
                            <button type="submit" class="btn btn-primary radius-20">Continue <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        </div>
                        <!--  -->

                        <div class="clearfix">

                        </div>

                    }
                </div>
                <div class="clearfix">

                </div>
            </div>

        </div>
    </div>

</div>
<!--  -->
@section Scripts{
    <script type="text/javascript">
        $("#upload").change(function () {
            readURL(document.getElementById("upload"));
        });


        function readURL(input) {
            debugger;
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imageUrl').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }



    </script>
    }