@model FAXER.PORTAL.Areas.KiiPayPersonal.ViewModels.PayForServicesSummaryAbroadViewModel
@{
    ViewBag.Title = "PayForServicesSummaryAbroad";
    Layout = "~/Areas/KiiPayPersonal/Views/Shared/_Layout_KiiPayPersonal.cshtml";
}


@using (Html.BeginForm())
{


<!--  -->
<div class="real_form pattern2 pdt40 ">
    <div class="container">
        <div class="row">
            <!-- Available balance -->
            <div class="col-lg-4 col-lg-offset-4 ">
                <div class="text-right wallet-balance  mb15">
                    <h5>Available balance</h5>
                    <h1 class="text-primary">@FAXER.PORTAL.Common.CardUserSession.LoggedCardUserViewModel.CardUserCurrencySymbol @FAXER.PORTAL.Common.CardUserSession.LoggedCardUserViewModel.BalanceOnCard</h1>
                </div>
            </div>
            <!-- Available balance -->
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">


                <div class="login_signup mb50 clearfix text-center">
                    <h3 class="text-left">  Payment Summary</h3>
                    <hr>
                    <div class="text-left">


                        <!--  -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label> Amount </label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="form-control form-text">
                                    @Model.SendersCurrencySymbol @Model.Amount @Model.SenderCurrencyCode
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label> Fee </label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="form-control form-text">
                                    @Model.SendersCurrencySymbol @Model.Fee @Model.SenderCurrencyCode
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label> You'll Pay </label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="form-control form-text">
                                    @Model.SendersCurrencySymbol @Model.PayingAmount @Model.SenderCurrencyCode
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label> @Model.ReceiverName will Receive </label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="form-control form-text">
                                    @Model.ReceivingCurrencySymbol @Model.ReceivingAmount @Model.ReceivingCurrencyCode
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Payment Reference </label>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="form-control form-text">
                                    @Model.PaymentReference
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->

                    </div>

                    <hr>


                    <h4 class="text-center mt30  ">For more information, please read our    <a href="agreement.php"> Agreement</a></h4>
                </div>
                <div class="clearfix"></div>
                <div class="text-center   clearfix">
                    <hr>

                    <button type="submit" class="btn btn-primary btn-lg   ">Send Money Now <i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                    <div class="clearfix mb30"> </div>
                    <a href="@Url.Action("PayForServicesEnterAmountAbroad") " class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                </div>
            </div>

            <!--  -->

        </div>

    </div>
</div>
}