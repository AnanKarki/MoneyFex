@model FAXER.PORTAL.Areas.KiiPayPersonal.ViewModels.PayForGoodsAndServicesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/KiiPayPersonal/Views/Shared/_Layout_KiiPayPersonal.cshtml";
}


@using (Html.BeginForm())
{


    <!--  -->
    <div class="real_form pattern2 pdt40 ">
        <div class="container">

            <div class="row">
                <!-- Available balance -->
                <div class="col-lg-4 col-lg-offset-4 ">
                    <div class="text-right wallet-balance  mb15">
                        <h5>Available balance</h5>
                        <h1 class="text-primary">@FAXER.PORTAL.Common.CardUserSession.LoggedCardUserViewModel.CardUserCurrencySymbol @FAXER.PORTAL.Common.CardUserSession.LoggedCardUserViewModel.BalanceOnCard</h1>
                    </div>
                </div>
                <!-- Available balance -->
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">

                    <div class="login_signup mb50 clearfix text-center">
                        <h3>Pay for Services </h3>
                        <hr>
                        <div class="form-group mb30">
                            @Html.DropDownListFor(model => model.RecentlyPaidBusiness, (IEnumerable<SelectListItem>)ViewBag.PhoneNumbers,"Recently Paid Business", new { @class = "form-blue", @id = "dropdownPhoneNumber", @onchange = "changePhoneNumber()" })

                        </div>
                        @Html.ValidationMessageFor(model => model.RecentlyPaidBusiness, "", new { @class = "text-danger" })
                        <div class="form-group mb20">
                            <h2 class="text-primary text-center">OR</h2>
                        </div>

                        <div class="form-group  ">
                            @Html.TextBoxFor(model => model.BusinessMobileNumber, new { @placeholder = "Business Mobile  No.", @class = "form-blue", @id = "phoneNumber" })

                        </div>
                        @Html.ValidationMessageFor(model => model.BusinessMobileNumber, "", new { @class = "text-danger" })
                        <br />
                        <h4 class="text-center mb30">Paying a Business Abroad?   <a href="@Url.Action("PayForServicesAbroad","PayForGoodsAndServices")">Change</a></h4>

                    </div>
                    <div class="clearfix"></div>


                    <div class="text-center   clearfix">
                        <hr>

                        <button type="submit" class="btn btn-primary btn-lg   ">Continue <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        <div class="clearfix mb30"> </div>
                        <a href="@Url.Action("Index","Dashboard")" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                    </div>
                </div>

                <!--  -->

            </div>

        </div>
    </div>
}

@section Scripts{
    <script type="text/javascript">
        function changePhoneNumber()
        {
            var phoneNumber = $("#dropdownPhoneNumber").val();
            $("#phoneNumber").val(phoneNumber);
            return;
        }


    </script>
    
    }