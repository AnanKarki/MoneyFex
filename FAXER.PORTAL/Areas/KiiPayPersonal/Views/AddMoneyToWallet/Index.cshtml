@model FAXER.PORTAL.Areas.KiiPayPersonal.ViewModels.AddMoneyToWalletEnterAmountVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/KiiPayPersonal/Views/Shared/_Layout_KiiPayPersonal.cshtml";
}


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken();
    @Html.ValidationSummary();

    <!--  -->
    <div class="real_form pattern2 pdt40 ">
        <div class="container">
            <div class="row">
                <!-- Available balance -->
                <div class="col-lg-4 col-lg-offset-4 ">
                    @*<div class="text-right wallet-balance ">
                            <h5>available balance</h5>
                            <h1 class="text-primary">$175.<small class="text-primary">86</small></h1>
                        </div>*@
                    <div class="text-right wallet-balance ">
                        <h5>Available balance</h5>
                        <h1 class="text-primary">@FAXER.PORTAL.Common.CardUserSession.LoggedCardUserViewModel.CardUserCurrencySymbol @FAXER.PORTAL.Common.CardUserSession.LoggedCardUserViewModel.BalanceOnCard  </h1>
                    </div>

                </div>
                <!-- Available balance -->
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">


                    <div class="login_signup mb50 clearfix text-center">

                        <div class="amount-group  ">

                            <div>
                                <label>Enter Amount</label>
                                @Html.TextBoxFor(model => model.Amount, new { @type = "number", @placeholder = "0.00", @class = "amount" })
                                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="gbp">
                            @Model.CurrencyCode
                            @Html.HiddenFor(model => model.CurrencyCode)
                        </div>

                    </div>
                    <div class="clearfix"></div>
                    <div class="text-center  clearfix">
                        <hr>
                        <button type="submit" class="btn btn-primary btn-lg mb30">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        <!-- back btn -->
                        <div class="clearfix ">

                            <center>
                                <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                            </center>
                        </div>
                        <!-- back btn end-->
                    </div>
                </div>

                <!--  -->

            </div>

        </div>
    </div>
}