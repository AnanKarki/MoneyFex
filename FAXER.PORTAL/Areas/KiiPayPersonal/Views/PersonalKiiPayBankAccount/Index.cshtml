@model List<FAXER.PORTAL.Areas.KiiPayPersonal.ViewModels.SavedBanksViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/KiiPayPersonal/Views/Shared/_Layout_KiiPayPersonal.cshtml";
}



<!--  -->
<div class="real_form pattern2 pdt40 ">
    <div class="container">

        <div class="row">

            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">



                <div class="login_signup mb50 clearfix text-center">
                    <h3>Saved Bank Account</h3>
                    <hr>

                    <div class="table-responsive">

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Bank Account</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Barclays PLC  <br>Account No.<span class="text-primary">XXX-12124</span></td>
                                    <td><span class="text-success">Active</span></td>
                                    <td>
                                        <button class="btn btn-danger radius-20 btn-sm btn-block" data-toggle="modal" data-target="#delete">Remove</button>
                                    </td>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.BankName <br>Account No.<span class="text-primary">@item.AccountNumber</span></td>
                                        <td><span class="text-success">@item.Status</span></td>
                                        <td>
                                            <button type="button" onclick="deleteBank()" class="btn btn-danger radius-20 btn-sm btn-block" >Remove</button>
                                        </td>
                                    </tr>
                                
                                }

                            </tbody>
                        </table>
                        <hr>
                        <a href="@Url.Action("AddNewBankAccount")"><i class="fa fa-plus"></i> Add a New Bank Account</a>
                    </div>


                </div>
                <div class="clearfix"></div>


                <div class="text-center   clearfix">



                    <!-- back btn -->
                    <div class="clearfix">
                        <hr>
                        <center>
                            <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                        </center>
                    </div>
                    <!-- back btn end-->
                </div>
            </div>

            <!--  -->

        </div>

    </div>
</div>


<!-- Delete Confirmation -->
<div id="delete" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md text-center">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">  Confirmation</h4>
            </div>
            <div class="modal-body uk-text-center ">

                <h4 class="mt40"> Do you want to delete this account?</h4>
                <hr>
                <button type="button" class="btn btn-primary   radius-20" data-dismiss="modal">Yes</button>&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-default   radius-20" data-dismiss="modal">No</button>
            </div>

        </div>

    </div>
</div>
<!-- Delete Confirmation end -->
@section Scripts{
    <script type="text/javascript">
        var toDeleteBankId = "";
        function deleteBank(id) {
            toDeleteBankId = id;
            window.location.href = "/KiiPayPersonal/PersonalKiiPayBankAccount/";
        }

    </script>
    
    }