@model FAXER.PORTAL.Areas.KiiPayPersonal.ViewModels.EditAccountProfileViewModel
@{
                /**/

                /**/

                ViewBag.Title = "AccountProfile";
                Layout = "~/Areas/KiiPayPersonal/Views/Shared/_Layout_KiiPayPersonal.cshtml";
}





<!--  -->
<div class="real_form pattern2 pdt40 ">
    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-lg-offset-2  ">

                <div class="login_signup mb50 clearfix">
                    <h3> KiiPay Wallet  Account Details </h3>
                    <hr>


                    <form>
                        <div class="col-lg-8 col-lg-offset-2  ">

                            <div class="form-group  text-center">

                                <img src="@Model.PhotoUrl" class="img-thumbnail" alt="Photo of MoneyFax Top-up Card User">
                            </div>

                            <!--  -->
                            <div class="form-group">
                                <label> Name </label>
                                @Html.TextBoxFor(model=>model.Name, new { @class="form-control", @readonly="readonly"})
                                
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="form-group">
                                <label> Date of Birth </label>
                                @Html.TextBoxFor(model=>model.DOB, new { @class="form-control", @readonly="readonly"})
                                
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="form-group">
                                <label> Address </label>
                                @Html.TextAreaFor(model=>model.FullAddress, new { @class = "form-control", @rows = "4", @disabled = "disabled" })
                                
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="form-group">
                                <label> Country </label>
                                @Html.TextBoxFor(model=>model.Country, new { @class="form-control", @readonly="readonly"})
                                
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="form-group">
                                <label> Mobile/Wallet No. </label>
                                @Html.TextBoxFor(model=>model.MobileNo, new { @class="form-control", @readonly="readonly"})
                                
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="form-group">
                                <label> Email Address </label>
                                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", @readonly = "readonly" })

                                
                            </div>
                            <!--  -->
                            <div class="form-group">
                                <hr>
                                <h3>Identification Information</h3>
                                <hr>
                            </div>

                            <!--  -->
                            <div class="form-group">
                                <label> ID Card Type </label>
                                @Html.TextBoxFor(model => model.IDCardType, new { @class = "form-control", @readonly = "readonly" })

                                
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="form-group">
                                <label> ID Card Number </label>
                                @Html.TextBoxFor(model => model.IDCardNumber, new { @class = "form-control", @readonly = "readonly" })

                                
                            </div>
                            <!--  -->

                            <div class="row">
                                <!--  -->
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label> Expiring Date </label>
                                        @Html.TextBoxFor(model => model.IDCardExpiringDate, new { @class = "form-control", @readonly = "readonly" })

                                        
                                    </div>
                                </div>
                                <!--  -->
                                <!--  -->
                                <!--  -->
                                <!--  -->
                                <!--  -->


                            </div>

                            <!--  -->
                            <div class="form-group">
                                <label> ID Issuing Country </label>
                                @Html.TextBoxFor(model => model.IDCardIssuingCountry, new { @class = "form-control", @readonly = "readonly" })

                                
                            </div>
                            <!--  -->


                        </div>


                        <div class="clearfix"></div>
                        <hr>
                        <div class="text-center  clearfix">
                            <a href="@Url.Action("EditAccountProfile","Dashboard")" class="btn  btn-primary    radius-20 mb30">Update Details</a>&nbsp;&nbsp;&nbsp;
                            <a class="btn  btn-danger    radius-20 mb30" data-toggle="modal" data-target="#delete">Delete</a>
                            <!-- back btn -->
                            <div class="clearfix ">

                                <center>
                                    <a href="@Url.Action("Index","Dashboard")" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                                </center>
                            </div>
                            <!-- back btn end-->
                        </div>




                    </form>

                </div>

                <!--  -->

            </div>

        </div>
    </div>
</div>




<!-- Delete Confirmation -->
<div id="delete" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md text-center">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">  Confirmation</h4>
            </div>
            <div class="modal-body uk-text-center ">

                <h4 class="mt40"> Do you want to delete this KiiPay Wallet?</h4>
                <hr>
                <button type="button" class="btn btn-primary   radius-20" data-dismiss="modal">Yes</button>&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-default   radius-20" data-dismiss="modal">No</button>
            </div>

        </div>

    </div>
</div>
<!-- Delete Confirmation end -->
    




