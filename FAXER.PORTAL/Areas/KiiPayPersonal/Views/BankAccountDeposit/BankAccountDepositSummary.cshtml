                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label> Fee </label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="form-control form-text">
                                        @FAXER.PORTAL.Common.CardUserSession.LoggedCardUserViewModel.CardUserCurrencySymbol @Model.Fee @FAXER.PORTAL.Common.CardUserSession.LoggedCardUserViewModel.CardUserCurrency
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
