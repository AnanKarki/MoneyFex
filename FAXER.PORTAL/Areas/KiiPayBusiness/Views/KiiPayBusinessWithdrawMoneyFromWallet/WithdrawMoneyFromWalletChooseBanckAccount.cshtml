@model List<FAXER.PORTAL.Areas.KiiPayBusiness.ViewModels.KiiPayBusinessUserBanckAccountsVM>
@{
    ViewBag.Title = "WithdrawMoneyFromWalletChooseBanckAccount";
    Layout = "~/Areas/KiiPayBusiness/Views/Shared/_Layout_KiiPayBusiness.cshtml";
}

@using (Html.BeginForm())
{
    <!--  -->
    <div class="real_form pattern2 pdt40 ">
        <div class="container">
            <div class="row">
                <!-- Available balance -->
                <div class="col-lg-4 col-lg-offset-4 ">
                    <div class="text-right wallet-balance  mb15">
                        <h5>Available balance</h5>
                        <h1 class="text-primary">$175.<small class="text-primary">86</small></h1>
                    </div>
                </div>
                <!-- Available balance -->

                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">


                    <div class="login_signup mb50 clearfix text-center">
                        <div class="flex-container amount-group flex-middle">
                            <div>
                                <div class="userimage  ">
                                    <img src="images/user.svg" alt="">
                                </div>
                            </div>
                            <div>
                                <span class="font-30 text-primary"> Ukesh Raj</span>
                            </div>
                        </div>
                        <hr>
                        <div class="clearfix">

                        </div>



                        <ul class="paymentmethod-list mt20 mb20">
                            <h4 class="text-left">Select Bank Account</h4>
                            <li>

                                @{
                                    int index = 0;
                                }
                                @foreach (var item in Model)
                                {

                                    @Html.HiddenFor(model => Model[index].BankId)

                                    @Html.HiddenFor(model => Model[index].AccountNumber)
                                    <label>
                                        <input type="radio" name="@Model[index].IsChecked" value="false" id="@item.BankId" onchange="RadioChange()"> <span class="cardsaved hidden-xs"><img src="~/Areas/KiiPayBusiness/images/icon/svg/bank.svg" width="40"></span>
                                        <span class="title">@item.Name</span> <span class="subtitle">@item.Name @item.AccountNumber</span>
                                    </label>

                                }
                            </li>
                            <li>

                                <label>
                                    <input type="radio" name="radio" checked="checked"> <span class="cardsaved hidden-xs">
                                        <img src="~/Areas/KiiPayBusiness/images/icon/svg/bank.svg" width="40" />
                                    </span> <span class="title">Barclays Bank</span> <span class="subtitle">Account No. **** 4547</span>
                                </label>
                            </li>

                            <li>
                                <label>
                                    <input type="radio" name="radio"> <span class="cardsaved hidden-xs">
                                        <img src="~/Areas/KiiPayBusiness/images/icon/svg/bank.svg" width="40" />
                                    </span> <span class="title">
                                        Lloyds Bank
                                    </span> <span class="subtitle">Account No. **** 4547</span>
                                </label>
                            </li>


                            <li>
                                <label class="text-left">
                                    <a href="@Url.Action("WithdrawMoneyFromWalletAddBankAccount")"><i class="fa fa-plus"></i> Add a New Bank Account</a>
                                </label>
                            </li>

                        </ul>

                        <div class="clearfix">  </div>


                    </div>
                    <div class="clearfix"></div>
                    <div class="text-center  clearfix">
                        <hr>
                        <button type="submit" class="btn btn-primary btn-lg mb30">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        <!-- back btn -->
                        <div class="clearfix ">

                            <center>
                                <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                            </center>
                        </div>
                        <!-- back btn end-->
                    </div>
                </div>

                <!--  -->

            </div>

        </div>
    </div>

}
@section scripts{

    <script type="text/javascript">
        function RadioChange() {
            $("input[type=radio]").prop("Checked", false);
            event.target.checked = true;
        }
    </script>
}