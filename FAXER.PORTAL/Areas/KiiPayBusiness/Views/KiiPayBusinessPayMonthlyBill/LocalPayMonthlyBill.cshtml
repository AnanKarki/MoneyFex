@model FAXER.PORTAL.Areas.KiiPayBusiness.ViewModels.KiiPayBusinessEnterPaymentReferenceVM
@{
    ViewBag.Title = "LocalPayMonthlyBill";
    Layout = "~/Areas/KiiPayBusiness/Views/Shared/_Layout_KiiPayBusiness.cshtml";
}

@using (Html.BeginForm())
{
    <div class="real_form pattern2 pdt40 ">
        <div class="container">

            <div class="row">
                <!-- Available balance -->
                <div class="col-lg-4 col-lg-offset-4 ">
                    <div class="text-right wallet-balance  mb15">
                        <h5>Available balance</h5>
                        <h1 class="text-primary">$175.<small class="text-primary">86</small></h1>
                    </div>
                </div>
                <!-- Available balance -->
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">


                    <div class="login_signup mb50 clearfix text-left">


                        <label>Enter Payment Reference</label>
                        <div class="referencecode mb20">
                            <div class="col-lg-4">
                                <img src="~/Areas/Businesses/images/kiipay.png " width="80" />
                                <b>Ref:</b>
                            </div>
                            <div class="col-lg-8">
                                HV8
                                @Html.TextBoxFor(model => model.ReferenceNo0, new { @type = "text", @maxlength = "1", @class = "refedashedinput" })
                                @Html.TextBoxFor(model => model.ReferenceNo1, new { @type = "text", @maxlength = "1", @class = "refedashedinput" })
                                @Html.TextBoxFor(model => model.ReferenceNo2, new { @type = "text", @maxlength = "1", @class = "refedashedinput" })
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        @Html.ValidationMessageFor(model => model.ReferenceNo2, "", new { @class = "text-danger" })
                        <h4 class="text-center mb30">Paying a Supplier Abroad?   <a href="@Url.Action("InternationalPayMonthlyBill")">Change</a></h4>
                    </div>
                    <div class="clearfix"></div>


                    <div class="text-center   clearfix">
                        <hr>
                        <button type="submit" class="btn btn-primary btn-lg   ">Enter <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        <div class="clearfix mb30"> </div>
                        <a href=" " class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                    </div>
                </div>

                <!--  -->

            </div>

        </div>
    </div>
}