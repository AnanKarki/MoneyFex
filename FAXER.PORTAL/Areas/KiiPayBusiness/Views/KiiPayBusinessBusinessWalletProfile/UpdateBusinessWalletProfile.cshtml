@model FAXER.PORTAL.Areas.KiiPayBusiness.ViewModels.KiiPayBusinessBusinessWalletProfileVM
@{
    ViewBag.Title = "UpdateBusinessWalletProfile";
    Layout = "~/Areas/KiiPayBusiness/Views/Shared/_Layout_KiiPayBusiness.cshtml";
}
@using (Html.BeginForm())
{
    <!--  -->
    <div class="real_form pattern2 pdt40 pdb40 ">
        <div class="container">
            <div class="row">

                <div class="col-lg-8 col-lg-offset-2  ">

                    <div class="login_signup mb50 clearfix">
                        <h3> Business Wallet Profile  </h3>
                        <hr>

                        <div class="text-center">
                            <a href="business-profile.php" class="btn btn-sm btn-primary    radius-20">View Profile</a>
                            <hr>
                        </div>
                        <!--  -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Address</label>
                                @Html.TextBoxFor(model => model.Address, new { @type = "text", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Telephone / Wallet Number</label>
                                @Html.TextBoxFor(model => model.TelephoneWalletNumber, new { @type = "text", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.TelephoneWalletNumber, "", new { @class = "text-danger" })
                        </div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(model => model.Email, new { @type = "text", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <!--  -->
                        <!--  -->
                        <div class="row">

                            <div class="col-lg-12 text-left">
                                <label>Bill Issuing Company</label>
                            </div>
                            <!--  -->
                            <div class="col-lg-3 text-left">
                                <div class="form-group mb20">
                                    <label > 
                                        @Html.RadioButtonFor(model => model.BillIssuingCompany, true, new { @value = Model.BillIssuingCompany }) Yes
                                    </label>

                                </div>
                            </div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-3 text-left">
                                <div class="form-group mb20">
                                    <label >
                                        @Html.RadioButtonFor(model=>model.BillIssuingCompany,false, new { @value = Model.BillIssuingCompany}) No
                                    </label>
                                </div>
                            </div>
                       
                        </div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-12 mt30">
                            <div class="form-group text-center">
                                <a class="btn btn-primary btn-lg  radius-20" data-toggle="modal" data-target="#myModal">Update</a>
                            </div>
                        </div>
                        <!--  -->


                        <div class="clearfix"></div>
                        <div class="text-center  clearfix">
                            <hr>
                            <!-- back btn -->
                            <div class="clearfix ">

                                <center>
                                    <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                                </center>
                            </div>
                            <!-- back btn end-->
                        </div>
                    </div>

                    <!--  -->

                </div>

            </div>
        </div>
    </div>


    <!-- KiiPay Confirmation -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">KiiPay Confirmation</h4>
                </div>
                <div class="modal-body uk-text-center ">
                    <div class="form-group">
                        <small>Enter the code sent to your mobile no.</small> <div class="clearfix"><br></div>
                        @Html.TextBoxFor(model => model.MobileCode, new { @type = "number", @placeholder = "Enter code", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MobileCode, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary   radius-20" data-toggle="modal" data-target="#payment-completed">Confirm</button>
                    <button type="button" class="btn btn-default btn-sm radius-20" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <!-- KiiPay Confirmation end -->
    <!-- Completed -->
    <div id="payment-completed" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm text-center">
            <div class="modal-content trans-success">

                <div class="modal-body uk-text-center ">
                    <i class="fa fa-check text-primary  "></i>
                    <p class="text-white"> Completed</p>
                </div>

            </div>

        </div>
    </div>
    <!-- Completed end -->
}