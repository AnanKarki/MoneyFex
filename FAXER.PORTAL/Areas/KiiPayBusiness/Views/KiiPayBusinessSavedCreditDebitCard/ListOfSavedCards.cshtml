@model List<FAXER.PORTAL.Areas.KiiPayBusiness.ViewModels.KiiPayBusinessSavedCreditDebitCardListVM>
@{
    ViewBag.Title = "ListOfSavedCards";
    Layout = "~/Areas/KiiPayBusiness/Views/Shared/_Layout_KiiPayBusiness.cshtml";
}


<!--  -->
<div class="real_form pattern2 pdt40 ">
    <div class="container">

        <div class="row">

            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">



                <div class="login_signup mb50 clearfix text-center">
                    <h3>Saved Credit/Debit Card</h3>
                    <hr>

                    <div class="table-responsive">

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Card No. & Exp. Date</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <td>@item.CardNo<br><span class="text-primary">Exp. @item.ExpMonth/@item.ExpYear</span></td>
                                        <td><span class="text-success">@item.CardStatus</span></td>
                                        <td>
                                            <a class="btn btn-primary radius-20 btn-sm btn-block" onclick="UpdateCard(@item.CardId)">Update</a>
                                            <button class="btn btn-danger radius-20 btn-sm btn-block" onclick="DeleteCard(@item.CardId)">Remove</button>
                                        </td>
                                    </tr>


                                }



                            </tbody>
                        </table>

                    </div>
                    <hr>
                    <a href="@Url.Action("AddNewCard")"><i class="fa fa-plus"></i> Add New Card</a>

                </div>
                <div class="clearfix"></div>


                <div class="text-center   clearfix">
                    <hr>

                    <!-- back btn -->
                    <div class="clearfix ">

                        <center>
                            <a href="dashboard.php" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i>  Back to Dashboard </a>
                        </center>
                    </div>
                    <!-- back btn end-->
                </div>
            </div>

            <!--  -->

        </div>

    </div>
</div>



@using (Html.BeginForm("DeleteCard", "KiiPayBusinessSavedCreditDebitCard"))
{

    <!-- Delete Confirmation -->
    <div id="delete" class="modal fade" role="dialog">
        <div class="modal-dialog modal-md text-center">
            <div class="modal-content">
                @Html.Hidden("Id", new { @id = "Id" })
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">  Confirmation</h4>
                </div>
                <div class="modal-body uk-text-center ">

                    <h4 class="mt40"> Do you want to delete this card?</h4>
                    <hr>
                    <button type="submit" class="btn btn-primary   radius-20">Yes</button>&nbsp;&nbsp;&nbsp;
                    <button type="button" class="btn btn-default   radius-20" data-dismiss="modal">No</button>
                </div>

            </div>

        </div>
    </div>
    <!-- Delete Confirmation end -->
}
@section Scripts{

    <script type="text/javascript">
        function DeleteCard(id) {

            $("#Id").val(id);
            $("#delete").modal('show');
        }
        function UpdateCard(id) {

            window.location.href="/KiiPayBusiness/KiiPayBusinessSavedCreditDebitCard/UpdateCard?Id="+id
        }

    </script>
}