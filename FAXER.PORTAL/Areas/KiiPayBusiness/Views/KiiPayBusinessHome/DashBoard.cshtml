<div class="modal fade" id="withdrawal-code">
    <div class="modal-dialog model_md">
        <div class="modal-content">
            <div class="modal-body text-center">

                <div class="row">
                    <div class="col-lg-offset-3 col-lg-6">
                        <span id="usersList">
                            @Html.DropDownList("UserId", (IEnumerable<SelectListItem>)ViewBag.KiiBusinessUsers, "Select User", new { @class = "form-control", @OnChange = "GetNewAccessCode()", id = "userId" })
                        </span>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-offset-3 col-lg-6">
                        <div id="message">
                            <h1>  <span>Your code is  <br> <span class="text-primary" id="AccessCode"> </span></span></h1>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
