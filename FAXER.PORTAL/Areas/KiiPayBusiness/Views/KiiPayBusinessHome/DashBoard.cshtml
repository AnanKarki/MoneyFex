<!-- withdrawal-code -->


@section Scripts{

    <script type="text/javascript">

        function SelectUser() {
            $("message").hide();
            $("#withdrawal-code").modal('show');
        };


        function GetNewAccessCode() {
            var kiiPayUSerId = $("#userId").val();
            if (kiiPayUSerId == 0 || kiiPayUSerId == undefined) {
                $("#AccessCode").text("");
            }
            $.getJSON("/KiiPayBusiness/KiiPayBusinessHome/GetWithdrawalCode?kiiPayUSerId=" + kiiPayUSerId, function (result) {

                $("#AccessCode").text(result.AccessCode);

                $("#withdrawal-code").modal('show');

            });
        }
    </script>
}