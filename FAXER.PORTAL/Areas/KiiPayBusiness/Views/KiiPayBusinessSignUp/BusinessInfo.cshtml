@model FAXER.PORTAL.Areas.KiiPayBusiness.ViewModels.SignUpViewModel.kiiPayBusinessInfoVM
@{
    ViewBag.Title = "BusinessInfo";
    Layout = "~/Areas/KiiPayBusiness/Views/Shared/_Layout_KiiPayBusiness.cshtml";
}


@using (Html.BeginForm())
{
    <!--  -->
    <div class="real_form pattern2">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="login_signup text-center">
                        <div class="text-center">
                            <h3>Sign up your business to <b class="text-primary">KiiPay</b></h3>
                        </div>
                        <hr>
                        <form>
                            <div class="pinside20">



                                <!--  -->
                                <div class="form-group">

                                    @Html.DropDownListFor(model => model.CountryOfIncorporation, (IEnumerable<SelectListItem>)ViewBag.Countries, "Country of incorporation", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CountryOfIncorporation, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.BusinessName, new { @class = "form-control", @placeholder = "Legal name of business" })
                                    @Html.ValidationMessageFor(model => model.BusinessName, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.RegistrationNumber, new { @class = "form-control", @placeholder = "Registration number" })
                                    @Html.ValidationMessageFor(model => model.RegistrationNumber, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                 
                                    @Html.EnumDropDownListFor(model => model.BusinessType, new { @class = "form-control" })
                                    @Html.ValidationMessage("BusinessType", "", new { @class = "text-danger" })

                                </div>
                                <!--  -->



                            </div>
                            <div class="clearfix">
                                <hr>
                            </div>
                            <!--  -->

                            <div class="col-lg-12 mb20 ">
                                <button type="submit" class="btn btn-primary radius-20">Continue <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                            </div>
                            <!--  -->

                            <div class="clearfix">

                            </div>
                        </form>

                    </div>
                    <div class="clearfix">

                    </div>
                </div>

            </div>
        </div>

    </div>
    <!--  -->
}