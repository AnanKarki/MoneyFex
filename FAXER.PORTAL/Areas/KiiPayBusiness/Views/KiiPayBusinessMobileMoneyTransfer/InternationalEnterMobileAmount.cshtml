@model FAXER.PORTAL.Areas.KiiPayBusiness.ViewModels.KiiPayBusinessInternationalEnterMobileAmountVM
@{
    ViewBag.Title = "  International Mobile Enter Amount";
    Layout = "~/Areas/KiiPayBusiness/Views/Shared/_Layout_KiiPayBusiness.cshtml";
}

@using (Html.BeginForm())
{

    <!--  -->
    <div class="real_form pattern2 pdt40 ">
        <div class="container">

            <div class="row">
                <!-- Available balance -->
                <div class="col-lg-4 col-lg-offset-4 ">
                    <div class="text-right wallet-balance  mb15">
                        <h5>Available balance</h5>
                        <h1 class="text-primary">@Model.SenderCurrencySymbol@Model.AvailableBalanceDollar.<small class="text-primary">@Model.AvailableBalanceCent</small></h1>
                    </div>
                </div>
                <!-- Available balance -->
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">

                    <div class="login_signup mb50 clearfix text-center">
                        <div class="flex-container amount-group flex-middle">
                            <div>
                                <div class="userimage  ">
                                    <img src="@Model.SenderImageUrl" alt="">
                                </div>
                            </div>
                            <div>
                                <span class="font-30 text-primary"> @Model.Sender</span>
                            </div>
                        </div>

                        <div class="amount-group mb5  row ">

                            <div class="col-lg-5">
                                <label>Sending Amount</label>
                                @Html.TextBoxFor(x => x.SendingAmount, new { @class = "amount", @placeholder = "£0.00", @type = "number" })
                                <div class="gbpusd">
                                    @Model.SenderCurrencyCode
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <span class="text-primary font-20">OR</span>
                            </div>
                            <div class="col-lg-5">
                                <label>Receiving Amount</label>
                                @Html.TextBoxFor(x => x.ReceivingAmount, new { @class = "amount", @placeholder = "£0.00", @type = "number" })
                                <div class="gbpusd">
                                    @Model.ReceiverCurrencyCode
                                </div>
                            </div>
                        </div>


                        <div class="pinside20">

                            <div class="estimate-calculator" style="">
                                <div class="wrapper">

                                    <dl>
                                        <dt>Fee</dt>
                                        <dd class="fee" data-outbound-currency="USD"> @Model.SenderCurrencySymbol @Model.TransferFee</dd>
                                    </dl>
                                    <dl>
                                        <dt>You pay</dt>
                                        <dd class="fee" data-outbound-currency="USD"> @Model.SenderCurrencySymbol @Model.TotalAmount</dd>
                                    </dl>
                                    <dl>
                                        <dt>They receive</dt>
                                        <dd class="fee" data-outbound-currency="USD"> @Model.ReceiverCurrencySymbol @Model.ReceivingAmount</dd>
                                    </dl>
                                    <div class="clearfix">

                                    </div>
                                </div>
                                <div class="exchange-rate-holder">
                                    Exchange rate
                                    <span data-outbound-currency="GBP">@Model.SenderCurrencyCode 1</span> = <span class="exchange-rate" data-inbound-currency="GHS">@Model.ReceiverCurrencyCode @Model.ExchangeRate</span>
                                </div>
                            </div>


                        </div>

                    </div>
                    <div class="clearfix"></div>

                    <div class="text-center   clearfix">
                        <hr>

                        <button type="submit" class="btn btn-primary btn-lg mb30">Send This Amount <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        <!-- back btn -->
                        <div class="clearfix ">

                            <center>
                                <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                            </center>
                        </div>
                        <!-- back btn end-->
                    </div>
                </div>

                <!--  -->

            </div>

        </div>
    </div>
}