@model FAXER.PORTAL.Areas.KiiPayBusiness.ViewModels.KiiPayBusinessMobileMoneyTransferVM
@{
    ViewBag.Title = "Mobile Money Transfer";
    Layout = "~/Areas/KiiPayBusiness/Views/Shared/_Layout_KiiPayBusiness.cshtml";
}
@using (Html.BeginForm())
{
    <div class="real_form pattern2 pdt40 ">
        <div class="container">

            <div class="row">
                <!-- Available balance -->
                <div class="col-lg-4 col-lg-offset-4 ">
                    <div class="text-right wallet-balance  mb15">
                        <h5>Available balance</h5>
                        <h1 class="text-primary">@Model.CurrencySymbol@Model.AvailableBalanceDollar.<small class="text-primary">@Model.AvailableBalanceCent</small></h1>
                    </div>
                </div>
                <!-- Available balance -->
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">

                    <div class="login_signup mb50 clearfix text-center">
                        <h3>Pay a Mobile Wallet</h3>
                        <hr>

                        <div class="form-group">
                            @Html.DropDownListFor(model => model.RecentMobileNumber, (IEnumerable<SelectListItem>)ViewBag.RecentNumbers, " Recent Mobile  Number", new { @class = "form-blue" })
                            @Html.ValidationMessageFor(model => model.RecentMobileNumber, "", new { @class = "text-danger validationRed" })
                        </div>

                        <div class="form-group">
                            <h2 class="text-primary text-center">OR</h2>
                        </div>


                        <div class="form-group">
                            @Html.TextBoxFor(model => model.NewMobileNumber, new { @Class = "form-blue", @type = "number", @palaceholder = "Enter Mobile Number" })
                            @Html.ValidationMessageFor(model => model.NewMobileNumber, "", new { @class = "text-danger validationRed" })
                        </div>

                        <h4 class="text-center mb30">Sending Money to another Country?   <a href=" @Url.Action("InternationalMoileMonueySending", "KiiPayBusinessMobileMoneyTransfer", new { @Area = "KiiPayBusiness" })">Change</a></h4>

                    </div>
                    <div class="clearfix"></div>
                    <div class="text-center   clearfix">
                        <hr>

                        <button type="submit" class="btn btn-primary btn-lg mb30">Continue <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        <!-- back btn -->
                        <div class="clearfix ">

                            <center>
                                <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                            </center>
                        </div>
                        <!-- back btn end-->
                    </div>
                </div>

                <!--  -->

            </div>

        </div>
    </div>
}