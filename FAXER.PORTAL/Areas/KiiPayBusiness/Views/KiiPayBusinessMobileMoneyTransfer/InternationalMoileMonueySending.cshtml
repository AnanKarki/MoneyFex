@model FAXER.PORTAL.Areas.KiiPayBusiness.ViewModels.KiiPayBusinessInternationalMobileMoneySendingVM
@{
    ViewBag.Title = "  National Mobile Money Sending";
    Layout = "~/Areas/KiiPayBusiness/Views/Shared/_Layout_KiiPayBusiness.cshtml";
}

@using (Html.BeginForm())
{
    <!--  -->
    <div class="real_form pattern2 pdt40 ">
        <div class="container">

            <div class="row">
                <!-- Available balance -->
                <div class="col-lg-4 col-lg-offset-4 ">
                    <div class="text-right wallet-balance  mb15">
                        <h5>Available balance</h5>
                        <h1 class="text-primary">@Model.CurrencySymbol@Model.AvailableBalanceDollar.<small class="text-primary">@Model.AvailableBalanceCent</small></h1>
                    </div>
                </div>
                <!-- Available balance -->
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 ">




                    <div class="login_signup mb50 clearfix text-center">
                        <h3>Send Money to a Mobile Wallet</h3>
                        <hr>

                        <div class="form-group mb30">
                            @Html.DropDownListFor(model => model.Country, (IEnumerable<SelectListItem>)ViewBag.Countries, " Select Country", new { @class = "form-blue" })
                            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger validationRed" })

                        </div>


                        <div class="form-group contact-no-group">
                            <div class="countr-code-lg">
                                @Model.CountryPhoneCode-
                            </div>
                            @Html.TextBoxFor(x => x.NewNumber, new { @class = "form-blue contact-no-lg", @type = "number", @placeholder = "Enter Mobile Number" })
                        </div>
                        <div class="form-group mb20">
                            <h2 class="text-primary text-center">OR</h2>
                        </div>

                        <div class="form-group mb30">
                            @Html.DropDownListFor(model => model.RecentNumber, (IEnumerable<SelectListItem>)ViewBag.RecentNumbers, " Recent Mobile  Number", new { @class = "form-blue" })
                            @Html.ValidationMessageFor(model => model.RecentNumber, "", new { @class = "text-danger validationRed" })

                        </div>
                    </div>
                    <div class="clearfix"></div>


                    <div class="text-center   clearfix">
                        <hr>

                        <button type="submit" class="btn btn-primary btn-lg  mb30 ">Continue <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        <!-- back btn -->
                        <div class="clearfix ">

                            <center>
                                <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                            </center>
                        </div>
                        <!-- back btn end-->
                    </div>
                </div>

                <!--  -->

            </div>

        </div>
    </div>
}