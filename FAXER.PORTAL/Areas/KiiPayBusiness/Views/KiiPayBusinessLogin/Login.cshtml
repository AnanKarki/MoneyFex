@model FAXER.PORTAL.Areas.KiiPayBusiness.ViewModels.KiiPayBusinessLoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/KiiPayBusiness/Views/Shared/_Layout_KiiPayBusiness.cshtml";
}
@using (Html.BeginForm())
{


    <!--  -->
    <div class="real_form pattern2">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="login_signup text-left">
                        <div class="text-center">
                            <img src="~/Areas/KiiPayBusiness/images/logo.png" alt=""> Business
                        </div>
                        <hr>
                        <form>
                            <div class="mt40">

                                <!--  -->

                                <div class="col-lg-12  mb20">
                                    <div class="form-group">

                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @type = "email", @placeholder = "Email or mobile number" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>

                                <!--  -->
                                <!--  -->

                                <div class="col-lg-12  mb20">
                                    <div class="form-group">

                                        <div class="input-group">

                                            @Html.PasswordFor(model => model.Password, new { @placeholder = "Password", @class = "form-control", @id = "show_password" })
                                            <div class="input-group-addon" onclick="showPass();" id="passwoed_show"><i class="fa fa-eye"></i></div>
                                            
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="clearfix">
                                <hr>
                            </div>
                            <!--  -->
                            <div class="text-center">
                                <div class="col-lg-12 mb20 ">
                                    <button type="submit"  class="btn btn-primary radius-20">Log in <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                                </div>
                                <!--  -->
                                <div class="col-lg-12 mb20 ">
                                    <a href="@Url.Action( "ForgotPassword" , "KiiPayBusinessLogin")">Forgot Password</a>
                                </div>

                                <div class="or-border mb20">
                                    OR
                                </div>
                                <div class="col-lg-12 ">

                                    <a href="@Url.Action("BusinessLoginInformaton" , "KiiPayBusinessSignUp")">Sign Up</a>

                                </div>
                            </div>
                            <div class="clearfix">

                            </div>
                        </form>

                    </div>
                    <div class="clearfix">

                    </div>
                </div>

            </div>
        </div>

    </div>
    <!--  -->

 }
    <script type="text/javascript">
        function showPass() {
            var x = document.getElementById("show_password");
            if (x.type == "password") {
                x.type = "text";
            }
            else {

                x.type = "password";
            }
        };
    </script> 