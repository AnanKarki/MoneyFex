<table class="section" cellpadding="0" cellspacing="0">
    <tr>
        <td class="column ngeku-img" width="100" valign="top">
            <table>
                <tbody>
                    <tr>
                        <td align="left">
                            <img src="@baseUrl/Areas/EmailTemplate/images/ngeku.png">
                        </td>
                    </tr>
                </tbody>
            </table>
        </td>
        <td class="column" width="20" valign="top">
            <table>
                <tbody>
                    <tr>
                        <td> &nbsp; </td>
                    </tr>
                </tbody>
            </table>
        </td>
        <td class="column" width="480" valign="top">
            <table>
                <tbody>

                    <tr>
                        <td>
                            <h1 style="font-size: 30px; color: #004468;  line-height:14px; margin: 20px 0;"> Hi @ViewBag.SenderFristName, </h1>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h1 style="font-size: 28px; font-weight: bold; color: #02b6ff; display: block;  display: block; line-height: 35px;">
                                Money transferred to @ViewBag.RecipentName has been cancelled by MoneyFex.

                            </h1>
                            <h1 style="font-size: 18px; color:#333; line-height: 10px; margin-top: 20px;">
                                Below are the full details of your transaction:
                            </h1>

                            @if (ViewBag.TransferMethod == FAXER.PORTAL.DB.TransactionTransferMethod.BankDeposit)
                            {
                                <h1 style="font-size: 20px; font-weight: bold; color: #02b6ff; display: block;  display: block; line-height: 30px;">
                                    Transaction number: @ViewBag.TransactionNumber<br>
                                    Exchange rate: @ViewBag.SendingCurrrency 1 = @ViewBag.ExchangeRate @ViewBag.ReceivingCurrency<br>
                                    You sent: @ViewBag.SendingCurrrency @ViewBag.SendingAmount to @ViewBag.ReceiverCountry<br>
                                    Fee: @ViewBag.SendingCurrrency @ViewBag.Fee<br>
                                    Ukesh received: @ViewBag.ReceivingCurrency @ViewBag.ReceivingAmount<br>
                                    Bank Name: @ViewBag.BankName<br>
                                    Bank account: @ViewBag.BankAccount<br>
                                    Branch code: @ViewBag.BankCode
                                </h1>
                            }
                            else if (ViewBag.TransferMethod == FAXER.PORTAL.DB.TransactionTransferMethod.CashPickUp)
                            {
                                <h1 style="font-size: 20px; font-weight: bold; color: #02b6ff; display: block;  display: block; line-height: 30px;">
                                    Transaction number: @ViewBag.TransactionNumber<br>
                                    Exchange rate: @ViewBag.SendingCurrrency 1 = @ViewBag.ExchangeRate @ViewBag.ReceivingCurrency<br>
                                    You sent: @ViewBag.SendingCurrrency @ViewBag.SendingAmount to @ViewBag.ReceiverCountry<br>
                                    Fee: @ViewBag.SendingCurrrency @ViewBag.Fee<br>
                                    Ukesh received: @ViewBag.ReceivingCurrency @ViewBag.ReceivingAmount<br>
                                    Mobile No: @ViewBag.MobileNo<br>
                                </h1>
                            }
                            else
                            {
                                <h1 style="font-size: 20px; font-weight: bold; color: #02b6ff; display: block;  display: block; line-height: 30px;">
                                    Transaction number: @ViewBag.TransactionNumber<br>
                                    Exchange rate: @ViewBag.SendingCurrrency 1 = @ViewBag.ExchangeRate @ViewBag.ReceivingCurrency<br>
                                    You sent: @ViewBag.SendingCurrrency @ViewBag.SendingAmount to @ViewBag.ReceiverCountry<br>
                                    Fee: @ViewBag.SendingCurrrency @ViewBag.Fee<br>
                                    Ukesh received: @ViewBag.ReceivingCurrency @ViewBag.ReceivingAmount<br>
                                    Wallet Provider: @ViewBag.WalletName<br>
                                    Mobile No: @ViewBag.MobileNo<br>
                                </h1>
                            }
                            <h1 style="font-size: 20px; color:#333;  line-height: 30px; margin-top: 20px;">
                                Please contact our office to discuss a refund if payment has been collected by us or onward transfer to other recipients of your choice.
                            </h1>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h1 style="font-size: 22px; color: #004468;  line-height:14px; margin: 40px 0;">Thank You</h1>
                        </td>
                    </tr>




                    <tr>
                        <td>
                        </td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>

</table> 