
@{
    ViewBag.Title = "Index";
    // Layout = "~/Areas/EmailTemplate/Views/Shared/_Layout_Email.cshtml";
    Layout = "~/Areas/EmailTemplate/Views/Shared/New_Layout_Email.cshtml";

    var baseUrl = Request.Url.GetLeftPart(UriPartial.Authority);

}

<br />
<table>
   
    <tbody style="padding: 30px 0 !important; display: block;">
        <tr>
            <td width="25%;"><img src="@baseUrl/Areas/EmailTemplate/images/ngeku-welcome.png" width="100%"></td>
            <td valign="top">
                <h1 style="font-size: 24px; color: #004468; margin-bottom: 20px; line-height: 35px;">Hi <b> @ViewBag.FirstName</b>,</h1>
                <h1 style="font-size: 24px; color: #02b6ff; margin-bottom: 8px; line-height: 35px;">Welcome to MoneyFex, the fast, easy and cheap way to transfer money.</h1>
            </td>
        </tr>

        <tr>
            <td></td>
            <td>
                @if (ViewBag.CustomerNo != null && ViewBag.CustomerNo.Contains("MFB"))
                {
                    <h3 style="color: #004468; margin-top: 0;">Your business account details: </h3>
                }
                else
                {
                    <h3 style="color: #004468; margin-top: 0;">Your account details:</h3>

                }
                <p style="line-height: 30px; font-size: 18px; color: #02b6ff;">
                    Use your email address  or mobile number to login to your account and keep a record of your customer number<br>
                    Email login:   <a style=" color:#004468; text-decoration: none;" target="_blank" href="  @ViewBag.Email">  @ViewBag.Email</a><br>
                    Mobile login:  <a style=" color:#004468; text-decoration: none;" target="_blank" href="#">@ViewBag.MobileNo</a><br />
                    @*Verification Code:  <a style=" color:#004468; text-decoration: none;" target="_blank" href="#">@ViewBag.VerificationCode</a>*@

                    Customer number:   <a style=" color:#004468; text-decoration: none;" href="#">@ViewBag.CustomerNo</a>

                </p>
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <p style="margin:20px 0; color: #004468; font-size: 20px; line-height: 30px; font-weight: bold;"> Thank you</p>
            </td>
        </tr>

    </tbody>
</table>



