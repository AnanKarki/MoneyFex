
@{
    Layout = "~/Areas/EmailTemplate/Views/Shared/_Layout_Receipt.cshtml";
}

<div style="padding:20px">


    <h4 style="text-align:center">Virtual Account Withdrawal Confirmation of Payment Receipt</h4>

        <table  width="100%">

            <tbody>
                <tr>
                    <td><b>MF Receipt Number</b></td>
                    <td><b>@ViewBag.MFReceiptNumber</b></td>
                </tr>
                <tr>
                    <td><b>Date</b></td>
                    <td><b>@ViewBag.TransactionDate</b></td>
                </tr>
                <tr>
                    <td><b>Time</b></td>
                    <td><b>@ViewBag.TransactionTime</b></td>
                </tr>
                <tr>
                    <td><b>Virtial Account Registrar Name </b></td>
                    <td><b>@ViewBag.FaxerFullName</b></td>
                </tr>
                <tr>
                    <td><b>Virtial Account Registrar Country </b></td>
                    <td><b>@ViewBag.FaxerCountry</b></td>
                </tr>
                <tr>
                    <td><b>Virtial Account Registrar City </b></td>
                    <td><b>@ViewBag.FaxerCity</b></td>
                </tr>
                <tr>
                    <td><b>Virtual Account Number</b></td>
                    <td><b>@ViewBag.MFTCCardNumber</b></td>
                </tr>
                <tr>
                    <td><b>Virtual Account Name </b></td>
                    <td><b>@ViewBag.CardUserFullName</b></td>
                </tr>
                <tr>
                    <td><b>Virtual Account Registered Country </b></td>
                    <td><b>@ViewBag.CardUserCountry</b></td>
                </tr>

                <tr>
                    <td><b>Virtual Account Registered City </b></td>
                    <td><b>@ViewBag.CardUserCity</b></td>
                </tr>

                <tr>
                    <td><b>Paying Agent Name</b></td>
                    <td><b>@ViewBag.AgentName</b></td>
                </tr>
                <tr>
                    <td><b>Paying Agent Code</b></td>
                    <td><b>@ViewBag.AgentCode</b></td>
                </tr>
                <tr>
                    <td><b>Paying Agent Country</b></td>
                    <td><b>@ViewBag.AgentCountry</b></td>
                </tr>
                <tr>
                    <td><b>Paying Agent City</b></td>
                    <td><b>@ViewBag.AgentCity</b></td>
                </tr>

                <tr>
                    <td><b>Paying Agent Telephone Number</b></td>
                    <td><b>@ViewBag.AgentTelephoneNumber</b></td>
                </tr>
                <tr>
                    <td><b>Withdrawal Amount</b></td>
                    <td><b>@ViewBag.AmountWithdrawn @ViewBag.Currency</b></td>

                </tr>

            </tbody>
        </table>
    
</div>

