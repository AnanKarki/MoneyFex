
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/EmailTemplate/Views/Shared/_Layout_Receipt.cshtml";
}

<div style="padding:20px">


    <h4 style="text-align:center">Confirmation of Payment Receipt</h4>

    <center>
        <table width="100%">

            <tbody>
                <tr>
                    <td><b>Receipt Number</b></td>
                    <td><b>@ViewBag.MFReceiptNumber</b></td>
                </tr>
                <tr>
                    <td><b>Date</b></td>
                    <td><b>@ViewBag.TransactionDate</b></td>
                </tr>
                <tr>
                    <td><b>Time</b></td>
                    <td><b>@ViewBag.TransactionTime</b></td>
                </tr>
                <tr>
                    <td><b>Sender's Full Name</b></td>
                    <td><b>@ViewBag.FaxerFullName</b></td>
                </tr>

                <tr>
                    <td><b>Receiver's Full Name</b></td>
                    <td><b>@ViewBag.ReceiverFullName</b></td>
                </tr>
                <tr>
                    <td><b>Receiver's Telphone</b></td>
                    <td><b>@ViewBag.Telephone</b></td>
                </tr>

                <tr>
                    <td><b>Bank Name</b></td>
                    <td><b>@ViewBag.BankName</b></td>
                </tr>
                <tr>
                    <td><b>Account Number</b></td>
                    <td><b>@ViewBag.AccountNo</b></td>
                </tr>
                <tr>
                    <td><b>Branch Code</b></td>
                    <td><b>@ViewBag.BranchCode</b></td>
                </tr>
                <tr>
                    <td><b>Receiving Country</b></td>
                    <td><b>@ViewBag.ReceivingCountry</b></td>
                </tr>
                
                <tr>
                    <td><b>Amount Transferred</b></td>
                    <td><b>@ViewBag.AmountSent</b></td>

                </tr>
                <tr>
                    <td><b>Transfer Fees</b></td>
                    <td><b>@ViewBag.Fee</b></td>
                </tr>
                <tr>
                    <td><b>Exchange Rates</b></td>
                    <td><b>@ViewBag.ExchangeRate</b></td>
                </tr>

                <tr>
                    <td><b>Amount to be Received</b></td>
                    <td><b>@ViewBag.AmountReceived</b></td>

                </tr>
                <tr>
                    <td><b>Total Amount + Fees</b></td>
                    <td><b>@ViewBag.TotalSentAmount</b></td>
                </tr>


            </tbody>
        </table>
    </center>
</div>
