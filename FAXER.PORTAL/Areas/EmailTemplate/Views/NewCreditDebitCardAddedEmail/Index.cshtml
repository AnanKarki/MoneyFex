
@{
    Layout = "~/Areas/EmailTemplate/Views/Shared/_Layout_Email.cshtml";

    var baseUrl = HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority);
}

<div style="padding:20px">
    <p>
        Dear @ViewBag.FaxerName,
    </p>
    <p>
        This is to confirm that you have successfully added a new card ending with  @ViewBag.LastForDigitOfCreditOrDebitCard to your MoneyFex  profile.
    </p>
    <p>
        This card will be used for all your <i><b>Standing Orders Payments</b></i> and Deposits.
    </p>
    <br />


    <table style="width:100%; ">
        <tbody>
            <tr>
                <td style="border-color: #fff;
                        padding: 5px; text-align: center;">
                    <a href="@ViewBag.SetAutoTopUp" target="_blank"><img src="@baseUrl/Areas/EmailTemplate/Images/EmailImg/21.png" alt=""></a>
                    @*<a href="https://www.google.com"><img src="@baseUrl/Areas/EmailTemplate/Images/EmailImg/21.png" alt=""></a>*@
                </td>
                <td style="border-color: #fff;
                        padding: 5px; text-align: center;">
                    <a href="@ViewBag.TopUpMoneyfaxCard" target="_blank"><img src="@baseUrl/Areas/EmailTemplate/Images/EmailImg/20.png" alt=""></a>
                </td>
                <td style="border-color: #fff;
                        padding: 5px; text-align: center;">
                    <a href="@ViewBag.PayForGoodsAbroad" target="_blank"><img src="@baseUrl/Areas/EmailTemplate/Images/EmailImg/23.png" alt=""></a>
                </td>
            </tr>
        </tbody>
    </table>
  
    @*<br />
    <br />
    <a href="@ViewBag.TopUpMoneyfaxCard" style="margin-left:160px;">
        <button class="button-box" style="font-size:20px;background-color:darkblue;color: white;width:350px;height:40px">Deposit a MoneyFex Virtual Account</button>
    </a>
    <br />
    <br />
    <a href="@ViewBag.PayForGoodsAbroad" style="margin-left:160px;">
        <button class="button-box" style="font-size:20px;background-color:saddlebrown;color: white;width:350px;height:40px">Pay for Goods and Services Abroad</button>
    </a>
    <br />*@


</div>

