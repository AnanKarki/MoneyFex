@model FAXER.PORTAL.Areas.Staff.ViewModels.StaffEmailComposeViewModel
@{
    ViewBag.Title = "View Message";
    Layout = "~/Areas/Staff/Views/Shared/_staff_layout.cshtml";
}
@{Html.RenderPartial("_mail_sidebar");}




<div class="col-lg-9 col-md-8">

    <div class="dashboard_header">
        <h1>@Model.Subject</h1>
    </div>
    <!--  -->
    <div class="dashboard_body">
        <div class=" ">
            <div class=" ">

                <!--  -->
                <div class="col-lg-3">
                    <label>@ViewBag.FromTo    :</label>
                </div>

                <div class="col-lg-8 ">
                    @if (@ViewBag.FromTo == "From")
                    {
                        @Model.FromEmailAddress
                    }
                    else if (ViewBag.FromTo == "To")
                    {
                        @Model.ToEmailAddress
                    }

                </div>
                <div class="clearfix"></div>
                <!--  -->
                <!--  -->
                <br />
                <div class="clearfix"></div>
                <!--  -->
                <!--  -->
                
                <div class="clearfix"></div>
                <!--  -->
                <!--  -->
                @if (!string.IsNullOrEmpty(Model.AttachmentURL))
                {
                    <div class="col-lg-3">
                        <label>Attachment :</label>
                    </div>

                    <div class="col-lg-4 ">
                        <div class="form-group">
                            <a href="@Model.AttachmentURL" target="_blank" class="btn btn-success btn-sm btn-block btn-rounded">Download</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                }


                <!--  -->
                <!--  -->


                <div class="col-lg-12 ">
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.BankPaymentReference, new { @class = "form-control", @placeholder = "Mail Body", @rows = "5", @readonly = "readonly" })
                    </div>
                </div>
                <div class="clearfix"></div>

                <!--  -->


            </div>
        </div>




    </div>
</div>

