
@{
    ViewBag.Title = "PasswordResetSeurityCode";
    Layout = "~/Areas/Staff/Views/Shared/_staff_layout.cshtml";
}

<div class="dynamic_bg_form ">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">

                <h1>Password Reset Security Code</h1>

            </div>


        </div>
    </div>


</div>
<!--  -->
<!--  -->
<form method="post">
    <div class="real_form pattern1">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="login_signup">
                        <div class=" ">
                            <h4>To reset your password, you must enter the one time security code sent to your registered email address by the security team at MoneyFeX Services</h4>

                        </div>
                        <hr>


                        <!--  -->


                        <div class="col-lg-12 ">
                            <div class="form-group">
                                <input type="text" name="PasswordRequestCode" class="form-control" placeholder=" Enter one time Security Code">

                            </div>
                        </div>

                        <!--  -->
                        <!--  -->

                        <div class="col-lg-12 ">
                            @*<a href="@Url.Action("ProceedToPasswordReset")" class="btn btn-primary  btn-sm">Proceed to Password Reset  <i class="fa fa-chevron-right" aria-hidden="true"></i></a>*@
                            <button type="submit" class="btn btn-primary  btn-sm">Proceed to Password Reset  <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        </div>
                        <!--  -->



                        <div class="clearfix"></div>


                    </div>
                </div>

            </div>
        </div>


    </div>
</form>
@if (ViewBag.Message != "")
{
    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="onload" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">MoneyFeX Service-Alert</h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-lg-3">
                            <div class="icon_al">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true" style="font-size:90px;color: #fa0601;"></i>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <h4>@ViewBag.Message</h4>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close alert window</button>
                </div>
            </div>
        </div>
    </div>
}

