
@{
    ViewBag.Title = "RequestSecurityCode";
    Layout = "~/Areas/Staff/Views/Shared/_staff_layout.cshtml";
}

<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">

                <h1>Request Security Code:</h1>
            </div>
        </div>
    </div>

</div>
<!--  -->
<!--  -->
<div class="real_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="login_signup">
                    <div class=" ">
                        <h4>To ensure your account is protected at all, we will email a one-time security code that allow you to securely reset your password</h4>

                    </div>
                    <hr>
                    <form method="post">
                        <!--  -->


                        <div class="col-lg-12 ">
                            <div class="form-group">
                                <input type="email" name="EmailAddress" class="form-control" placeholder="Email Address">
                            </div>
                        </div>

                        <!--  -->
                        <!--  -->
                        <div class="col-lg-12 ">
                            <button type="submit" class="btn btn-primary  btn-sm">Request Security Code <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        </div>
                        <!--  -->

                        <div class="clearfix"></div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>
<!--  -->
@if (ViewBag.Message != "")
{
    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="onload" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title">MoneyFeX Service-Alert</h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-lg-3">
                            <div class="icon-alert">
                                <i class="fa fa-exclamation-triangle" aria-hidden="true" style="font-size:90px;color: #fa0601;"></i>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <h4>@ViewBag.Message</h4>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close alert window</button>
                </div>
            </div>
        </div>
    </div>
}