                                                <tr>
                                                    <th>SN.</th>
                                                    <th>Country</th>
                                                    <th>Bank Acc No.</th>
                                                    <th>Branch Identifier</th>
                                                    <th>Identifier no.</th>
                                                    <th>Transfer Type</th>

                                                    <th>Action</th>
                                                </tr>
                                            </thead>
