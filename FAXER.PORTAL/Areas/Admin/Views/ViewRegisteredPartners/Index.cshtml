@section Scripts{
    <script type="text/javascript">
        function filter() {

            var Country = $("#Country").val();
            var City = $("#City").val();
            var Search = $("#Search").val();
            window.location.href = "/Admin/ViewRegisteredPartners/Index?Country=" + Country + "&City=" + City + "&Search=" + Search;

        }

        jQuery("input[name='Search']").val('@ViewBag.Search');


    </script>

