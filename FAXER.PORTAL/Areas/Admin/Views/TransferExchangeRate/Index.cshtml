</div>


@section scripts{
    <script type="text/javascript">


        function filter() {

            var transferType = $("#TransferType").val();
            var sendingCountry = $("#SendingCountry").val();
            var receivingCountry = $("#ReceivingCountry").val();
            var transferMethod = $("#TransferMethod").val();
            var agent = $("#Agent").val();
            window.location.href = "/Admin/TransferExchangeRate/Index?SendingCountry=" + sendingCountry + "&ReceivingCountry=" + receivingCountry + "&TransferType=" + transferType + "&Agent=" + agent + "&transferMethod=" + transferMethod;
        }

        function DeletePopUp(id) {
            Riddha.UI.Confirm("Are you sure you want to Delete?", function () {
                Riddha.ajax.get("/Admin/TransferExchangeRate/DeleteTExchangeRate?id=" + id, null)
                    .done(function (result) {
                        if (result.Data == true) {
                            Riddha.UI.SuccessPopUp(result.Message, "Deleted Successfully!", 0);
                        }
                        else {
                            Riddha.UI.Alert(result.Message, "Something went wrong. Please try again!", 0);
                        }
                    });
            });
        }


    </script>
}


