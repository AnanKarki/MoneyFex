@section scripts{
    <script type="text/javascript">

        function filter() {

            var Country = $("#Country").val();
            var ContactPerson = $("#ContactPerson").val();
            var Telephone = $("#Telephone").val();
            var Email = $("#Email").val();
            var TransferMethod = $("#TransferMethod").val();

            window.location.href = "/Admin/APIProvider/Index?country=" + Country + "&TransferMethod=" + TransferMethod +
                "&ContactPerson=" + ContactPerson + "&Telephone=" + Telephone + "&Email=" + Email;

        }
        $("#TransferMethod").val('@ViewBag.TransferMethod');

        function DeletePopUp(id) {
            Riddha.UI.Confirm("Are you sure you want to Delete?", function () {
                Riddha.ajax.get("/Admin/APIProvider/Delete?id=" + id, null)
                    .done(function (result) {
                        if (result.Data == true) {
                            Riddha.UI.SuccessPopUp(result.Message, "success", 0);
                        }
                        else {
                            Riddha.UI.Alert(result.Message, "warning", 0);
                        }
                    });
            });
        }
    </script>
}

