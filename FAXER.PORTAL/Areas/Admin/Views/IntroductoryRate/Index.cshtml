@section scripts{
    <script type="text/javascript">

        function filter() {

            var transferType = $("#TransferType").val();
            var sendingCountry = $("#SendingCountry").val();
            var receivingCountry = $("#ReceivingCountry").val();
            var TransferMethod = $("#TransferMethod").val();
            var agent = $("#Agent").val();

            window.location.href = "/Admin/IntroductoryRate/Index?SendingCountry=" + sendingCountry + "&ReceivingCountry=" + receivingCountry + "&TransferType=" + transferType + "&Agent=" + agent + "&TransferMethod=" + TransferMethod;

        }

        $("#TransferType").val('@ViewBag.TransferType');

        function DeletePopUp(id) {
            Riddha.UI.Confirm("Are you sure you want to Delete?", function () {
                Riddha.ajax.get("/Admin/IntroductoryRate/DeleteRate?Id=" + id, null)
                    .done(function (result) {
                        if (result.Data == true) {
                            Riddha.UI.SuccessPopUp(result.Message, "Success", 0);
                        }
                        else {
                            Riddha.UI.Alert(result.Message, "Warning", 0);
                        }
                    });
            });
        }
    </script>
