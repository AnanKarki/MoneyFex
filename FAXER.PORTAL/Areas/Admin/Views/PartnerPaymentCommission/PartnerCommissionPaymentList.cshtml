@model List<FAXER.PORTAL.Areas.Admin.ViewModels.PartnerCommissionPaymentListViewModel>
@{
    ViewBag.Title = "PartnerCommissionPaymentList";
    Layout = "~/Areas/Admin/Views/Shared/New_Layout.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-body">
                    <div class="row">

                        <div class="col-sm-12">

                            <div class="card">

                                <div class="card-header border-bottom">
                                    <h4 class="f-left f-left m-t-5 m-b-0"> <label class="text-primary">ABC Bank/James Indiguor</label>  <span>Account No: 15484814</span></h4>
                                    <button onclick="window.history.go(-1);" class=" btn btn-primary f-right btn-round">
                                        <i class="fa fa-angle-left m-r-5"></i> Back
                                    </button>
                                </div>

                                <div class="card-body">
                                    <div class="row m-t-20 m-b-20">
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Day", (IEnumerable<SelectListItem>)ViewBag.Day, "Select Day", new { @class = "js-example-data-array form-control form-control-round form-control-bold", @id = "Day", @onchange = "filter();" })

                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">

                                                <select name="" class="js-example-data-array form-control form-control-round form-control-bold" id="Month" onchange="filter();">
                                                    <option value="0">Select Month </option>
                                                    <option value="1">January</option>
                                                    <option value="2">February</option>
                                                    <option value="3">March</option>
                                                    <option value="4">April</option>
                                                    <option value="5">May</option>
                                                    <option value="6">June</option>
                                                    <option value="7">July</option>
                                                    <option value="8">August</option>
                                                    <option value="9">September</option>
                                                    <option value="10">October</option>
                                                    <option value="11">November</option>
                                                    <option value="12">December</option>
                                                </select>
                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Year", (IEnumerable<SelectListItem>)ViewBag.Year, "Select Year", new { @class = "js-example-data-array form-control form-control-round form-control-bold", @id = "Year", @onchange = "filter();" })

                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                <select class="form-control  form-control-round form-control-bold" id="TransferMethod" name="TransferMethod" onchange="filter();" value="@ViewBag.TransferMethod">
                                                    @*<option value="0">Select Transfer Method</option>*@
                                                    <option value="0">All</option>
                                                    <option value="1"> MobileWallet</option>
                                                    <option value="2"> KiiPayWallet</option>
                                                    <option value="3"> BillPayment</option>
                                                    <option value="4"> ServicePayment</option>
                                                    <option value="5"> CashPickUp</option>
                                                    <option value="6"> BankDeposit</option>
                                                </select>

                                            </div>
                                        </div>
                                        <!--  -->


                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="custom-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>#SN</th>
                                                    <th>Status</th>
                                                    <th>Type</th>
                                                    <th>Amount</th>
                                                    <th>Due Date</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{ int i = 0}
                                                @foreach (var item in Model)
                                                {
                                                    i++;
                                                    <tr>
                                                        <td>@i</td>
                                                        <td><label class="label label-warning">@item.Status</label></td>
                                                        <td>@item.Type</td>
                                                        <td>@item.CurrencySymbol @item.Amount</td>
                                                        <td>@item.DueDate</td>
                                                        <td>
                                                            <a href="@Url.Action("PartnerCommissionPaymentDetails","PartnerPaymentCommission")">Details</a>
                                                        </td>
                                                    </tr>


                                                }

                                            </tbody>

                                        </table>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section scripts{
    <script type="text/javascript">

        function filter() {


            var TransferMethod = $("#TransferMethod").val();
            var year = $("#Year").val();
            var month = $("#Month").val();
            var Day = $("#Day").val();
            var agentId = '@ViewBag.AgentId'

            window.location.href = "/Admin/PartnerPaymentCommission/PartnerCommissionPaymentList?&transactionServiceType=" + TransferMethod + "&year=" + year + "&month=" + month + "&Day=" + Day ;

        }
        $("#TransferType").val('@ViewBag.TransferType');
        $("#Month").val('@ViewBag.Month');
        $("#TransferMethod").val('@ViewBag.TransferMethod');

    </script>
