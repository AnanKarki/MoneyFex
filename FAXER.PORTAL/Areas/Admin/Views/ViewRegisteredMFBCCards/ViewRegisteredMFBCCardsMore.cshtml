@model FAXER.PORTAL.Areas.Admin.ViewModels.ViewRegisteredMFBCCardsViewModel
@{
    ViewBag.Title = "ViewRegisteredMFBCCardsMore";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>ViewRegisteredMFBCCardsMore</h2>


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">

                <a href="@Url.Action("Index","ViewRegisteredMFBCCards", new { @CountryCode= FAXER.PORTAL.Common.MiscSession.CountryCode, @City = FAXER.PORTAL.Common.MiscSession.City})" class="btn btn-info btn-rounded waves-effect waves-light"><span class="btn-label"><i class="fa fa-angle-left"></i></span> Back to Registered MFBC Cards </a>

            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                <ol class="breadcrumb">
                    <li><a href="/Admin/AdminDashboard">Dashboard</a></li>
                    <li><a href="@Url.Action("Index","ViewRegisteredMFBCCards")">View - Registered MFBC Cards</a></li>
                    <li class="active">@Model.BusinessName</li>
                </ol>

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">

                <div class="white-box">

                    <table class="csv display nowrap" cellspacing="0" width="100%">

                        <thead>
                            <tr>

                                <td><strong>Number of reg MFTC Card</strong></td>

                                <td><strong>MFBC Card User Full Name </strong></td>
                                <td><strong>DoB</strong></td>
                                <td><strong>Gender</strong></td>
                                <td><strong>MFBC Card User Full Address</strong></td>
                                <td><strong>Tel</strong></td>
                                <td><strong>Email</strong></td>
                                <td><strong>MFBC Card User Photo <small>(Downloadable)</small></strong></td>
                                <td><strong>MFBC Card Photo </strong></td>


                            </tr>

                        </thead>
                        <tbody>


                            <tr>

                                <td>To do later after asking</td>

                                <td>@Model.CardUserFulllName</td>
                                <td> @Model.CardUserDoB.ToString("dd-MM-yyyy")  </td>
                                <td>@Model.CardUserGender</td>
                                <td>@Model.CardUserFullAddress</td>
                                <td>@Model.CountryPhoneCode@Model.PhoneNumber</td>
                                <td>@Model.CarduserEmail</td>
                                <td><a href="@Model.CardUserPhoto" target="_blank"><img src="@Model.CardUserPhoto" class="document_attached" width="50" height="50"></a></td>
                                <td><a href="@Model.CardPhoto" target="_blank"><img src="@Model.CardPhoto" class="document_attached" width="50" height="50"></a></td>


                            </tr>

                        </tbody>

                    </table>



                </div>
            </div>

        </div>
    </div>
   </div>

