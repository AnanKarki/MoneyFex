@model FAXER.PORTAL.Areas.Admin.ViewModels.AddNewBusinessAlertViewModel
@{
    ViewBag.Title = "EditAlert";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>EditAlert</h2>

@using (Html.BeginForm("EditAlert", "ViewBusinessAlerts", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Edit Business Merchant Alert</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                    <a href="@Url.Action("Index", "ViewBusinessAlerts")" class="btn btn-info pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light btn-rounded">View -Business Merchant Alerts</a>

                    <ol class="breadcrumb">
                        <li><a href="/Admin/AdminDashboard">Dashboard</a></li>
                        <li class="active">Edit Business Merchant Alert</li>
                    </ol>

                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="white-box">
                        <div class="col-lg-8">


                            <div class="form-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <!--  -->
                                        <div class="form-group">
                                            <label>Alert Country </label>
                                            @Html.HiddenFor(model => model.Id)
                                            @Html.TextBoxFor(model => model.Country, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                        <!--  -->
                                    </div>

                                    <div class="col-lg-6">
                                        <!--  -->
                                        <div class="form-group">
                                            <label>Alert City </label>
                                            @Html.TextBoxFor(model => model.City, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                        <!--  -->
                                    </div>

                                    <div class="col-lg-6">
                                        <!--  -->
                                        <div class="form-group">
                                            <label>Alert Agent </label>
                                            @Html.TextBoxFor(model => model.BusinessName, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                        <!--  -->
                                    </div>

                                </div>
                                <!--  -->
                                <div class="row">
                                    <div class="col-lg-6">
                                        <!--  -->
                                        <div class="form-group">
                                            <label>Published Date </label>
                                            @*@Html.TextBoxFor(model => model.PublishedDate, new { @class = "date" })*@

                                            @Html.TextBoxFor(model => model.PublishedDate, new { @class = "form-control", type = "date" })
                                            @Html.ValidationMessageFor(model=> model.PublishedDate, "", new { @class = "text-danger" })
                                        </div>
                                        <!--  -->
                                    </div>
                                    <div class="col-lg-6">
                                        <!--  -->
                                        <div class="form-group">
                                            <label>End Date</label>
                                            @Html.TextBoxFor(model => model.EndDate, new { @class="form-control" , type = "date" })
                                            @*@Html.TextBoxFor(model => model.EndDate, new { @class = "date" })*@
                                            @Html.ValidationMessage("EndDate", "", new { @class = "text-danger" })
                                        </div>
                                        <!--  -->
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label>Alert Heading </label>
                                    @Html.TextBoxFor(model => model.Heading, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <!--  -->
                                <div class="form-group">
                                    <label>Full Alert Message </label>
                                    @Html.TextAreaFor(model => model.FullMessage, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FullMessage, "", new { @class = "text-danger" })
                                </div>
                                <!--  -->
                                <div class="row">
                                    <div class="col-lg-6">
                                        <!--  -->
                                        <div class="form-group">
                                            <label>Alert Photo </label>
                                            <input type="file" name="AlertPhoto" class="form-control">
                                        </div>

                                        <!--  -->
                                    </div>
                                    <div class="col-lg-6">
                                        <img src="@Model.Photo" width="100" height="100" />

                                    </div>
                                </div>



                                <hr>
                                <!--  -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg  btn-rounded pull-right">Publish </button>
                                </div>
                                <!--  -->

                            </div>



                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}