                                                    </div>

                                                    <!--  -->
                                                    <!--  -->

                                                    <div class="form-group">
                                                        <label>End Date</label>
                                                        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @id = "endDate", @class = "form-control form-control-lg form-control-round form-control-bold", type = "date", @data_date_change = "DateOfFinishChange" } })
                                                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })

                                                    </div>

                                                    <!--  -->
                                                    <!--  -->
                                                    <div class="p-10">
                                                        <h5>Alert Photo</h5>
                                                        <div class="col-lg-4">
                                                            <a href="@Model.Photo" target="_blank"><img src="@Model.Photo" id="Image" name="Image" alt=" " style="float: left; margin-right: 15px; width: 100px;"></a>
                                                        </div>
                                                        <hr>
                                                    </div>

                                                    <!--  -->
                                                    <!--  -->

                                                    <div class="form-group">
                                                        <label>Upload Photo</label>
                                                        <input type="file" name="AlertPhoto" class="form-control form-control-lg form-control-round" placeholder="Title" id="AlertPhoto">

                                                    </div>

                                                    <!--  -->




                                                </div>

                                            </div>

                                        </form>
                                    </div>

                                    <div class="card-footer bg-light">
                                        <div class="row">
                                            <div class="col-lg-4  col-sm-12 col-xs-12 offset-lg-4">
