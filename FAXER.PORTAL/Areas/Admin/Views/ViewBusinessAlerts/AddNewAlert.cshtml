@using (Html.BeginForm("AddNewAlert", "ViewBusinessAlerts", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="pcoded-content">
        <div class="pcoded-inner-content">

            <div class="main-body">
                <div class="page-wrapper">

                    <div class="page-body">
                        <div class="row">

                            <div class="col-sm-12">

                                <div class="card">

                                    <div class="card-header border-bottom">
                                        <h4 class="f-left f-left m-t-5 m-b-0">Business Message</h4>
                                        <a href="@Url.Action("Index", "ViewBusinessAlerts")" class=" btn btn-primary f-right btn-round">
                                            <i class="icofont icofont-eye m-r-5"></i> View Alert
                                        </a>
                                    </div>
                                    @Html.HiddenFor(x => x.Id)
                                    @Html.HiddenFor(x => x.Business)

                                    <div class="card-body">

                                        <form action="set-commission_submit" method="get" accept-charset="utf-8">
                                            <div class="row">
                                                <div class="col-lg-4  col-sm-12 col-xs-12 offset-lg-4">
                                                    <!--  -->

                                                    <div class="form-group">
                                                        <label>Country</label>
                                                        @Html.DropDownListFor(model => model.Country, (IEnumerable<SelectListItem>)ViewBag.Countries, "All Countries", new { @class = "form-control form-control-lg form-control-round form-control-bold", id = "country" })
                                                        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })

                                                    </div>

                                                    <!--  -->
                                                    <!--  -->

                                                    <div class="form-group">
                                                        <label>City</label>
                                                        @Html.DropDownListFor(model => model.City, (IEnumerable<SelectListItem>)ViewBag.Cities, "All Cities", new { @class = "form-control form-control-lg form-control-round form-control-bold", id = "city" })
                                                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })

                                                    </div>

                                                    <!--  -->
                                                    <!--  -->

                                                    <div class="form-group">
                                                        <label>Business</label>
                                                        @Html.DropDownListFor(model => model.Business, (IEnumerable<SelectListItem>)ViewBag.Business, "All Business", new { @class = "form-control form-control-lg form-control-round form-control-bold", id = "business", onchange = "GetBusinessAccountNo()" })
                                                        @Html.ValidationMessageFor(model => model.Business, "", new { @class = "text-danger" })

                                                    </div>

                                                    <!--  -->
                                                    <!--  -->

                                                    <div class="form-group">
                                                        <label> Business Account No.</label>
                                                        @Html.TextBoxFor(model => model.BusinessAccountNo, new { @class = "form-control form-control-lg form-control-round form-control-bold", id = "AcccountNumber", disabled = "disabled" })
                                                        @Html.ValidationMessageFor(model => model.BusinessAccountNo, "", new { @class = "text-danger" })
                                                    </div>

                                                    <!--  -->
                                                    <!--  -->

                                                    <div class="form-group">
                                                        <label> Alert Heading</label>
                                                        @Html.TextBoxFor(model => model.Heading, new { @class = "form-control form-control-lg form-control-round form-control-bold", @placeholder = "Enter Heading", id = "Heading" })
                                                        @Html.ValidationMessageFor(model => model.Heading, "", new { @class = "text-danger" })
                                                    </div>

                                                    <!--  -->
                                                    <!--  -->

                                                    <div class="form-group">
                                                        <label> Full Alert Message</label>

                                                        @Html.TextAreaFor(model => model.FullMessage, new { @class = "form-control form-control-lg   form-control-bold", rows = "5", placeholder = "Enter Full Alert Message", id = "Message" })
                                                        @Html.ValidationMessageFor(model => model.FullMessage, "", new { @class = "text-danger" })
                                                    </div>

                                                    <!--  -->
                                                    <!--  -->

                                                    <div class="form-group">
                                                        <label>Start Date</label>

                                                        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @id = "startDate", @class = "form-control form-control-lg form-control-round form-control-bold", type = "date", @data_date_change = "DateOfStartChange" } })
