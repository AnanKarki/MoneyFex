                                                <a onclick="Preview()" class="btn btn-primary btn-round pull-right"><i class="fa fa-eye"></i> Preview</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- popup -->
    <div class="modal fade" id="viewpopup" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-body text-justify">
                    <img src="@Model.Photo" alt=" " id="PopImage" style="float: left; margin-right: 15px; width: 300px;">
                    <h5 id="PopHeading"></h5>

                    <p id="PopMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-round" data-dismiss="modal"><i class="fa fa-remove"></i> Close</button>
                    <button onclick="Submit()" class="btn btn-primary btn-round"><i class="fa fa-send"></i> Publish</button>
                </div>
            </div>
        </div>
    </div>
    <!-- popup -->
}
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#country").change(function () {

                var country = $("#country").val();
                window.location.href = "/Admin/ViewBusinessAlerts/AddNewAlert?countryCode=" + country;
            });

            $("#city").change(function () {

                var country = $("#country").val();
                var city = $("#city").val();
                window.location.href = "/Admin/ViewBusinessAlerts/AddNewAlert?countryCode=" + country + "&city=" + city;
            });

        });

        function GetBusinessAccountNo() {

            var business = $("#business").val();
            $.getJSON("/Admin/ViewBusinessAlerts/GetBusinesAccounNo?businessId=" + business, function (result) {

                var AccountNumber = result.Data;
                $("#AcccountNumber").val(AccountNumber);
            });
        }
        function Submit() {

            $("form")[0].submit();
        }

        function Preview() {

            var heading = $("#Heading").val();
            var fullMessage = $("#Message").val();
            var photo = $('#AlertPhoto').attr('src');


            $("#PopHeading").text(heading);
            $("#PopMessage").text(fullMessage);
            $('#PopImage').attr('src', photo);

            $("#viewpopup").modal("show");
        }



    </script>
}
