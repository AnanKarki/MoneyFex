@model FAXER.PORTAL.Areas.Admin.ViewModels.RegisterAStaffViewModel
@{
    ViewBag.Title = "RegisterAStaff";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>RegisterAStaff</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Register a Staff</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                    <a href="/Admin/ViewRegisteredStaffDetails" class="btn btn-info pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light btn-rounded">View Registered Staff</a>

                    <ol class="breadcrumb">
                        <li><a href="/Admin/AdminDashboard">Dashboard</a></li>
                        <li class="active">Register a Staff</li>
                    </ol>

                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="white-box">
                        <div class="form-body">

                            <!--  -->
                            <div class="col-lg-3 control-label">
                                <label> First Name <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">

                                    @Html.TextBoxFor(model => model.StaffFirstName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StaffFirstName, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-3 control-label">
                                <label>Middle Name </label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">

                                    @Html.TextBoxFor(model => model.StaffMiddleName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-3 control-label">
                                <label>Last Name <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">

                                    @Html.TextBoxFor(model => model.StaffLastName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StaffLastName, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-3 control-label">
                                <label>Date of Birth <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">

                                    @Html.EditorFor(model => model.StaffDOB, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                    @Html.ValidationMessageFor(model => model.StaffDOB, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-3 control-label">
                                <label>Country of Birth <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.StaffBirthCountry, (IEnumerable<SelectListItem>)ViewBag.Countries, "Select Country", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StaffBirthCountry, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-3 control-label">
                                <label>Gender <span class="required">*</span></label>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.EnumDropDownListFor(model => model.StaffGender, "Select Gender", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StaffGender, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-3 control-label">
                                <label>Email Address <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">

                                    @Html.TextBoxFor(model => model.StaffEmailAddress, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StaffEmailAddress, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                            <!--  -->
                            <div class="col-lg-3 control-label">
                                <label>Confirm Email <span class="required">*</span></label>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">

                                    @Html.TextBoxFor(model => model.ConfirmEmail, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ConfirmEmail, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <!--  -->
                        </div>
                        <div class="col-lg-3"></div>
                        <div class="col-lg-4">
                            <div class="form-actions text-center">
                                <button class="btn btn-success btn-lg btn-block btn-rounded">   Next </button>

                            </div>
                        </div>

                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}