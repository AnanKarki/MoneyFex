                @section scripts{
                    <script type="text/javascript">

        function filter() {

            var Country = $("#Country").val();
            var Cities = $("#Cities").val();
            var TransferMethod = $("#TransferMethod").val();
            var date = $('input[name="dates"]').val();
            window.location.href = "/Admin/BusinessTransferLimit/BusinessTransferLimitHisotry/Index?Country=" + Country + "&City=" + Cities + "&TransferService=" + TransferMethod +
                "&DateRange=" + date ;

        }

        $("#Month").val('@ViewBag.month');
        $("#TransferMethod").val('@ViewBag.TransferMethod');
        $('input[name="dates"]').val('@ViewBag.DateRange');


        $(".applyBtn").click(function () {
            var date = $('input[name="dates"]').val();

            filter();
        });

                    </script>
