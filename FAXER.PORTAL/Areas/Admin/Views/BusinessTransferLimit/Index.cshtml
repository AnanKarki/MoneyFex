</div>



@section Scripts{
    <script type="text/javascript">

        function filter() {

            var Country = $("#Country").val();
            var Cities = $("#Cities").val();
            var TransferMethod = $("#TransferMethod").val();
            var Business = $("#Business").val();

            window.location.href = "/Admin/BusinessTransferLimit/Index?Country=" + Country + "&City=" + Cities + "&TransferService=" + TransferMethod + "&SenderId=" + Business;

        }

        function DeletePopUp(id) {
            Riddha.UI.Confirm("Are you sure you want to Delete?", function () {
                Riddha.ajax.get("/Admin/BusinessTransferLimit/DeleteLimit?id=" + id, null)
                    .done(function (result) {
                        if (result.Data == true) {
                            Riddha.UI.SuccessPopUp(result.Message, "Success", 0);
                        }
                        else {
                            Riddha.UI.Alert(result.Message, "Warning", 0);
                        }
                    });
            });
        }

    </script>
}

