<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-body">
                    <div class="row">



                        <div class="col-sm-12">

                            <div class="card">

                                <div class="card-header border-bottom">
                                    <h4 class="f-left f-left m-t-5 m-b-0">Transaction Limits </h4>
                                    <a href="@Url.Action("SetNewLimit", "BusinessTransferLimit" , new { @IsBusiness = isBusiness})" class="btn btn-primary f-right btn-round">
                                        <i class="icofont icofont-plus m-r-5"></i> Set New Limit
                                    </a>
                                </div>

                                <div class="card-body">
                                    <div class="row m-t-20 m-b-20">


                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.Countries, "Select Country", new { @class = "js-example-data-array form-control form-control-round form-control-bold", @id = "Country", @onchange = "filter();" })
                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Cities", (IEnumerable<SelectListItem>)ViewBag.Cities, "Select Cities", new { @class = "js-example-data-array form-control form-control-round form-control-bold", @id = "Cities", @onchange = "filter();" })
                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                <select class="js-example-data-array form-control form-control-round form-control-bold" id="TransferMethod" name="TransferMethod" onchange="filter();" value="@ViewBag.TransferMethod">
                                                    <option value="7">All           </option>
                                                    <option value="1">CashPickUp    </option>
                                                    <option value="2">KiiPayWallet  </option>
                                                    <option value="3">OtherWallet   </option>
                                                    <option value="4">BankDeposit   </option>
                                                    <option value="5">BillPayment   </option>
                                                    <option value="6">ServicePayment </option>
                                                </select>
                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Business", (IEnumerable<SelectListItem>)ViewBag.Business, "Select Business", new { @class = "js-example-data-array form-control form-control-round form-control-bold", @id = "Business", @onchange = "filter();" })
                                            </div>
                                        </div>
                                        <!--  -->



                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table class="table table-striped table-bordered nowrap ">
                                            <thead>
                                                <tr>
                                                    <th>#SN</th>
                                                    <th>Country</th>
                                                    <th>City</th>
                                                    @if (ViewBag.isBusiness)
                                                    {
                                                        <th>Business</th>
                                                    }
                                                    else
                                                    {
                                                        <th>Sender</th>
                                                    }
                                                    <td>Service</td>

                                                    <th>Amount</th>
                                                    <th>Frequency</th>
                                                    <th>Action</th>

                                                </tr>
                                            </thead>
                                            <tbody>

                                                @{ int i = 0;}
                                                @foreach (var item in Model)
                                                {
                                                    ++i;
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.Country</td>
                                                        <td>@item.City</td>
                                                        @if (isBusiness)
                                                        {
                                                            <td><a href="@Url.Action("BusinessDashboard", "RegisteredBusinessSender", new { @SenderId = item.SenderId })">@item.BusinessName</a></td>
                                                        }
                                                        else
                                                        {
                                                            <td><a href="@Url.Action("SenderDashboard", "ViewRegisteredFaxers", new { @SenderId = item.SenderId })">@item.SenderName</a></td>

                                                        }

                                                        <td>@item.TransferMethodName</td>
                                                        <td>@item.FrequencyAmount</td>
                                                        <td>@item.FrequencyName</td>

                                                        <td class="action-icon">

                                                            <a href="@Url.Action("SetNewLimit", "BusinessTransferLimit", new { @id = item.Id  , @IsBusiness = isBusiness})" class="m-r-15 text-success" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><i class="icofont icofont-ui-edit"></i></a>
                                                            <a href="#" onclick="DeletePopUp(@item.Id)" class="text-red alert-confirm " data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"><i class="icofont icofont-delete-alt"></i></a>

                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>

                                        </table>
                                        Page @(Model.PageCount < Model.PageNumber ? 0 :
                                        Model.PageNumber) of @Model.PageCount

                                        @Html.PagedListPager(Model, page => Url.Action("Index",
                                        new { @page = page }))
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
