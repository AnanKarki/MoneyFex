</div>


@section scripts{

    <script type="text/javascript">

        function filter() {
            var Agent = $("#Agent").val();
            var payingCountry = $("#PayingCountry").val();
            var MobileNo = $("#MobileNo").val();
            var AccountNo = $("#AccountNo").val();
            var id = 0;
            window.location.href = "/Admin/EnableManualBankDeposit/Index?PayingCountry=" + payingCountry + "&AgentId=" + Agent +
                "&AccountNo=" + AccountNo + "&MobileNo=" + MobileNo;
        }

        function DeletePopUp(id) {
            Riddha.UI.Confirm("Are you sure you want to Delete?", function () {
                Riddha.ajax.get("/Admin/EnableManualBankDeposit/Delete?id=" + id, null)
                    .done(function (result) {
                        if (result.Data == true) {
                            Riddha.UI.SuccessPopUp(result.Message, "Success", 0);
                        }
                        else {
                            Riddha.UI.Alert(result.Message, "Warning", 0);
                        }
                    });
            });
        }
    </script>

}

