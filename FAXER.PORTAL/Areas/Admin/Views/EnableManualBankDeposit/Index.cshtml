                                                @foreach (var item in Model)
                                                {

                                                    <tr>
                                                        <td>@item.PayingCountry</td>
                                                        <td><a href="@Url.Action("Index","AgentDashboard" , new{ id=item.AgentId })">@item.Agent</a></td>
                                                        <td><a href="@Url.Action("Index","AgentDashboard" , new {id=item.AgentId })">@item.AgentAccountNo</a></td>
