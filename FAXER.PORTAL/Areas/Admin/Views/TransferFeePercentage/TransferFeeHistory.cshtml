@section scripts{
    <script type="text/javascript">

        function filter() {
            debugger;
            var transferType = $("#TransferType").val();
            var sendingCountry = $("#SendingCountry").val();
            var receivingCountry = $("#ReceivingCountry").val();
            var TransferMethod = $("#TransferMethod").val();
            var year = $("#Year").val();
            var month = $("#Month").val();

            window.location.href = "/Admin/TransferFeePercentage/TransferFeeHistory?SendingCountry=" + sendingCountry + "&ReceivingCountry=" + receivingCountry
                + "&TransferType=" + transferType + "&TransferMethod=" + TransferMethod + "&Year=" + year + "&Month=" + month ;

        }
        $("#TransferType").val('@ViewBag.TransferType');
        $("#Month").val('@ViewBag.Month');
        $("#TransferMethod").val('@ViewBag.TransferMethod');

    </script>
}



