    </div>
</div>


@section scripts{
    <script type="text/javascript">

        function Fliter() {
            var country = document.getElementById("Country").value;
            var city = document.getElementById("city").value;
            var year = document.getElementById("Year").value;
            var month = document.getElementById("Month").value;
            var staffName = $("#staffName").val();
            window.location.href = "/Admin/StaffHolidays/Index?CountryCode=" + country + "&City=" + city + "&Year=" + year + "&Month=" + month + "&staffName=" + staffName;
        }
        function DeletePopUp(id) {
            Riddha.UI.Confirm("Are you sure you want to Delete?", function () {
                Riddha.ajax.get("/Admin/StaffHolidays/DeleteHolidays?id=" + id, null)
                    .done(function (result) {
                        if (result.Data == true) {
                            Riddha.UI.SuccessPopUp(result.Message, "Success", 0);
                        }
                        else {
                            Riddha.UI.Alert(result.Message, "Warning", 0);
                        }
                    });
            });
        }

    </script>
}