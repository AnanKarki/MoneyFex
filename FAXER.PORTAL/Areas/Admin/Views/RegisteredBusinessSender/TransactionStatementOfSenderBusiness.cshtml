@section scripts{
    <script type="text/javascript">


        var pageSize = "";
        var pageNum = "";
        var CurrentpageCount ='@ViewBag.CurrentpageCount' ;
        function filter() {
            debugger;
            var TransferMethod = $("#TransferMethod").val();
            var year = $("#Year").val();
            var month = $("#Month").val();
            var day = $("#day").val();
            var Identifier = $("#Identifier").val();
            window.location.href = "/Admin/RegisteredBusinessSender/TransactionStatementOfSenderBusiness?transactionServiceType=" + TransferMethod + "&year=" + year +
                "&month=" + month + "&day=" + day + "&Identifier=" + Identifier +
                "&page=" + pageNum + "&pageSize=" + pageSize + "&CurrentpageCount=" + CurrentpageCount;

        }
        $("#Month").val('@ViewBag.Month');
        $("#day").val('@ViewBag.day');


         var CurrentpageCount ='@ViewBag.CurrentpageCount' ;
         ShowBackButton();
        function ShowBackButton() {
            if (@CurrentpageCount != 0) {
                $("#backButton").show();
            } else {
                $("#backButton").hide();

            }
        }

         $("#PageSize").val('@ViewBag.PageSize');

        function ChangeButton(isGoToNextPage) {
              var TotalNumberOfpage = '@ViewBag.NumberOfPage';
            var pageCount = $("#pagecount").text();
            GetPagignationButton(TotalNumberOfpage, pageCount, isGoToNextPage);
        }

        $("#pageCountbtn button").each(function () {
            $($(this)[0]).on('click', function () {
                var pageno = $(this).text().trim();
                console.log($(this).text());
                pageNum = pageno;
                pageSize = $("#PageSize").val();
                filter();
            });
        })

        function GetDataForPageSizeFilter() {
            pageSize = $("#PageSize :selected").val();
            filter();
        }

    </script>
