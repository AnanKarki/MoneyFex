                                                        @Html.DropDownListFor(model => model.AgentId, (IEnumerable<SelectListItem>)ViewBag.Agents, "Select Agent Name", new { @id = "agent", @onChange = "getDetails();", @class = "form-control form-control-lg form-control-round form-control-bold" })
