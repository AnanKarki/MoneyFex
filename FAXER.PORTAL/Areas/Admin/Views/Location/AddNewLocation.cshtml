@section scripts{
    <script type="text/javascript">
        function getDetails() {
            var country = $("#country").val();
            var city = $("#city").val();
            var agentType = $("#agentType").val();
            var agentId = $("#agent").val();
            window.location.href = "/Admin/Location/AddNewLocation?CountryCode=" + country + "&City=" + city + "&agentType=" + agentType + "&City=" + city + "&agentId=" + agentId;
        }
    </script>



