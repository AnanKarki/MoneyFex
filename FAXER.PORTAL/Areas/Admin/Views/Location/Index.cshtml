<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-body">
                    <div class="row">

                        <div class="col-sm-12">

                            <div class="card">

                                <div class="card-header border-bottom">
                                    <h4 class="f-left m-t-5 m-b-0">Location</h4>
                                    <a href="@Url.Action("AddNewLocation", "Location")" class="btn btn-primary f-right btn-round">
                                        <i class="icofont icofont-plus m-r-5"></i> Set Location
                                    </a>
                                </div>

                                <div class="card-body">
                                    <div class="row m-t-20 m-b-20">
                                        <!--  -->
                                        <div class="col-xl-4 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.Countries, "All Countries", new { @class = "js-example-data-array form-control form-control-round form-control-bold", id = "Country", onchange = "Fliter();" })



                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-4 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("City", (IEnumerable<SelectListItem>)ViewBag.SCities, "Choose City", new { @class = "js-example-data-array form-control form-control-round form-control-bold", id = "city", onchange = "Fliter();" })

                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-4 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Agent", (IEnumerable<SelectListItem>)ViewBag.Agents, "Select Agent", new { @class = "form-control  form-control form-control-round form-control-bold", @id = "AgentId", @onchange = "Fliter()" })

                                            </div>
                                        </div>
                                        <!--  -->

                                    </div>


                                    <div class="dt-responsive table-responsive">
                                        <table @*id="basic-btn"*@ class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>SN.</th>
                                                    <th>Country</th>
                                                    <th>City</th>
                                                    <th>Agent Name</th>
                                                    <th>Address</th>
                                                    <th>Contact Number</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{ int i = 0;}
                                                @foreach (var item in Model)
                                                {
                                                    i++;

                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.Country</td>
                                                        <td>@item.City</td>
                                                        <td><a href="agent-dashboard.php">@item.AgentName</a></td>
                                                        <td> @item.Address</td>
                                                        <td>@item.ContactNo</td>
                                                        <td class="action-icon">
                                                            <a href="@Url.Action("AddNewLocation","Location",new { @id=item.Id})" class="m-r-15 text-success" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><i class="icofont icofont-ui-edit"></i></a>
                                                            <a href="@Url.Action("DeleteLocation","Location",new { @id=item.Id})" class="text-red alert-confirm " data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"><i class="icofont icofont-delete-alt"></i></a>
                                                        </td>
                                                    </tr>

                                                }
                                            </tbody>

                                        </table>

                                        Page @(Model.PageCount < Model.PageNumber ? 0 :
                                                        Model.PageNumber) of @Model.PageCount

                                                        @Html.PagedListPager(Model, page => Url.Action("Index",
                                                            new { @page = page }))
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
                @section scripts{
                    <script type="text/javascript">

                        function Fliter() {
                            debugger;
                            var country = document.getElementById("Country").value;
                            var city = document.getElementById("city").value;
                            var agent = document.getElementById("AgentId").value;

                            window.location.href = "/Admin/Location/Index?CountryCode=" + country + "&City=" + city + "&AgentId=" + agent;
                        }
                        $("#Country").val(ViewBag.Country);
                        $("#city").val(ViewBag.City);
                    </script>
                }