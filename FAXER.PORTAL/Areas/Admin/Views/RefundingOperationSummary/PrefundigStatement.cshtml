@model List<FAXER.PORTAL.Areas.Admin.ViewModels.PrefundingStatementViewModel>
@{
    ViewBag.Title = "PrefundigStatement";
    Layout = "~/Areas/Admin/Views/Shared/New_Layout.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-body">
                    <div class="row">

                        <div class="col-sm-12">

                            <div class="card">

                                <div class="card-header border-bottom">
                                    <h4 class="f-left f-left m-t-5 m-b-0">Pre-Funding Statement </h4>

                                </div>

                                <div class="card-body">
                                    <div class="row m-t-20 m-b-20">






                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.Countries, "All Countries", new { @class = "js-example-data-array form-control form-control-round form-control-bold", id = "Country", onchange = "Fliter();" })



                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("City", (IEnumerable<SelectListItem>)ViewBag.SCities, "Choose City", new { @class = "js-example-data-array form-control form-control-round form-control-bold", id = "city", onchange = "Fliter();" })

                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Agent", (IEnumerable<SelectListItem>)ViewBag.Agents, "Select Agent", new { @class = "form-control  form-control form-control-round form-control-bold", @id = "AgentId", @onchange = "Fliter()" })


                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->

                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                <input type="text" name="datefilter" class=" form-control form-control-round form-control-bold" value="" placeholder="Select Year and Month" autocomplete="off" id="dates">
                                            </div>
                                        </div>
                                        <!--  -->





                                    </div>
                                    <div class="row m-t-20 m-b-20">
                                        <div class="col-lg-12">
                                            <ul class="breadcrumb-title">
                                                <li class="breadcrumb-item">
                                                    <a href="#">United Kingdom</a>
                                                </li>
                                                <li class="breadcrumb-item">
                                                    <a href="#">London</a>
                                                </li>

                                                <li class="breadcrumb-item">
                                                    <a href="#">ABC Ltd</a>
                                                </li>

                                                <li class="breadcrumb-item">
                                                    <a href="#">58587874</a>
                                                </li>

                                            </ul>
                                        </div>
                                    </div>



                                    <div class="clearfix">

                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap print">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>Staff Payer</th>
                                                    <th>Type</th>
                                                    <th>Money In</th>
                                                    <th>Money Out</th>
                                                    <th>Balance</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>

                                                        <td>@item.Date</td>
                                                        <td><a href="">@item.StaffPayer</a></td>
                                                        <td>@item.Type</td>
                                                        <td>@item.CurrencyIn @item.MoneyIn</td>
                                                        <td>@item.CurrencyOut @item.MoneyOut</td>
                                                        <td>@item.CurrencyIn @item.Balance</td>

                                                    </tr>
                                                }






                                            </tbody>





                                        </table>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section scripts{
    <script type="text/javascript">

        function Fliter() {
            var country = document.getElementById("Country").value;
            var city = document.getElementById("city").value;
            var agent = document.getElementById("AgentId").value;
            var date = document.getElementById("dates").value;
            window.location.href = "/Admin/RefundingOperationSummary/PrefundigStatement?CountryCode=" + country + "&City=" + city + "&AgentId=" + agent + "&Date=" + date;
        }

        $(".applyBtn").click(function () {
            Fliter();
        });
    </script>
}