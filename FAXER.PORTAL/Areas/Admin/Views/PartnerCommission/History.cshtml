@model List<FAXER.PORTAL.Areas.Admin.ViewModels.PartnerCommissionViewModel>
@{
    ViewBag.Title = "History";
    Layout = "~/Areas/Admin/Views/Shared/New_Layout.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-body">



                    <div class="row">

                        <div class="col-sm-12">

                            <div class="card">

                                <div class="card-header border-bottom">
                                    <h4 class="f-left m-t-5 m-b-0">Commission History</h4>

                                </div>

                                <div class="card-body">
                                    <div class="row m-t-20 m-b-20">




                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.Countries, "Select Country", new { @class = "form-control form-control-round form-control-bold", id = "Country", onchange = "filter();" })


                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("City", (IEnumerable<SelectListItem>)ViewBag.SCities, "Select City", new { @class = "form-control form-control-round form-control-bold", id = "City", onchange = "filter();" })


                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                @Html.DropDownList("Agent", (IEnumerable<SelectListItem>)ViewBag.Agents, "Select Agent", new { @class = "form-control form-control-round form-control-bold", id = "AgentId", onchange = "filter();" })

                                                <
                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                <input type="text" name="datefilter" class="form-control form-control-round form-control-bold" value="" placeholder="Year / Month" id="dates" />

                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-lg-3  col-md-6">
                                            <div class="form-group">
                                                <input type="text" placeholder="Search By Partner " class="form-control form-control-round form-control-bold" name="Partner" id="Partner" value="@ViewBag.Partner" onchange="filter();">
                                            </div>
                                        </div>


                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">

                                                <select class="js-example-data-array form-control form-control-round form-control-bold" name="Service" id="Service" onchange="filter()">
                                                    <option value="0">Select Method</option>
                                                    <option value="7">All</option>
                                                    <option value="1">CashPickUp</option>
                                                    <option value="2">KiiPayWallet</option>
                                                    <option value="3">OtherWallet</option>
                                                    <option value="4">BankDeposit</option>
                                                    <option value="5">BillPayment</option>
                                                    <option value="6">ServicePayment</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">

                                                <select class="js-example-data-array form-control form-control-round form-control-bold" name="Type" id="Type" onchange="filter()">
                                                    <option value="0">Select Type</option>
                                                    <option value="1">Commission On Fee</option>
                                                    <option value="2">Commission On Amount</option>
                                                    <option value="3">Flat Fee</option>

                                                </select>


                                            </div>
                                        </div>
                                    </div>




                                    <div class="dt-responsive table-responsive">
                                        <table  class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>Partner</th>
                                                    <th>Country</th>
                                                    <th>City</th>
                                                    <th>Agent</th>
                                                    <th>Service</th>
                                                    <th>Type</th>
                                                    <th>Sending</th>
                                                    <th>Receiving</th>
                                                    <th>Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <!--  -->
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.PartnerName</td>
                                                        <td>@item.Country</td>
                                                        <td>@item.City</td>
                                                        <td><a href="">@item.AgentName</a></td>

                                                        <td>@item.Service</td>
                                                        <td>@item.Type</td>
                                                        <td>@item.SendingCurrencySymbol @item.SendingAmount</td>
                                                        <td>@item.RecevingCurrencySymbol @item.RecevingAmount</td>
                                                        <td>
                                                            @item.CreationDate
                                                        </td>
                                                    </tr>

                                                }





                                            </tbody>
                                            <tbody>
                                                <!--  -->

                                                <tr>
                                                    <td>LED Ltd.</td>
                                                    <td>Ghana</td>
                                                    <td>Accra</td>
                                                    <td><a href="">GT Bank </a></td>

                                                    <td>KiiPay</td>
                                                    <td>Flat Fees</td>
                                                    <td>$0.20</td>
                                                    <td>$0.20</td>
                                                    <td>
                                                        Jan-01-2019
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>

                                                    <td>Bank Deposit</td>
                                                    <td>On Fees</td>
                                                    <td>$0.20</td>
                                                    <td>$0.20</td>
                                                    <td>
                                                        Jan-01-2019
                                                    </td>
                                                </tr>


                                                <tr>
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>

                                                    <td>Cash Pickup</td>
                                                    <td>On Amount</td>
                                                    <td>$0.20</td>
                                                    <td>$0.20</td>
                                                    <td>
                                                        Jan-01-2019
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>

                                                    <td>Other Wallet</td>
                                                    <td>Flat Fees</td>
                                                    <td>$0.20</td>
                                                    <td>$0.20</td>
                                                    <td>
                                                        Jan-01-2019
                                                    </td>
                                                </tr>

                                                <!--  -->
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@section scripts{
    <script type="text/javascript">

        function filter() {
            var country = document.getElementById("Country").value;
            var city = document.getElementById("City").value;
            var agent = document.getElementById("AgentId").value;
            var Partner = $("#Partner").val();
            var Service = $("#Service").val();
            var Type = $("#Type").val();

            window.location.href = "/Admin/PartnerCommission/History?CountryCode=" + country + "&City=" + city + "&AgentId=" + agent    "&Partner=" + Partner + "&Service=" + Service + "&Type=" + Type;
        }
    </script>
}