@using PagedList;
@using PagedList.Mvc;
@model IPagedList<FAXER.PORTAL.Areas.Admin.ViewModels.ReceiverTransactionStatement>

@{
    ViewBag.Title = "ReceiverTransactionStatement";
    Layout = "~/Areas/Admin/Views/Shared/New_Layout.cshtml";
}


<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-body">
                    <div class="row">

                        <div class="col-sm-12">

                            <div class="card">

                                <div class="card-header border-bottom">
                                    <h4 class="f-left f-left m-t-5 m-b-0">
                                        Receiver Transaction Statement
                                    </h4>
                                    <button onclick="window.history.go(-1);" class=" btn btn-primary f-right btn-round">
                                        <i class="fa fa-angle-left m-r-5"></i> Back
                                    </button>
                                </div>

                                <div class="card-body">
                                    <div class="row m-t-20 m-b-20">
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">

                                                <select name="" class="js-example-data-array form-control form-control-round form-control-bold" id="day" onchange="filter();">
                                                    <option value="0">Select Day</option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                    <option value="5">5</option>
                                                    <option value="6">6</option>
                                                    <option value="7">7</option>
                                                    <option value="8">8</option>
                                                    <option value="9">9</option>
                                                    <option value="10">10</option>
                                                    <option value="11">11</option>
                                                    <option value="12">12</option>
                                                    <option value="13">13</option>
                                                    <option value="14">14</option>
                                                    <option value="15">15</option>
                                                    <option value="16">16</option>
                                                    <option value="17">17</option>
                                                    <option value="18">18</option>
                                                    <option value="19">19</option>
                                                    <option value="20">20</option>
                                                    <option value="21">21</option>
                                                    <option value="22">22</option>
                                                    <option value="23">23</option>
                                                    <option value="24">24</option>
                                                    <option value="25">25</option>
                                                    <option value="26">26</option>
                                                    <option value="27">27</option>
                                                    <option value="28">28</option>
                                                    <option value="29">29</option>
                                                    <option value="30">30</option>
                                                    <option value="31">31</option>
                                                </select>
                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">

                                                <select name="" class="js-example-data-array form-control form-control-round form-control-bold" id="month" onchange="filter()">
                                                    <option value="0">Select Month </option>
                                                    <option value="1">January</option>
                                                    <option value="2">February</option>
                                                    <option value="3">March</option>
                                                    <option value="4">April</option>
                                                    <option value="5">May</option>
                                                    <option value="6">June</option>
                                                    <option value="7">July</option>
                                                    <option value="8">August</option>
                                                    <option value="9">September</option>
                                                    <option value="10">October</option>
                                                    <option value="11">November</option>
                                                    <option value="12">December</option>
                                                </select>
                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">

                                                @Html.DropDownList("Year", (IEnumerable<SelectListItem>)ViewBag.Year, "Select Year", new { @class = "js-example-data-array form-control form-control-round form-control-bold", @id = "year", @onchange = "filter();" })

                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">

                                                <select name="" class="form-control form-control-round form-control-bold" id="service" onchange="filter()">
                                                    <option value="4">Select Type</option>
                                                    <option value="0">Bank Account Deposit </option>
                                                    <option value="1">Other Mobile Wallet </option>
                                                    <option value="2">Cash Pickup </option>
                                                    <option value="3">KiiPay Wallet </option>
                                                </select>
                                            </div>
                                        </div>
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                <input type="text" placeholder="Search By Sender Name" class="form-control form-control-round form-control-bold" name="senderName" id="senderName" value="@ViewBag.senderName" onchange="filter();">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table @*id="custom-btn"*@ class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>#SN</th>
                                                    <th>Sender</th>
                                                    <th>Receiver</th>
                                                    <th>Method</th>
                                                    <th>Amount</th>
                                                    <th>Fee</th>
                                                    <th>Identifier</th>
                                                    <th>Date & Time</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @{int i = 0;}

                                                @foreach (var item in Model)
                                                {
                                                    i++;
                                                    <tr>
                                                        <td>@i</td>
                                                        <td><a href="">@item.SenderFullName</a></td>
                                                        <td><a href="@Url.Action("ReceiverNewTransactionStatement" ,"Receiver" , new { @ReceiverId = item.ReceiverId})">@item.ReceiverName</a></td>
                                                        <td>@item.ServiceType</td>
                                                        <td>@item.Amount</td>
                                                        <td>@item.Fee</td>
                                                        <td><a href="@Url.Action("ReceiverTransactionDetails" ,"Receiver" , new { transactionId = item.TransactionId , service = item.Service})">@item.Identifier</a></td>
                                                        <td>@item.DateTime</td>
                                                    </tr>
                                                }



                                            </tbody>

                                        </table>
                                        Page @(Model.PageCount < Model.PageNumber ? 0 :
                                                        Model.PageNumber) of @Model.PageCount

                                                        @Html.PagedListPager(Model, page => Url.Action("ReceiverTransactionStatement",
                                                            new { @page = page }))
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
                @section Scripts{
                    <script type="text/javascript">


        function filter() {

            var service = $("#service").val();
            var year = $("#Year").val();
            var month = $("#month").val();
            var day = $("#day").val();
            var senderName = $("#senderName").val();
            window.location.href = "/Admin/Receiver/ReceiverTransactionStatement?year=" + year + "&month=" + month + "&day=" + day + "&service=" + service + "&senderName=" + senderName ;

        }
        $("#service").val('@ViewBag.Service');
        $("#month").val('@ViewBag.Month');
        $("#day").val('@ViewBag.Day');
                    </script>


                }