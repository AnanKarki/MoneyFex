@model FAXER.PORTAL.Areas.Admin.ViewModels.ReceiverTransactionDetailsViewModel
@{
    ViewBag.Title = "ReceiverTransactionDetails";
    Layout = "~/Areas/Admin/Views/Shared/New_Layout.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-body">
                    <div class="row">

                        <div class="col-sm-12">


                            <div>
                                <div class="card">
                                    <div class="card-header border-bottom">
                                        <h4 class="f-left f-left m-t-5 m-b-0">
                                            <label class="text-primary">@Model.ReceiverName</label>
                                            <span>
                                                Phone No: @Model.ReceiverMobileNo
                                                <br>Country:  @Model.ReceivingCountry
                                            </span>
                                        </h4>
                                        <button onclick="window.history.go(-1);" class=" btn btn-primary f-right btn-round">
                                            <i class="fa fa-angle-left m-r-5"></i> Back
                                        </button>
                                    </div>
                                    <div class="card-body">
                                        <div class="col-lg-6  col-sm-12 col-xs-12 offset-lg-3">
                                            <div class="dt-responsive table-responsive">
                                                <table width="100%">
                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                <div class="p-t-10 p-b-10">
                                                                    <span class="text-primary">@Model.TransactionDate</span>
                                                                </div>
                                                            </td>
                                                            <td align="right">
                                                                <div class="p-t-10 p-b-10">
                                                                    <h5>@Model.ServiceName</h5>
                                                                    <span class="text-success">@Model.SendingCurrencySymbol @Model.TotalAmount @Model.SendingCurrency</span>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <table class="table table-striped table-bordered nowrap">
                                                    <tbody>
                                                        <tr>
                                                            <td class="text-left">Status</td>
                                                            <td class="text-left"> @Model.Status</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-left">Name</td>
                                                            <td class="text-left"> @Model.ReceiverName</td>
                                                        </tr>

                                                        <tr>
                                                            <td class="text-left">Country</td>
                                                            <td class="text-left"> @Model.ReceivingCountry</td>
                                                        </tr>
                                                        @if (Model.Service == FAXER.PORTAL.DB.Service.BankAccount)
                                                        {
                                                            <tr>
                                                                <td class="text-left">Bank Name</td>
                                                                <td class="text-left"> @Model.BankName</td>
                                                            </tr>

                                                            if (Model.IsEuropeTransfer == true)
                                                            {

                                                                <tr>
                                                                    <td class="text-left">BIC/SWIFT</td>
                                                                    <td class="text-left"> @Model.BankCode</td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="text-left">IBAN</td>
                                                                    <td class="text-left"> @Model.ReceiverAccountNo </td>
                                                                </tr>
                                                            }
                                                            else
                                                            {
                                                                <tr>
                                                                    <td class="text-left">Bank Code</td>
                                                                    <td class="text-left"> @Model.BankCode</td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="text-left">Account No</td>
                                                                    <td class="text-left"> @Model.ReceiverAccountNo</td>
                                                                </tr>
                                                            }

                                                        }
                                                        else if (Model.Service == FAXER.PORTAL.DB.Service.MobileWallet)
                                                        {
                                                            <tr>
                                                                <td class="text-left">Wallet Provider</td>
                                                                <td class="text-left"> @Model.MobileProvider</td>
                                                            </tr>
                                                        }
                                                        else if (Model.Service == FAXER.PORTAL.DB.Service.MobileWallet)
                                                        {
                                                            <tr>
                                                                <td class="text-left">MFCN</td>
                                                                <td class="text-left"> @Model.MFCN</td>
                                                            </tr>
                                                        }

                                                        <tr>
                                                            <td class="text-left">MF Reference</td>
                                                            <td class="text-left">@Model.ReceiptNo</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-left">Sending Amount</td>
                                                            <td class="text-left"> @Model.SendingCurrencySymbol<span class="GrossAmount">@Model.SendingAmount</span> </td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-left">Fee</td>
                                                            <td class="text-left"> @Model.SendingCurrencySymbol<span class="Fee">@Model.Fee </span></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-left">Amount Paid</td>
                                                            <td class="text-left"> @Model.SendingCurrencySymbol<span class="TotalAmount">@Model.TotalAmount </span></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-left">@Model.ReceiverFirstName will Receive</td>
                                                            <td class="text-left"> @Model.ReceivingCurrencySymbol<span class="ReceiveAmount">@Model.ReceivingAmount </span> </td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-left">Exchange Rate</td>
                                                            <td class="text-left"> 1 @Model.SendingCurrency = @Model.ExchangeRate @Model.ReceivingCurrency</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-left">Payment Method</td>
                                                            <td class="text-left">@Model.PaymentMethod</td>
                                                        </tr>

                                                        <tr>
                                                            <td class="text-left">Date</td>
                                                            <td class="text-left">@Model.FormattedDate</td>
                                                        </tr>
                                                        <tr></tr>
                                                        <tr></tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-footer bg-light">
                                        <div class="row">
                                            <div class="col-lg-6  col-sm-12 col-xs-12 offset-lg-3 text-center">

                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="clearfix ">
                                    <center>
                                        <a href="javascript:history.back()" class=" "><i class="fa fa-chevron-left" aria-hidden="true"></i> Go Back </a>
                                    </center>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
