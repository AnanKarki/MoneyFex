@model FAXER.PORTAL.Areas.Admin.ViewModels.AdminRegisteredAgentStaffInfoViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">

            </div>

            <div class="row">

                <div class="col-md-12">
                    <div class="white-box">
                        <div class="card" style="">

                            <div class="card-header border-bottom">
                                <h2 class="f-left f-left m-t-5 m-b-0" style="float:left;"> Details/Agent</h2>
                                @*<a href="@Url.Action("Index","BanReceiver")" class=" btn btn-info pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light btn-rounded" style="float:right;">
                                        <i class="icofont icofont-eye m-r-5"></i> View Banned Receiver
                                    </a>*@

                            </div>

                            <div class="card-body">

                                @Html.HiddenFor(x => x.AccountNumber)
                                @Html.HiddenFor(x => x.AgentStaffId)

                                <div class="row">
                                    <div class="col-md-12">
                                        <hr />
                                        <div class="col-lg-4  col-sm-12 col-xs-12 offset-lg-4">
                                            <!--  -->

                                            <div class="form-group">

                                                <label> Name</label>
                                                @Html.TextBoxFor(x => x.AgentName, new { @class = "form-control", @placeholder = "", })
                                                @Html.ValidationMessageFor(x => x.AgentName, "", new { @class = "text-danger" })


                                            </div>
                                            <!--  -->
                                            <!--  -->
                                            <div class="form-group">
                                                <label>Date of Birth</label>
                                                @Html.EditorFor(x => x.DateOfBirth, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                                @Html.ValidationMessageFor(x => x.DateOfBirth, "", new { @class = "text-danger" })

                                            </div>
                                            <!--  -->
                                            <!--  -->

                                            <div class="form-group">

                                                <label>Phone No.</label>
                                                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @placeholder = "" })
                                                @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "text-danger" })

                                            </div>
                                            <!--  -->
                                            <!--  -->

                                            <div class="form-group">
                                                <label>Email Address</label>
                                                @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.EmailAddress, "", new { @class = "text-danger" })
                                            </div>
                                            <!--  -->
                                            <!--  -->
                                            <div class="form-group">
                                                <label>Branch</label>
                                                @Html.TextBoxFor(x => x.Branch, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Branch, "", new { @class = "text-danger" })
                                            </div>
                                            <!--  -->
                                            <!--  -->
                                            <div class="form-group">
                                                <label>Address</label>
                                                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                                            </div>
                                            <!--  -->
                                            <!--  -->
                                            <label>Identification Information</label>
                                            <hr />

                                            <!--  -->
                                            <!--  -->
                                            <div class="form-group">
                                                <label>Id Card Type</label>
                                                @Html.DropDownListFor(x => x.IdCardType, (IEnumerable<SelectListItem>)ViewBag.IDTypes, "select Id card type", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.IdCardType, "", new { @class = "text-danger" })
                                            </div>
                                            <!--  -->
                                            <!--  -->
                                            <div class="form-group">
                                                <label>Id Card Number</label>
                                                @Html.TextBoxFor(x => x.IdCardNumber, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.IdCardNumber, "", new { @class = "text-danger" })
                                            </div>
                                            <!--  -->
                                            <!--  -->

                                            <div class="form-group">
                                                <label>Day</label>
                                                @Html.TextBoxFor(x => x.Day, new { @class = "form-control", @type = "number" })
                                                @Html.ValidationMessageFor(x => x.Day, "", new { @class = "text-danger" })
                                            </div>
                                            <!--  -->
                                            <!--  -->
                                            <div class="form-group">
                                                <label>Month</label>
                                                @Html.EnumDropDownListFor(model => model.Month, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Month, "", new { @class = "text-danger" })
                                            </div>
                                            <!--  -->
                                            <!--  -->
                                            <div class="form-group">
                                                <label>Year</label>
                                                @Html.TextBoxFor(x => x.Year, new { @class = "form-control", @type = "number" })
                                                @Html.ValidationMessageFor(x => x.Year, "", new { @class = "text-danger" })
                                            </div>


                                            <!--  -->
                                            <!--  -->
                                            <div class="form-group">
                                                <label>Issuing Country </label>
                                                @Html.DropDownListFor(x => x.IdIssuingCountry, (IEnumerable<SelectListItem>)ViewBag.IdIssuingCountry, "select Contry ", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.IdIssuingCountry, "", new { @class = "text-danger" })
                                            </div>
                                            <!--  -->

                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-light">
                                <div class="row">
                                    <div class="col-lg-4  col-sm-12 col-xs-12 offset-lg-4">

                                        <a href="@Url.Action("MoreDetails","AdminRegisteredAgentStaff" , new { @AccountNumber = Model.AccountNumber})" class="btn btn-warning btn-round pull-left"><i class="fa fa-ban"></i> cancel</a>
                                        <button type="submit" class="btn btn-primary btn-round pull-right"><i class="fa fa-save"></i> Save</button>



                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                </div>


            </div>

        </div>
    </div>
}