@model FAXER.PORTAL.Areas.Admin.ViewModels.ViewRegisteredFaxersViewModel
@{
    ViewBag.Title = "FaxersContactDetails";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>FaxersContactDetails</h2>

<!-- ============================================================== -->
<!-- Page Content -->
<!-- ============================================================== -->
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Sender Registration</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <a href="@Url.Action("Index", "ViewRegisteredFaxers")" class="btn btn-info pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light btn-rounded">View - Registered Faxers</a>
                    <ol class="breadcrumb">
                        <li><a href="/Admin/AdminDashboard">Dashboard</a></li>
                        <li class="active">Sender Registration</li>
                    </ol>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-12">
                    <div class="white-box">
                        <h3 class="box-title">Sender's Contact Details</h3>
                            <!--  -->
                            <div class="col-lg-3 control-label">
                                <label>Address 1 <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Address1, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="clearfix"></div>
                            
                            <div class="col-lg-3 control-label">
                                <label>Address 2</label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Address2, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            
                            <div class="col-lg-3 control-label">
                                <label>City <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-3 control-label">
                                <label>State/Province/Region <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.State, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            
                            <div class="col-lg-3 control-label">
                                <label>Zip/Postal Code <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.PostalCode, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                           
                            <div class="col-lg-3 control-label">
                                <label>Country <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.DropDownListFor(model => model.Country, (IEnumerable<SelectListItem>)ViewBag.countries, "Select your Country", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            
                            <div class="col-lg-3 control-label">
                                <label>Phone Number <span class="required">*</span></label>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="clearfix"></div>
                            <div class="col-lg-3 control-label"></div>
                            <div class="col-lg-4">
                                <div class="form-actions text-center">
                                   @* <a href="@Url.Action("Index", "ViewRegisteredFaxers")" class="btn btn-success btn-lg btn-block btn-rounded">   Finish </a>*@
                                    <button type="submit" class="btn btn-success btn-lg btn-block btn-rounded">   Finish </button>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
}
