@model FAXER.PORTAL.Areas.Admin.ViewModels.ViewRegisteredFaxersViewModel
@{
    ViewBag.Title = "FaxersIdentification";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>FaxersIdentification</h2>


<!-- ============================================================== -->
<!-- Page Content -->
<!-- ============================================================== -->
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Sender Registration</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <a href="@Url.Action("Index", "ViewRegisteredFaxers")" class="btn btn-info pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light btn-rounded">View - Registered Faxers</a>
                    <ol class="breadcrumb">
                        <li><a href="/Admin/AdminDashboard">Dashboard</a></li>
                        <li class="active">Sender Registration</li>
                    </ol>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-12">
                    <div class="white-box">
                        <h3 class="box-title">SENDER'S CONTACT DETAILS</h3>
                        <!--  -->
                        <div class="col-lg-3 control-label">
                            <label>ID Card Type</label>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.IDCardType, (IEnumerable<SelectListItem>)ViewBag.CardType, "Select your Card Type", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-3 control-label">
                            <label>ID Card Number </label>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.IDCardNumber, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-3 control-label">
                            <label>ID Card Expiring Date</label>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.EditorFor(model => model.IDCardExpDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-3 control-label">
                            <label>Issuing Country</label>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.DropDownListFor(model => model.IssuingCountry, (IEnumerable<SelectListItem>)ViewBag.countries, "Select your issuing Country", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <div class="col-lg-3 control-label"></div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                Are you most likely to make transactions of €1000 and over at a give time ?
                                <br /><label>
                                    @Html.CheckBoxFor(x => x.TransactionOver1000, new { @class = " checkbox-success" }) &nbsp Yes
                                </label>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <div class="col-lg-3 control-label"></div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                To comply with anti-money laundering regulations, MoneyFax Service requires a copy of your photo ID (driving Licence and passport are the only acceptable forms of ID)
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <div class="col-lg-3 control-label"></div>
                        <div class="col-lg-4">
                            <div class="form-group   ">
                                <input type="file" name="CardImage" class="form-control" value="Choose Image" />
                                @Html.ValidationMessageFor(model => model.IDCardImage)
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-3 control-label"></div>
                        <div class="col-lg-4">
                            <div class="form-actions text-center">
                                <button type="submit" class="btn btn-success btn-lg btn-block btn-rounded">   Next </button>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



