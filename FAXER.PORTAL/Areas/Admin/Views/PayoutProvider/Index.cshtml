@section scripts{
    <script type="text/javascript">

        function filter() {
            var SendingCountry = $("#SendingCountry").val();
            var ReceivingCountry = $("#ReceivingCountry").val();
            var TransferMethod = $("#TransferMethod").val();
            var TransferType = $("#TransferType").val();
            var ProviderName = $("#ProviderName").val();
            var Code = $("#Code").val();
            window.location.href = "/Admin/PayoutProvider/Index?SendingCountry=" + SendingCountry + "&ReceivingCountry=" + ReceivingCountry + "&TranferMethod=" + TransferMethod + "&TransferType=" + TransferType
                + "&ProviderName=" + ProviderName + "&Code=" + Code;
        }

        $("#TransferMethod").val('@ViewBag.TranferMethod');

       function DeletePopUp(id) {
           Riddha.UI.Confirm("Are you sure you want to Delete?", function () {
               Riddha.ajax.get("/Admin/PayoutProvider/Delete?id=" + id, null)
                   .done(function (result) {
                       if (result.Data == true) {
                           Riddha.UI.SuccessPopUp(result.Message, "success", 0);
                       }
                       else {
                           Riddha.UI.Alert(result.Message, "warning", 0);
                       }
                   });
           });
       }
    </script>
}
