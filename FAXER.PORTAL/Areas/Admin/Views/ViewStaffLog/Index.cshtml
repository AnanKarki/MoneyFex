@model List<FAXER.PORTAL.Areas.Admin.ViewModels.ViewStaffLogsViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">View View Logs</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">


                <ol class="breadcrumb">
                    <li><a href="/Admin/AdminDashboard">Dashboard</a></li>
                    <li class="active">View View Logs</li>
                </ol>

            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="col-lg-4">
            <div class="form-group">
                @Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.Countries, "Filter By Country", new { @class = "form-control", id = "Country", onchange = "Fliter();" })

            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                @Html.DropDownList("City", (IEnumerable<SelectListItem>)ViewBag.SCities, "Choose City", new { @class = "form-control", id = "city", onchange = "Fliter();" })
            </div>
        </div>
        <div class="clearfix"></div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">

                <div class="white-box">

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped csvprint  " cellspacing="0" width="100%">

                            <thead>
                                <tr>
                                    <td rowspan="2"><strong>SN.</strong></td>
                                    <td rowspan="2"><strong>Staff Name</strong></td>
                                    <td rowspan="2"><strong>Country</strong></td>
                                    <td rowspan="2"><strong>City</strong></td>

                                    <td rowspan="2"><strong>Login Level</strong></td>
                                    <td rowspan="2"><strong>Login Date</strong></td>
                                    <td rowspan="2"><strong>Login Time</strong></td>
                                    <td rowspan="2"><strong>Login Location</strong></td>
                                    <td rowspan="2"><strong>Logout Date</strong></td>
                                    <td rowspan="2"><strong>Logout Time</strong></td>
                                    <td rowspan="2"><strong>Logout Location</strong></td>
                                    <td rowspan="2"><strong>Time login to the system (Hours)</strong></td>
                                    <td rowspan="2"><strong>Current staff login status</strong></td>
                                    <td colspan="1"><strong>Activities logs</strong></td>
                                </tr>
                                <tr>
                                    <!-- <td><strong>Date</strong></td> -->
                                    <td><strong>View Logs</strong></td>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    i++;

                                    <tr>
                                        <td>@i</td>
                                        <td>@item.StaffFirstName @item.StaffMiddleName @item.StaffLastName</td>
                                        <td>@item.StaffCountry</td>
                                        <td>@item.StaffCity</td>
                                        <td>@item.StaffLoginLevel</td>
                                        <td>@item.LoginDate</td>
                                        <td>@item.LoginTime</td>
                                        <td>@item.LoginLocation</td>
                                        <td>@item.LogoutDate</td>
                                        <td>@item.LogoutTime</td>
                                        <td>@item.LogoutLocation</td>
                                        <td>@item.TimeLoginToSystem</td>
                                        <td>@item.CurrentLoginStatus</td>
                                        <!--  <td>
                                       <div class=" ">
                                          <input type="date" name=""  >
                                       </div>
                                    </td> -->
                                        <td><a href="@Url.Action("ViewLogs","ViewStaffLog", new { @id=item.StaffId})" class="btn btn-xs btn-warning">View Logs</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">

        function Fliter() {
            var country = document.getElementById("Country").value;
            var city = document.getElementById("city").value;
            window.location.href = "/Admin/ViewStaffLog/Index?CountryCode=" + country + "&City=" + city;
        }


    </script>
}