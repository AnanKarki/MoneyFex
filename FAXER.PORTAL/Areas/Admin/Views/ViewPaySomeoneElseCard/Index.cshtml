@model List<FAXER.PORTAL.Areas.Admin.ViewModels.ViewPaySomeoneElseCardViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<!-- ============================================================== -->
<!-- Page Content -->
<!-- ============================================================== -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">View-MFBC Card Withdrawal Usage</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">


                <ol class="breadcrumb">
                    <li><a href="/Admin/AdminDashboard">Dashboard</a></li>
                    <li class="active">View-MFBC Card Withdrawal Usage</li>
                </ol>

            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="col-lg-4">
            <div class="form-group">
                @Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.Countries, "Filter By Country", new { @class = "form-control", id = "Country", onchange = "Fliter();" })

            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                @Html.DropDownList("City", (IEnumerable<SelectListItem>)ViewBag.SCities, "Choose City", new { @class = "form-control", id = "city", onchange = "Fliter();" })
            </div>
        </div>
        <div class="clearfix"></div>



        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="white-box">


                    <div class="table-responsive">
                        <table class="csv  display nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <td rowspan="2">SN<strong></strong></td>
                                    <td colspan="4"><strong>Sender Information</strong></td>
                                    <td colspan="5"><strong>Virtual Account Information</strong></td>
                                    <td colspan="5"><strong>Deposit Details</strong></td>
                                    <td rowspan="2"><strong>Deposit Reference</strong></td>
                                    <td rowspan="2"><strong>Deposit By</strong></td>
                                    <td rowspan="2"><strong>Receipt  </strong></td>

                                </tr>


                                <tr>
                                    <td><strong>Sender Name</strong></td>
                                    <td><strong>Sender Account No</strong></td>
                                    <td><strong>Country</strong></td>
                                    <td><strong>City</strong></td>



                                    <td><strong>Virtual Account User Name</strong></td>
                                    <td><strong>Virtual Account No</strong></td>
                                    <td><strong>Virtual Account User Country</strong></td>
                                    <td><strong>Virtual Account User City</strong></td>
                                    <td><strong>Virtual Account User Email</strong></td>



                                    <td><strong>Deposit Amount</strong></td>
                                    <td><strong>Deposit Fee</strong></td>
                                    <td><strong>Receiving Amount</strong></td>
                                    <td><strong>Date</strong></td>
                                    <td><strong>Time</strong></td>


                                </tr>


                            </thead>


                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    i++;

                                <tr>
                                    <td>@i</td>
                                    <td>@item.SenderName</td>
                                    <td>@item.SenderAccountNo</td>
                                    <td>@item.SenderCountry</td>
                                    <td>@item.SenderCity</td>

                                    <td>@item.CardUserName</td>
                                    <td>@item.CardUserMFTCCardNO</td>
                                    <td>@item.CardUserCountry</td>
                                    <td>@item.CardUserCity</td>
                                    <td>@item.CardUserEmail</td>

                                    <td>@item.TopUpAmount</td>
                                    <td>@item.TopUpFee</td>
                                    <td>@item.ReceivingAmount</td>
                                    <td>@item.TransactionDate </td>
                                    <td>@item.TransactionTime</td>

                                    <td>@item.TopUpReference</td>
                                    <td>@item.TopUpBy</td>

                                    <td><a href="@Url.Action("PrintReceipt" ,"ViewPaySomeoneElseCard", new { @TransactionId = item.TransactionId} )" target="_blank" class="btn btn-sm btn-warning btn-rounded">PDF Receipt</a></td>


                                </tr>
                                }


                            </tbody>


                        </table>

                    </div>
                </div>
            </div>
        </div>
        <!-- .row -->
        <!--/.row -->
        <!--row -->
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        function Fliter() {
            var country = document.getElementById("Country").value;
            var city = document.getElementById("city").value;
            window.location.href = "/Admin/ViewPaySomeoneElseCard/Index?CountryCode=" + country + "&City=" + city;
        }


    </script>
}


