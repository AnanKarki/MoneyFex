@model List<FAXER.PORTAL.Areas.Admin.ViewModels.TransferOperationSummaryViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/New_Layout.cshtml";
}


<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header border-bottom">
                                    <h4 class="f-left f-left m-t-5 m-b-0">Operation Summary Online   </h4>
                                </div>
                                <div class="card-body">
                                    <div class="row m-t-20 m-b-20">
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">

                                                @Html.DropDownList("SendingCountry", (IEnumerable<SelectListItem>)ViewBag.Countries, "Select Sending Countries", new { @class = "js-example-data-array form-control form-control-round form-control-bold", id = "SendingCountry", onchange = "filter();" })

                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">

                                                @Html.DropDownList("ReceivingCountry", (IEnumerable<SelectListItem>)ViewBag.Countries, "Select Receiving Countries", new { @class = "js-example-data-array form-control form-control-round form-control-bold", id = "ReceivingCountry", onchange = "filter();" })


                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                <select class="form-control   form-control-round form-control-bold" id="TransferMethod" name="TransferMethod" onchange="filter();">
                                                    <option value="0">Select Transfer Method</option>
                                                    <option value="7">All</option>
                                                    <option value="1">Cash Pickup</option>
                                                    <option value="2">KiiPay Wallet</option>
                                                    <option value="3">Other Wallet</option>
                                                    <option value="4">Bank Deposit</option>
                                                    <option value="5">Bill Payment</option>
                                                    <option value="6">Service Payment</option>
                                                </select>
                                            </div>
                                        </div>
                                        <!--  -->
                                        <!--  -->
                                        <div class="col-xl-3 col-md-6">
                                            <div class="form-group">
                                                <input type="text" class=" form-control form-control-round form-control-bold" value="" placeholder="Select Year and Month" autocomplete="off" name="dates" id="dates">
                                            </div>
                                        </div>
                                        <!--  -->
                                    </div>
                                    <div class="row m-t-20 m-b-20">
                                        <div class="col-lg-12">
                                            <ul class="breadcrumb-title">
                                                <li class="breadcrumb-item">
                                                    <a href="#">United Kingdom</a>
                                                </li>
                                                <li class="breadcrumb-item">
                                                    <a href="#">Nigeria</a>
                                                </li>

                                                <li class="breadcrumb-item">
                                                    <a href="#">2020</a>
                                                </li>

                                                <li class="breadcrumb-item">
                                                    <a href="#">January</a>
                                                </li>
                                                <li class="breadcrumb-item">
                                                    <a href="#">Online</a>
                                                </li>
                                                <li class="breadcrumb-item">
                                                    <a href="#">Bank Deposit</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>



                                    <div class="clearfix">

                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap print">
                                            <thead>
                                                <tr>
                                                    <th>Sending Country</th>
                                                    <th>Receiving Country</th>
                                                    <th>Month</th>
                                                    <th>Number of Trans</th>
                                                    <th>Amount</th>
                                                    <th>Fees</th>
                                                    <th>Spread</th>
                                                    <th>Refund</th>
                                                    <th>No. of in Progress</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td rowspan="1"><i class="flag flag-icon flag-icon-@item.SendingCountryFlag"></i>@item.SendingCountry</td>
                                                        <td rowspan="1"><i class="flag flag-icon flag-icon-@item.ReceivingCountryFlag"></i> @item.ReceivingCountry</td>
                                                        <td>@item.Month</td>
                                                        <td>@item.NoOfTrans</td>
                                                        <td>@item.CountryCurrency @item.Amount</td>
                                                        <td>@item.CountryCurrency @item.Fees</td>
                                                        <td>@item.CountryCurrency @item.Spread</td>
                                                        <td>@item.Refund</td>
                                                        <td>@item.NoOfInProgress</td>
                                                    </tr>

                                                }

                                                <tr>
                                                    <td></td>
                                                    <td></td>
                                                    <td>February</td>
                                                    <td>500</td>
                                                    <td>GBP 30,000</td>
                                                    <td>GBP 30,000</td>
                                                    <td>GBP 30,000</td>
                                                    <td>0</td>
                                                    <td>0</td>
                                                </tr>

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th></th>
                                                    <th>Total</th>
                                                    <th>10,000</th>
                                                    <th>GBP 50,000</th>
                                                    <th>GBP 50,000</th>
                                                    <th>GBP 50,000</th>
                                                    <th>GBP 30,000</th>
                                                    <th>0</th>
                                                    <th>0</th>
                                                </tr>
                                            </tfoot>




                                        </table>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section scripts{
    <script type="text/javascript">

        function filter() {
            var sendingCountry = $("#SendingCountry").val();
            var receivingCountry = $("#ReceivingCountry").val();
            var transferMethod = $("#TransferMethod").val();
            var date = $("#dates").val();
            window.location.href = "/Admin/OnlineTransferOperationSummary/Index?SendingCountry=" + sendingCountry + "&ReceivingCountry=" + receivingCountry + "&transferMethod=" + transferMethod + "&Date=" + date;

        }


        $(".applyBtn").click(function () {
            filter();
        });
    </script>
}