@model List<FAXER.PORTAL.Areas.Admin.ViewModels.NonCardFaxingRefundRequestViewModel>
@{
    ViewBag.Title = "RefundsViewNonCardUserRefundRequest";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@*<h2>RefundsViewNonCardUserRefundRequest</h2>*@


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Admin View-Non Virtual Account Transfer Refund Request</h4>
            </div>
            <div class="col-lg-8 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="/Admin/AdminDashboard">Dashboard</a></li>
                    <li class="active">Admin View-Non Virtual Account Transfer Refund Request</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                @Html.DropDownList("Country", (IEnumerable<SelectListItem>)ViewBag.Countries, "Filter By Country", new { @class = "form-control", id = "Country", onchange = "Fliter();" })

            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                @Html.DropDownList("City", (IEnumerable<SelectListItem>)ViewBag.SCities, "Choose City", new { @class = "form-control", id = "city", onchange = "Fliter();" })
            </div>
        </div>
        <div class="clearfix"></div>


        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="white-box">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped csvprint  " cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th><strong>SN</strong></th>
                                    <th><strong>Sender's Name</strong></th>
                                    <th><strong>Address</strong></th>
                                    <th><strong>Country</strong></th>
                                    <th><strong>City</strong></th>
                                    <th><strong>Tel</strong></th>
                                    <th><strong>Email</strong></th>
                                    <th><strong>Amount Sent</strong></th>
                                    <th><strong>Fee</strong></th>
                                    <th><strong>MFCN</strong></th>
                                    <th><strong>Receiver's Name</strong></th>
                                    <th><strong>Sending Agent Name</strong></th>
                                    <th><strong>Sending Agent MFS Code</strong></th>
                                    <th><strong>Admin Refunder</strong></th>
                                    <th><strong>Agent Refunder</strong></th>
                                    <th><strong>Request Confirmed ?</strong></th>
                                    <th><strong>Refund Date</strong></th>
                                    <th><strong>Time</strong></th>
                                    <th><strong>Reason for Refund Request</strong></th>
                                    <th><strong>MFS Sent Receipt</strong></th>
                                    <th><strong>Refund Receipt</strong></th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.FaxerFirstName</td>
                                        <td>@item.FaxerAddress</td>
                                        <td>@item.FaxerCountry</td>
                                        <td>@item.FaxerCity</td>
                                        <td>@item.FaxerTelephone</td>
                                        <td>@item.FaxerEmail</td>
                                        <td>@item.FaxingAmount @item.FaxingCurrency</td>
                                        <td>@item.FaxingFee @item.FaxingCurrency</td>
                                        <td>@item.MFCNNumber</td>
                                        <td>@item.ReceiverFirstName</td>
                                        <td>@item.NameOfAgency</td>
                                        <td>@item.AgencyMFSCode</td>
                                        <td>@item.NameOfRefunder</td>
                                        <td>@item.NameoFAgentRefunder</td>
                                        <td>Yes</td>
                                        <td>@item.RefundedDate.ToString("dd/MM/yyy")</td>
                                        <td>@item.RefendedTime</td>
                                        <td>@item.RefundReason</td>
                                        <td><a href="@Url.Action("PrintMFSSentReceipt","RefundsViewNonCardUserRefundRequest", item)" target="_blank" class="btn btn-sm btn-warning">PDF Receipt</a></td>
                                        <td><a href="@Url.Action("PrintRefundReceipt","RefundsViewNonCardUserRefundRequest", item)" target="_blank" class="btn btn-sm btn-warning">PDF Receipt</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <div class="clearfix mt100"></div>
                    </div>

                    <br>
                    @*<div class="table-responsive">
                            <table class="table table-bordered table-striped csvprint  " cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <td>SN</td>
                                        <td>Time</td>
                                        <td>Reason for Refund Request</td>
                                        <td>MFS Sent Receipt</td>
                                        <td>Refund Receipt</td>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int j = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        j++;
                                        <tr>
                                            <td>@j</td>
                                            <td>@item.RefendedTime</td>
                                            <td>@item.RefundReason</td>
                                            <td><button class="btn btn-sm btn-warning">PDF Receipt</button></td>
                                            <td><button class="btn btn-sm btn-warning">PDF Receipt</button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>*@
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script type="text/javascript">

        function Fliter() {
            var country = document.getElementById("Country").value;
            var city = document.getElementById("city").value;
            window.location.href = "/Admin/RefundsViewNonCardUserRefundRequest/Index?CountryCode=" + country + "&City=" + city;
        }


    </script>
}