@model FAXER.PORTAL.Areas.Businesses.ViewModels.MyBusinessMoneyFaxCreditSheetViewModel
@{
    ViewBag.Title = "MyBusinessMoneyFaxCreditSheet";
    Layout = "~/Areas/Businesses/Views/Shared/_Business_Layout.cshtml";

    List<SelectListItem> yearLst = new List<SelectListItem>()
{
new SelectListItem(){Text="2017",Value="2017"},
new SelectListItem(){Text="2018",Value="2018"},
new SelectListItem(){Text="2019",Value="2019"},
new SelectListItem(){Text="2020",Value="2020"},
new SelectListItem(){Text="2021",Value="2021"},
new SelectListItem(){Text="2022",Value="2022"},
new SelectListItem(){Text="2023",Value="2023"},
new SelectListItem(){Text="2024",Value="2024"},
new SelectListItem(){Text="2025",Value="2025"},
new SelectListItem(){Text="2026",Value="2026"},
new SelectListItem(){Text="2027",Value="2027"},
new SelectListItem(){Text="2028",Value="2028"},
new SelectListItem(){Text="2029",Value="2029"},
new SelectListItem(){Text="2030",Value="2030"},
};
}


<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <h1>myBusiness MoneyFex Credit Sheet</h1>

            </div>

        </div>
    </div>


</div>
<!--  -->
<!--  -->
<div class="real_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row ">
                    
                </div>
                <br>

                <form>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>SN.</th>
                                    <th>Select Year</th>
                                    <th>Select Month</th>
                                    <th>Total Monthly Sales Count</th>

                                    <th>Total Monthly Credit (Amount)</th>
                                    <th>Total Yearly Credit (Amount)</th>

                                    <th>Current balance</th>



                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>
                                        @Html.DropDownListFor(model => model.Year, yearLst, "Select", new { @class = "form-control", @onChange = "getDetails();", @id = "yearParam" })
                                    </td>
                                    <td>
                                        @Html.EnumDropDownListFor(model => model.Month, new { @class = "form-control", @onChange = "getDetails();", @id = "monthParam" })
                                    </td>
                                    <td>@Model.TotalMonthlySalesCount</td>
                                    <td>@Model.CurrencySymbol @Model.TotalMonthlyCreditedAmount @Model.Currency</td>
                                    <td>@Model.CurrencySymbol @Model.TotalYearlyCreditedAmount @Model.Currency</td>
                                    <td>@Model.CurrencySymbol @Model.OutstandingCredit @Model.Currency</td>

                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <a href="@Url.Action("Index" , "BusinessHome")" class="btn btn-sm btn-danger"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                </form>



            </div>

        </div>
    </div>


</div>
<!--  -->

@section scripts{
    
    <script type="text/javascript">


        function getDetails() {
            var year = document.getElementById("yearParam").value;
            var monthId = document.getElementById("monthParam").value;
            window.location.href = "/Businesses/MyBusinessMoneyFaxCreditSheet/MyBusinessMoneyFaxCreditSheet?year=" + year + "&monthId=" + monthId;
        }
    </script>
    }
