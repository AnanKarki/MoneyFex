
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Businesses/Views/Shared/_Business_Layout.cshtml";
}

<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">

                <h1>Search MoneyFex Receiver Virtual Account </h1>

            </div>

        </div>
    </div>


</div>
<!--  -->
<!--  -->
<div class="real_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">


                <div class="form-group">
                    <input type="text" name="MFTCCardNumber" id="MFTCCardNumber" placeholder="Search MoneyFex Receiver Virtual Account No." class="form-control" value="@ViewBag.MFTCCardNumber">
                    @*@Html.ValidationMessage("NoCardFound", "", new { @class = "text-danger" })*@
                    @if (TempData["NoCardFound"] != null) {

                        <label style="color:red">@TempData["NoCardFound"]</label>
                    }
                </div>

            </div>

        </div>
    </div>


</div>
<!--  -->
<!--  -->
<div class="dynamic_footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">


                <a  class="fbtn btn-next" onclick="SearchCardUser()">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></a>



            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function SearchCardUser() {

        var CardNumber = $("#MFTCCardNumber").val();
        window.location.href = "/Businesses/MFTCCardPaymentByMerchant/SearchMFTCCardUser?MFTCCardNumber=" + CardNumber;
    }

</script>