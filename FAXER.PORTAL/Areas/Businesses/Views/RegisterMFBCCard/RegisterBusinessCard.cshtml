@model FAXER.PORTAL.Areas.Businesses.ViewModels.MFBCCardUserDetailsViewModel
@{
    ViewBag.Title = "RegisterBusinessCard";
    Layout = "~/Areas/Businesses/Views/Shared/_Business_Layout.cshtml";
}



<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">

                <h1>MoneyFex Business Card User Registration</h1>

            </div>

        </div>
    </div>


</div>
<!--  -->
<!--  -->
<form method="post">
    <div class="real_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class=" ">
                        <h3>Card User's Details</h3>
                        <hr>


                        <!--  -->
                        <div class="col-lg-5">
                            <label>First Name <span class="required">*</span></label>
                        </div>
                        @Html.HiddenFor(model => model.CardId, new { id = "CardId" })
                        <div class="col-lg-6 ">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Middle Name</label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">

                                @Html.TextBoxFor(model => model.MiddleName, new { @class = "form-control", @placeholder = "Middle Name" })
                                @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Last Name <span class="required">*</span></label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">

                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        <div class="col-lg-5">
                            <label>Gender <span class="required">*</span></label>
                        </div>

                        <div class="col-lg-3 ">
                            <div class="form-group">
                                @Html.EnumDropDownListFor(model => model.Gender, "Choose Gender", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <!--  -->
                        <!--  -->
                        @*<div class="col-lg-5">
                            <label>Date of Birth <span class="required">*</span></label>
                        </div>

                        <div class="col-lg-6 ">
                            <div class="form-group">


                                @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control", @placeholder = "Date of Birth", @type = "date" })
                                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                            </div>
                        </div>*@



                        <div class="col-lg-5 clearfix">
                            <label>Date of Birth  <span class="required">*</span></label>
                        </div>

                        <div class="col-lg-2 ">
                            <div class="form-group">

                                <input type="number" class="form-control day" placeholder="Day">



                            </div>
                        </div>

                        <div class="col-lg-2 ">
                            <div class="form-group">
                                <select class="form-control month" style="font-size: 11px;">
                                    <option selected>Month</option>
                                    <option value='1'>Janaury</option>
                                    <option value='2'>February</option>
                                    <option value='3'>March</option>
                                    <option value='4'>April</option>
                                    <option value='5'>May</option>
                                    <option value='6'>June</option>
                                    <option value='7'>July</option>
                                    <option value='8'>August</option>
                                    <option value='9'>September</option>
                                    <option value='10'>October</option>
                                    <option value='11'>November</option>
                                    <option value='12'>December</option>
                                </select>


                            </div>
                        </div>


                        <div class="col-lg-2">
                            <div class="form-group">
                                <input type="number" class="form-control year" placeholder="Year">


                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!--  -->

                        <div class="form-group ">
                            
                            @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control dateInput" , style="display:none"})
                            @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger col-lg-6 col-lg-offset-5 " })
                        </div>


                    </div>
                </div>

            </div>
        </div>


    </div>
    <!--  -->
    <!--  -->
    <div class="dynamic_footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <a href="@Url.Action("Index", "BusinessHome")" class="fbtn btn-back hidden-sm hidden-xs"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>

                    <button type="submit" class="fbtn btn-next" id="Next">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                    <br>
                    <a href="@Url.Action("Index", "BusinessHome")" class="fbtn btn-back hidden-lg hidden-md"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>






                </div>
            </div>
        </div>
    </div>

</form>

<!--  -->

@section scripts{
    
    <script type="text/javascript">
         var Card = "@Model.CardId" == 0;
        $('.real_form input').prop('readonly', !Card);
        $('.real_form select').prop('disabled', !Card);
        $('#Next').prop('disabled', !Card);

    </script>
    }