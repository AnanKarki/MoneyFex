
@{
    ViewBag.Title = "SecurityCode";
    Layout = "~/Areas/Businesses/Views/Shared/_Business_Layout.cshtml";
}


<!--  -->
<div class="dynamic_bg_form ">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">

                <h1>Password Reset</h1>

            </div>

        </div>
    </div>


</div>
<!--  -->
<!--  -->
<div class="real_form pattern1">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="login_signup">
                    <div class=" ">
                        <h4>To reset your password, you must enter the one time security code sent to your registered email address by the security team at MoneyFex</h4>

                    </div>
                    <hr>
                    <form method="post">

                        @if (TempData["InValid"] != null) {
                        <label style="color:red">@TempData["InValid"]</label>
                        }
                        <!--  -->


                        <div class="col-lg-12 ">
                            <div class="form-group">
                                <input type="text" name="Securitycode" class="form-control" placeholder="Enter One Security Code">

                            </div>
                        </div>

                        <!--  -->
                        <!--  -->

                        <div class="col-lg-12 ">
                            <button type="submit" class="btn btn-primary  btn-sm">Proceed to Password Reset  <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                        </div>
                        <!--  -->



                        <div class="clearfix"></div>
                    </form>

                </div>
            </div>

        </div>
    </div>


</div>
