@model FAXER.PORTAL.Areas.Businesses.ViewModels.BusinessOwnerInformationVm
@{
    ViewBag.Title = "BusinessContactDetails";
    Layout = "~/Areas/Businesses/Views/Shared/_Business_Layout.cshtml";
}
<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
