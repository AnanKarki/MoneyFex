@model FAXER.PORTAL.Areas.CardUsers.ViewModels.CardUser_MerchantInternationalPaymentTransactionSummaryViewModel
@{
    ViewBag.Title = "MerchantInternationalPaymentTransactionSummary";
    Layout = "~/Areas/CardUsers/Views/Shared/_CarUser_Layout.cshtml";

    string FaxingCurrency = FAXER.PORTAL.Common.CardUserSession.FaxingCurrency ?? "";
    string ReceivingCurrency = FAXER.PORTAL.Common.CardUserSession.ReceivingCurrency ?? "";
}



<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">

                <h1>Payment Summary</h1>

            </div>
        </div>
    </div>
</div>
<!--  -->
<!--  -->

<form method="post">
    <div class="real_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1">

                    <!--  -->
                    <div class="col-lg-6">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h2 class="panel-title text-center">Service Provider's Information</h2>
                            </div>
                            <div class="panel-body text-center">
                                <p><b>You are Paying To:</b></p>
                                <p>@Model.ReceiverBusinessname<br>Provider's Account No : @Model.ReceiverAccountNO</p>
                                <p>
                                    <a href="@Url.Action("SearchMerchantByAccountNo")" class="theme-color">Change Service Provider</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-6">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h2 class="panel-title text-center">Your Personal Information</h2>
                            </div>
                            <div class="panel-body text-center">
                                <p><b>Your Contact Information</b></p>
                                <p>
                                    @Model.CardUserName<br>@Model.CardUserPhoneNumber<br>
                                    @Model.CardUserEmail
                                </p>
                                <p> <b>Country of Operation</b><br>@Model.CardUserCountry</p>
                            </div>
                        </div>
                    </div>
                    <!--  -->
                    <div class="clearfix"></div>


                    <!--  -->
                    <div class="col-lg-6">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h2 class="panel-title text-center">Your Payment Information</h2>
                            </div>
                            <div class="panel-body text-center">
                                <p><b>Your Card Information</b></p>
                                <p><b>@Model.SenderMFBCCardNumber</b> </p>
                                <p>
                                    <b>Your home Billing Address</b><br>@Model.streetAddress
                                    @Model.City
                                    @Model.PostalCode
                                    @Model.State
                                </p>
                            </div>
                        </div>
                    </div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-6">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h2 class="panel-title text-center"> Your Transaction Details</h2>
                            </div>
                            <div class="panel-body text-center">
                                <p>
                                    Amount Paid: @Model.SentAmount @FaxingCurrency<br>
                                    Fees : @Model.Fees  @FaxingCurrency<br>
                                    Total Cost : @Model.TotalAmount @FaxingCurrency<br>
                                    Total Receive Amount : @Model.TotalReceiveAmount @ReceivingCurrency<br>
                                    Payment Reference : @Model.PaymentReference
                                </p>


                                <a href="@Url.Action("PayingAmount")" title="">Change Transaction Amount</a>

                            </div>
                        </div>
                    </div>
                    <!--  -->







                </div>
            </div>
        </div>
    </div>
    <!--  -->
    <!--  -->
    <div class="dynamic_footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1">
                    <a href="@Url.Action("PaymentDetials")" class="fbtn btn-back hidden-xs hidden-sm "><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                    <button type="submit" class="fbtn btn-next">Pay Now <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                    <br />
                    <a href="@Url.Action("PaymentDetials")" class="fbtn btn-back hidden-lg hidden-md"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>


                </div>
            </div>
        </div>
    </div>
    <!--  -->
</form>