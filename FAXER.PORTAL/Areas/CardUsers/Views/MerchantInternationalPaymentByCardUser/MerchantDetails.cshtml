@model FAXER.PORTAL.Areas.CardUsers.ViewModels.MerchantDetailsViewModel_CardUserViewModel
@{
    ViewBag.Title = "MerchantDetials";
    Layout = "~/Areas/CardUsers/Views/Shared/_CarUser_Layout.cshtml";
}

<!--  -->
<div class="dynamic_bg_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">

                <h1>Pay for goods &  services</h1>

            </div>
        </div>
    </div>
</div>
<!--  -->
<!--  -->
<form method="post">
    <div class="real_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h4>Service Provider's Details</h4>
                    <hr>

                    <!--  -->
                    <div class="col-lg-3">
                        <label>Name of Service Provider </label>
                    </div>
                    @Html.HiddenFor(model => model.KiiPayBusinessInformationId)
                    @Html.HiddenFor(model => model.MFBCCardID)
                    <div class="col-lg-4 ">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.MerchantName, new { @class = "form-control", @readonly = "readonly" })

                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-3">
                        <label>MoneyFex Account Number </label>
                    </div>

                    <div class="col-lg-4 ">
                        <div class="form-group">

                            @Html.TextBoxFor(model => model.MerchantAccountNo, new { @class = "form-control", @readonly = "readonly" })

                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-3">
                        <label>Registered City </label>
                    </div>

                    <div class="col-lg-4 ">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.City, new { @class = "form-control", @readonly = "readonly" })


                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-3">
                        <label>Registered Country </label>
                    </div>

                    <div class="col-lg-4 ">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Country, new { @class = "form-control", @readonly = "readonly" })

                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--  -->
                    <!--  -->
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>@Html.CheckBoxFor(model => model.confirm) I confirm that this is the Service Provider i wish to make a payment to and i have contacted the provider and agreed on the exact amount</label>
                            @Html.ValidationMessageFor(model => model.confirm, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <!--  -->

                </div>


                <div class="col-lg-4 ">
                    <div class="cardbody">

                        <h3 class="text-primary  ">@Model.MerchantName</h3>
                        <i class="fa fa-map-mark"></i>@Model.Address, @Model.City, @Model.Country
                        <br>
                        <i class="fa fa-phone"></i>  @Model.CountryPhoneCode-@Model.PhoneNo<br>
                        <i class="fa fa-envelope"></i>  <a href="mailto:@Model.Email">@Model.Email</a><br>
                        <i class="fa fa-globe"></i> <a href="@Model.Website"> @Model.Website</a>
                    </div>
                </div>
                @Html.HiddenFor(x=>x.Address)
                @Html.HiddenFor(x=>x.City)
                @Html.HiddenFor(x=>x.Country)
                @Html.HiddenFor(x=>x.CountryPhoneCode)
                @Html.HiddenFor(x=>x.PhoneNo)
                @Html.HiddenFor(x=>x.Email)
                @Html.HiddenFor(x=>x.Website)
            </div>
        </div>
    </div>
    <!--  -->
    <!--  -->
    <div class="dynamic_footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1">

                    <a href="@FAXER.PORTAL.Common.BusinessSession.BackButtonURL" class="fbtn btn-back hidden-xs hidden-sm "><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                    <button type="submit" class="fbtn btn-next">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></button>
                    <br />
                    <a href="@FAXER.PORTAL.Common.BusinessSession.BackButtonURL" class="fbtn btn-back hidden-lg hidden-md"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>



                </div>
            </div>
        </div>
    </div>
</form>
